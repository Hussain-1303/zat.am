   "a": "",
   "t": ""
 },
 {
   "d": "आढ्योऽभिजनवानस्मि कोऽन्योऽस्ति सदृशो मया ।\nयक्ष्ये दास्यामि मोदिष्य इत्यज्ञानविमोहिताः ॥ १६.१५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अनेकचित्तविभ्रान्ता मोहजालसमावृताः ।\nप्रसक्ताः कामभोगेषु पतन्ति नरकेऽशुचौ ॥ १६.१६ ॥",
   "a": "अद्य इदं मया लब्धम्, इमं मनोरथं प्राप्स्ये, इदं धनम् अस्ति, इदम् अपि मे पुनः भविष्यति, असौ शत्रुः मया हतः, अपरान् अपि हनिष्ये । अहम् ईश्वरः, अहं भोगी, अहं सिद्धः बलवान् सुखी । आढ्यः अभिजनवान् अस्मि, मया सदृशः अन्यः कः अस्ति ? यक्ष्ये, दास्यामि, मोदिष्ये इति अज्ञानविमोहिताः अनेकचित्तविभ्रान्ताः मोहजालसमावृताः कामभोगेषु प्रसक्ताः अशुचौ नरके पतन्ति । (१६.१३ + १६.१४ +१६.१५ +१६.१६)",
   "t": ""
 },
 {
   "d": "आत्मसंभाविताः स्तब्धा धनमानमदान्विताः ।\nयजन्ते नामयज्ञैस्ते दम्भेनाविधिपूर्वकम् ॥ १६.१७ ॥",
   "a": "आत्मसम्भाविताः स्तब्धा धनमानमदान्विताः ते दम्भेन अविधिपूर्वकं नामयज्ञैः यजन्ते । अहङ्कारं बलं दर्पं कामं क्रोधं च संश्रिताः आत्मपरदेहेषु मां प्रद्विषन्तः अभ्यसूयकाः भवन्ति । (१६.१७ + १६.१८)",
   "t": "ते हि आत्मानं पूज्यत्वेन प्रचारयन्ति, अविनीताः भवन्ति, धनमानपदैः उपेताः भवन्ति, तादृशाः ते सोमयाजिप्रभृतिभिः शब्दैः आत्मनः व्यपदेशम् इच्छन्तः अश्रद्धया अशास्त्रीयक्रमेण च कथञ्चित् यागं कुर्वन्ति, तेषु अहङ्कारबलदर्पादयः निवासं कुर्वन्ति । एतादृशाः ते असूयापराः सर्वेषु शरीरेषु अन्तर्यामितया वर्तमानं मां खेदयन्ति । (१६.१७ + १६.१८)"
 },
 {
   "d": "अहंकारं बलं दर्पं कामं क्रोधं च संश्रिताः ।\nमामात्मपरदेहेषु प्रद्विषन्तोऽभ्यसूयकाः ॥ १६.१८ ॥",
   "a": "आत्मसम्भाविताः स्तब्धा धनमानमदान्विताः ते दम्भेन अविधिपूर्वकं नामयज्ञैः यजन्ते । अहङ्कारं बलं दर्पं कामं क्रोधं च संश्रिताः आत्मपरदेहेषु मां प्रद्विषन्तः अभ्यसूयकाः भवन्ति । (१६.१७ + १६.१८)",
   "t": "ते हि आत्मानं पूज्यत्वेन प्रचारयन्ति, अविनीताः भवन्ति, धनमानपदैः उपेताः भवन्ति, तादृशाः ते सोमयाजिप्रभृतिभिः शब्दैः आत्मनः व्यपदेशम् इच्छन्तः अश्रद्धया अशास्त्रीयक्रमेण च कथञ्चित् यागं कुर्वन्ति, तेषु अहङ्कारबलदर्पादयः निवासं कुर्वन्ति । एतादृशाः ते असूयापराः सर्वेषु शरीरेषु अन्तर्यामितया वर्तमानं मां खेदयन्ति । (१६.१७ + १६.१८)"
 },
 {
   "d": "तानहं द्विषतः क्रुरान्संसारेषु नराधमान् ।\nक्षिपाम्यजस्रमशुभानासुरीष्वेव योनिषु ॥ १६.१९ ॥",
   "a": "द्विषतः क्रूरान् अशुभान् तान् नराधमान् संसारेषु आसुरीषु योनिषु एव अजस्रम् अहं क्षिपामि ।",
   "t": "ये मां द्विषन्ति, क्रूराः अशुभाश्च सन्ति आसुरगुणसम्पन्नाः तादृशान् नरापसदान् अहं सर्वदा संसारे एव पातयामि, तत्रापि आसुस्वभावेषु एव जन्म कल्पयामि ।"
 },
 {
   "d": "आसुरीं योनिमापन्ना मूढा जन्मनि जन्मनि ।\nमामप्राप्यैव कौन्तेय ततो यान्त्यधमां गतिम् ॥ १६.२० ॥",
   "a": "कौन्तेय ! आसुरीं योनिम् आपन्नाः मूढाः माम् अप्राप्य एव ततः जन्मनि जन्मनि अधमां गतं यान्ति ।",
   "t": "अर्जुन ! तादृशानां नरापसदानां राक्षसानां स्वभावं प्राप्तवतां न कदापि मम प्राप्तिः भवति । ते हि जन्मनि जन्मनि क्रमेण नीचामेव गतं प्राप्नुवन्ति ।"
 },
 {
   "d": "त्रिविधं नरकस्येदं द्वारं नाशनमात्मनः ।\nकामः क्रोधस्तथा लोभस्तस्मादेतत्त्रयं त्यजेत् ॥ १६.२१ ॥",
   "a": "कामः क्रोधः तथा लोपः इदम् आत्मनः नाशनं नरकस्य त्रिविधं द्वारम् । तस्मात् एतत् त्रयं त्यजेत् ।",
   "t": "वाञ्छा, कोपः तथा तृष्णा एतत् आत्मविनाशकरं त्रिप्रकारं नरकलोकस्य प्रतिहारः । तस्मात् इदं त्रयं वर्जेयम् ।"
 },
 {
   "d": "एतैर्विमुक्तः कौन्तेय तमोद्वारैस्त्रिभिर्नरः ।\nआचरत्यात्मनः श्रेयस्ततो याति परां गतिम् ॥ १६.२२ ॥",
   "a": "कौन्तेय ! तमोद्वारैः एतैः त्रिभिः विमुक्तः नरः आत्मनः श्रेयः आचरति । ततः परां गतिं याति ।",
   "t": "अर्जुन ! नरकद्वारैः एतैः कामादिभिः त्रिभिः विवर्जितः मानवः स्वस्य हितं यदि करोति तर्हि सः अत्यन्तप्रशंसनीयम् उत्कृष्टं मोक्षम् अधिगच्छन्ति ।"
 },
 {
   "d": "यः शास्त्रविधिमुत्सृज्य वर्तते कामकारतः ।\nन स सिद्धिमवाप्नोति न सुखं न परां गतिम् ॥ १६.२३ ॥",
   "a": "यः शास्त्रविधिम् उत्सृज्य कामकारतः वर्तते सः सिद्धिं न अवाप्नोति, न सुखम्, न परां गतिम् ।",
   "t": "यः खलु पुरुषः शास्त्रसम्मतं मार्गं विहाय स्वेच्छया सन्ततम् अमार्गेणैव सञ्चरति तस्य कार्यसिद्धिः न भवति, न सुखम्, नापि मोक्षः । सः अत्रैव संसारे चिरं पीडाम् अनुभवन् तिष्ठति ।"
 },
 {
   "d": "तस्माच्छास्त्रं प्रमाणं ते कार्याकार्यव्यवस्थितौ ।\nज्ञात्वा शास्त्रविधानोक्तं कर्म कर्तुमिहार्हसि ॥ १६.२४ ॥",
   "a": "तस्मात् कार्याकार्यव्वस्थितौ ते शास्त्रं प्रमाणम् । शास्त्रविधानोक्तं कर्म ज्ञात्वा इह कर्तुम् अर्हसि ।",
   "t": "तस्मात् यदा तव कार्ये अकार्ये वा विषये सन्देहो भवति तदा तव शास्त्रं प्रमाणम् । तत्र स्थितेन वाक्येन यत् प्रतिपाद्यते तदेव कार्यं कर्तुमर्हसि ।"
 },
 {
   "d": "अर्जुन उवाच ।\nये शास्त्रविधिमुत्सृज्य यजन्ते श्रद्धयान्विताः\nतेषां निष्ठा तु का कृष्ण सत्त्वमाहो रजस्तमः ॥ १७.१ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "श्रीभगवान् उवाच ।\nत्रिविधा भवति श्रद्धा देहिनां सा स्वभावजा\nसात्त्विकी राजसी चैव तामसी चेति तां शृणु ॥ १७.२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "सत्त्वानुरूपा सर्वस्य श्रद्धा भवति भारत ।\nश्रद्धामयोऽयं पुरुषो यो यच्छ्रद्धः स एव सः ॥ १७.३ ॥",
   "a": "भारत ! सर्वस्य सत्त्वानुरूपा श्रद्धा भवति । अयं पुरुषः श्रद्धामयः । यः यच्छ्रद्धः सः सः एव ।",
   "t": "सर्वस्यापि अन्तःकरणानुगुणा श्रद्धा भवति । यस्मिन् श्रद्धा सः श्रद्धामयः इत्युच्यते । सा च श्रद्धा क्वचित् सत्त्वगुणप्रधाना, क्वचित् रजोगुणप्रधाना क्वचिच्च तमोगुणप्रधाना चेति त्रिविधा भवति । यः यादृशः श्रद्धया विशिष्टः सः तादृशश्रद्धः इति निर्णयः ।"
 },
 {
   "d": "यजन्ते सात्त्विका देवान्यक्षरक्षांसि राजसाः ।\nप्रेतान्भूतगणांश्चान्ये यजन्ते तामसा जनाः ॥ १७.४ ॥",
   "a": "सात्त्विकाः देवान् यजन्ते, राजसाः यक्षरक्षांसि, अन्ये तामसाः जनाः प्रेतान् भूतगणान् च यजन्ते ।",
   "t": "तत्र येषु सत्त्वं वर्तते ते देवान् पूजयन्ति । येषु रजः ते यक्षान् राक्षसान् च पूजयन्ति । येषु पुनः तमः ते प्रेतान् भूतान् च पूजयन्ति ।"
 },
 {
   "d": "अशास्त्रविहितं घोरं तप्यन्ते ये तपो जनाः ।\nदम्भाहंकारसंयुक्ताः कामरागबलान्विताः ॥ १७.५ ॥",
   "a": "दम्भाहङ्कारसंयुक्ताः कामरागबलान्विताः अचेतसः शरीरस्थं भूतग्रमम् अन्तःशरीरस्थं मां च एव कर्शयन्तः ये जनाः अशास्त्रविहितं घोरं तपः तप्यन्ते तान् आसुरनिश्चयान् विद्धि । (१७.५ + १७.६)",
   "t": "येषु पुनः धार्मिकतया आत्मनः ख्यापनम्, अहङ्कारः, विषयाभिलाषः, विषयाभिनिवेशः, आग्रहः इत्यादयः गुणाः सन्ति ते अविवेकिनः स्वशरीरे वर्तमानं पृथिव्यादिभूतसमूहं मां च कृशीकुर्वन्तः अशास्त्रीयं घोरं तपः कुर्वन्ति । तादृशाः उग्रकर्माणः इति ज्ञातव्यम् । (कामः - विषयेषु अभिलाषः, रागः - तेषु अभिनिवेशः ।) (१७.५ + १७.६)"
 },
 {
   "d": "कर्षयन्तः शरीरस्थं भूतग्राममचेतसः ।\nमां चैवान्तःशरीरस्थं तान्विद्ध्यासुरनिश्चयान् ॥ १७.६ ॥",
   "a": "दम्भाहङ्कारसंयुक्ताः कामरागबलान्विताः अचेतसः शरीरस्थं भूतग्रमम् अन्तःशरीरस्थं मां च एव कर्शयन्तः ये जनाः अशास्त्रविहितं घोरं तपः तप्यन्ते तान् आसुरनिश्चयान् विद्धि । (१७.५ + १७.६)",
   "t": "येषु पुनः धार्मिकतया आत्मनः ख्यापनम्, अहङ्कारः, विषयाभिलाषः, विषयाभिनिवेशः, आग्रहः इत्यादयः गुणाः सन्ति ते अविवेकिनः स्वशरीरे वर्तमानं पृथिव्यादिभूतसमूहं मां च कृशीकुर्वन्तः अशास्त्रीयं घोरं तपः कुर्वन्ति । तादृशाः उग्रकर्माणः इति ज्ञातव्यम् । (कामः - विषयेषु अभिलाषः, रागः - तेषु अभिनिवेशः ।) (१७.५ + १७.६)"
 },
 {
   "d": "आहारस्त्वपि सर्वस्य त्रिविधो भवति प्रियः ।\nयज्ञस्तपस्तथा दानं तेषां भेदमिमं शृणु ॥ १७.७ ॥",
   "a": "आहारः तु अपि सर्वस्य त्रिविधः प्रियः भवति तथा यज्ञः तपः दानम् । तेषाम् इमं भेदं शृणु ।",
   "t": "सर्वेषां यत् प्रियं भोज्यं तदपि त्रिप्रकारकं भवति, तथा यागः तपः वितरणं च त्रिविधं भवति इमं विभागं शृणु ।"
 },
 {
   "d": "आयुःसत्त्वबलारोग्यसुखप्रीतिविवर्धनाः ।\nरस्याः स्निग्धाः स्थिरा हृद्या आहाराः सात्त्विकप्रियाः ॥ १७.८ ॥",
   "a": "आयुःसत्त्वबलारोग्यसुखप्रीतिविवर्धनाः रस्याः स्निग्धाः हृद्याः आहाराः सात्त्विकप्रियाः ।",
   "t": "तत्र आयुष्यम्, उत्साहः, शक्तिः, आरोग्यं, चित्तप्रसादः, प्रीतिश्चेति एतेषां गुणानां विवर्धकाः, आस्वाद्याः, स्नेहवन्तः, चिरस्थायिनः, रमणीयाश्च ये आहाराः सन्ति ते सात्त्विकानां प्रियाः भवन्ति । "
 },
 {
   "d": "कट्वम्ललवणात्युष्णतीक्ष्णरूक्षविदाहिनः ।\nआहारा राजसस्येष्टा दुःखशोकामयप्रदाः ॥ १७.९ ॥",
   "a": "कट्वम्ललवणात्युष्णतीक्ष्णरूक्षविदाहिनः दुःखशोकामयप्रदाः आहारा राजसस्य इष्टाः ।",
   "t": "ये पुनः आहाराः अतिकटवः, अत्यम्लाः, अतिलवणाः, अत्युष्णाः, तीक्ष्णाः, रूक्षाः, विदाहिनश्च ते दुःखम् अनारोग्यं च जनयन्ति । तादृशाः आहाराः राजसानां प्रियाः भवन्ति । (दुःखं तात्कालिकी पीडा, शोकः पश्चाद्भावी दौर्मनस्यम् )"
 },
 {
   "d": "यातयामं गतरसं पूति पर्युषितं च यत् ।\nउच्छिष्टमपि चामेध्यं भोजनं तामसप्रियम् ॥ १७.१० ॥",
   "a": "यातयामं गतरसं पर्युषितं च उच्छिष्टम् अपि च अमेध्यं च यत् भोजनं तत् तामसप्रियम् ।",
   "t": "ये पुनः आहाराः यामात्मकः कालः यस्य व्यतीतः तादृशाः, अतिपक्वाः, दुर्गन्धविशिष्टाः, दिनान्तरे पक्वाः, भुक्तावशिष्टाः अभक्षणीयाश्च सन्ति ते तामसानां प्रियाः भवन्ति ।"
 },
 {
   "d": "अफलाकाङ्क्षिभिर्यज्ञो विधिदृष्टो य इज्यते ।\nयष्टव्यमेवेति मनः समाधाय स सात्त्विकः ॥ १७.११ ॥",
   "a": "अफलाकाङ्क्षाभिः यष्टव्यम् एव इति मनः समाधाय विधीदृष्टः यः यज्ञः इज्यते सः सात्त्विकः ।",
   "t": "फलम् अनपेक्ष्य यज्ञः कर्तव्यः इति दृढं सङ्कल्प्य एकाग्रेण मनसा यथाशास्त्रं यः यज्ञः क्रियते सः सात्त्विकः इत्युच्यते ।"
 },
 {
   "d": "अभिसंधाय तु फलं दम्भार्थमपि चैव यत् ।\nइज्यते भरतश्रेष्ठ तं यज्ञं विद्धि राजसम् ॥ १७.१२ ॥",
   "a": "भरतश्रेष्ठ ! फलं तु अभिसन्धाय दम्भार्थम् अपि च एव यत् इज्यते तं यज्ञं राजसं विद्धि ।",
   "t": "अर्जुन ! फलम् अपेक्ष्य धार्मिकतया आत्मानं ख्यापयितुं यः यज्ञः क्रियते सः राजसः इति जानीहि ।"
 },
 {
   "d": "विधिहीनमसृष्टान्नं मन्त्रहीनमदक्षिणम् ।\nश्रद्धाविरहितं यज्ञं तामसं परिचक्षते ॥ १७.१३ ॥",
   "a": "विधिहीनम् असृष्टान्नं मन्त्रहीनम् अदक्षिणं श्रद्धाविरहितं यज्ञं तामसं परिचक्षते ।",
   "t": "यः यज्ञः शास्त्रसम्मतो न विद्यते, यत्र अन्नं परेभ्यः न दीयते, यत्र स्वरादिशुद्धः मन्त्रः नास्ति, यत्र दक्षिणा अपि नास्ति, यश्च अश्रद्धया क्रिया सः तामसः इति कथ्यते ।"
 },
 {
   "d": "देवद्विजगुरुप्राज्ञपूजनं शौचमार्जवम् ।\nब्रह्मचर्यमहिंसा च शारीरं तप उच्यते ॥ १७.१४ ॥",
   "a": "देवद्विजगुरुप्राज्ञपूजनं शौचम् आर्जवं ब्रह्मचर्यम् अहिंसा च शारीरं तपः उच्यते ।",
   "t": "देवस्य द्विजस्य आचार्यस्य पण्डितस्य च अर्चनम्, शुद्धता, आर्जवम्, ब्रह्मचर्यम्, अहिंसा च शारीरं तपः इच्युच्यते ।"
 },
 {
   "d": "अनुद्वेगकरं वाक्यं सत्यं प्रियहितं च यत् ।\nस्वाध्यायाभ्यसनं चैव वाङ्मयं तप उच्यते ॥ १७.१५ ॥",
   "a": "अनुद्वेगकरं सत्यं प्रियहितं च यत् वाक्यं स्वाध्यायभ्यसनं च एव वाङ्मयं तपः उच्यते ।",
   "t": "अक्षोभकरं यथार्थम् इष्टं हितकरं च यत् वचनम्, देवाभ्यासः तथा वाङ्मयं तपः उच्यते ।"
 },
 {
   "d": "मनः प्रसादः सौम्यत्वं मौनमात्मविनिग्रहः ।\nभावसंशुद्धिरित्येतत्तपो मानसमुच्यते ॥ १७.१६ ॥",
   "a": "मनःप्रसादः सौम्यत्वं मौनम् आत्मविनिग्रहः भावसंशुद्धिः इति एतत् मानसं तपः उच्यते ।",
   "t": "चित्तशान्तिः सौमनस्यं वाक्संयमः मनोनिरोधः भावसंशुद्धिः च इति इदम् करणसम्बन्धि तपः कथ्यते ।"
 },
 {
   "d": "श्रद्धया परया तप्तं तपस्तत्त्रिविधं नरैः ।\nअफलाकाङ्क्षिभिर्युक्तैः सात्त्विकं परिचक्षते ॥ १७.१७ ॥",
   "a": "परया श्रद्धया तप्तं तत् तपः त्रिविधं भवति । अफलाकङ्क्षिभिः युक्तैः नरैः तप्तं तपः सात्त्विकं परिचक्षते ।",
   "t": "गाढश्रद्धया आचरितं तपः त्रिप्रकारं भवति । फलम् अनपेक्ष्य एकाग्रेण मनसा आचरितं तपः सात्त्विकं वदन्ति ।"
 },
 {
   "d": "सत्कारमानपूजार्थं तपो दम्भेन चैव यत् ।\nक्रियते तदिह प्रोक्तं राजसं चलमध्रुवम् ॥ १७.१८ ॥",
   "a": "सत्कारमानपूजार्थं दम्भेन च एव यत् तपः क्रियते तत् इह राजसं चलम् अध्रुवं प्रोक्तम् ।",
   "t": "स्तुतिं बहुमानम् अर्चनं च प्राप्तुं धार्मिकतया आत्मानं ख्यापयितुं च यत् तपः क्रियते तत् राजसम् उदाहृतम् । तच्च तपः अत्रैव लोके फलदायकं न परलोके इति चलम्, फलं नियमेन न जनयति इति अध्रुवं च ।"
 },
 {
   "d": "मूढग्राहेणात्मनो यत्पीडया क्रियते तपः ।\nपरस्योत्सादनार्थं वा तत्तामसमुदाहृतम् ॥ १७.१९ ॥",
   "a": "मूढग्राहेण आत्मनः पीडया परस्य उत्सादनार्थं वा यत् तपः क्रियते तत् तामसम् उदाहृतम् ।",
   "t": "अविवेककृतेन दुराग्रहेण, शरीरायासेन, शत्रोः विनाशार्थं च यत् तपः क्रियते तत् तामसम् इत्यभिहितम् ।"
 },
 {
   "d": "दातव्यमिति यद्दानं दीयतेऽनुपकारिणे ।\nदेशे काले च पात्रे च तद्दानं सात्त्विकं स्मृतम् ॥ १७.२० ॥",
   "a": "देशे काले च पात्रे च दातव्यम् इति अनुपकारिणे यत् दानं दीयते तत् दानं सात्त्विकं स्मृतम् ।",
   "t": "योग्ये प्रदेशे योग्ये च काले उपकारम् अकृतवते च शमादिगुणसम्पन्नाय पुरुषाय दातव्यम् इति बुद्ध्या यत् दानं क्रियते तत् सात्त्विकम् इच्युच्यते ।"
 },
 {
   "d": "यत्तु प्रत्युपकारार्थं फलमुद्दिश्य वा पुनः ।\nदीयते च परिक्लिष्टं तद्दानं राजसं स्मृतम् ॥ १७.२१ ॥",
   "a": "यत् तु प्रत्युपकारार्थं फलम् उद्दिश्य वा पुनः परिक्लिष्टं च दीयते तत् दानं राजसं स्मृतम् ।",
   "t": "अयं मे काले प्रत्युपकारं करिष्यति इत्यभिप्रायेण, फलापेक्षया, सन्तापसहिततया वा यत् दानं क्रियते तत् राजसम् इति आख्यायते ।"
 },
 {
   "d": "अदेशकाले यद्दानमपात्रेभ्यश्च दीयते ।\nअसत्कृतमवज्ञातं तत्तामसमुदाहृतम् ॥ १७.२२ ॥",
   "a": "अदेशकाले असत्कृतम् अवज्ञातं च अपात्रेभ्यः यत् दानं दीयते तत् तामसम् उदाहृतम् ।",
   "t": "अयोग्ये देशे काले च शमविद्यादिगुणरहिताय अनादरेन तिरस्कारेण च यत् दानं क्रियते तत् तामसमिति भण्यते ।"
 },
 {
   "d": "ॐतत्सदिति निर्देशो ब्रह्मणस्त्रिविधः स्मृतः ।\nब्राह्मणास्तेन वेदाश्च यज्ञाश्च विहिताः पुरा ॥ १७.२३ ॥",
   "a": "ॐ तत् सत् इति त्रिविधः निर्देशः ब्रह्मणः स्मृतः । तेन ब्राह्मणाः देवाः च यज्ञाः च पुरा विहिताः ।",
   "t": "ॐ तत् सत् इति त्रिभिः शब्दैः ब्रह्मणः निर्देशः क्रियते । तेन च ब्रह्मणा ब्राह्मणाः देवाः यज्ञाः च पूर्वं निर्मिताः ।"
 },
 {
   "d": "तस्माद ॐ द्दत्युदाहृत्य यज्ञदानतपःक्रियाः ।\nप्रवर्तन्ते विधानोक्ताः सततं ब्रह्मवादिनाम् ॥ १७.२४ ॥",
   "a": "तस्मात् ब्रह्मवादिनां विधानोक्ताः यज्ञदानतपःक्रियाः ओम् इति उदाहृत्य सततं प्रवर्तन्ते ।",
   "t": "तस्मात् ब्रह्मविदां शास्त्रविहिताः यज्ञदानतपोरूपाः क्रियाः ओम् इति शब्देनैव आरब्धाः भवन्ति ।"
 },
 {
   "d": "तदित्यनभिसन्धाय फलं यज्ञतपःक्रियाः ।\nदानक्रियाश्च विविधाः क्रियन्ते मोक्षकाङ्क्षिभिः ॥ १७.२५ ॥",
   "a": "मोक्षकाङ्क्षिभिः तत् इति फलम् अनभिसन्धाय विविधाः यज्ञतपःक्रियाः दानक्रियाः च क्रियन्ते ।",
   "t": "ये मोक्षम् इच्छण्ति ते तत् इटि ब्रह्मणः तदिति शब्दम् उच्चार्य फलनिरपेक्षतया नानाविधं यज्ञं तपः दानं च कुर्वन्ति ।"
 },
 {
   "d": "सद्भावे साधुभावे च सदित्येतत्प्रयुज्यते ।\nप्रशस्ते कर्मणि तथा सच्छब्दः पार्थ युज्यते ॥ १७.२६ ॥",
   "a": "पार्थ ! सद्भावे साधुभावे च सत् इति एतत् प्रयुज्यते तता प्रशस्ते कर्मणि सत् शब्दः युज्यते ।",
   "t": "अस्ति इति, श्रेष्ठम् इति च अर्थे प्रतिपादनीये सत् इति शब्दः प्रयुज्यते पण्डितैः । तस्मात् प्रशस्ते विवाहादौ कर्मणि ’सत् इदं कर्म’ इति ’सत्’ शब्दस्य प्रयोगः सुतरां सङ्गच्छते ।"
 },
 {
   "d": "यज्ञे तपसि दाने च स्थितिः सदिति चोच्यते ।\nकर्म चैव तदर्थीयं सदित्येवाभिधीयते ॥ १७.२७ ॥",
   "a": "यज्ञे तपसि दाने च स्थितिः सत् इति च उच्यते । तदर्थीयं कर्म च एव सत् इति एव अभिधीयते ।",
   "t": "यज्ञाय तपसे दानाय च या स्थितिः क्रियते सापि सत् इति कथ्यते । तथा तेषां यज्ञादीनां यद् अनुकूलं कर्म वर्तते तदपि सत् इति शब्देनैव उच्यते ।"
 },
 {
   "d": "अश्रद्धया हुतं दत्तं तपस्तप्तं कृतं च यत् ।\nअसदित्युच्यते पार्थ न च तत्प्रेत्य नो इह ॥ १७.२८ ॥",
   "a": "पार्थ ! अश्रद्धया हुतं दत्तं तपः तप्तं कृतं च यत् असत् इति उच्यते तत् प्रेत्य न इह नौ ।",
   "t": "अश्रद्धया यत् हुतं दत्तं तप्तं च भवति, यच्च अन्यत् कर्म आचरितं तत् सर्वम् असत् इत्युच्यते । न तत् इहलोके फलं ददाति, नापि परलोके । तस्मात् असत् इति व्यपदेशः अर्थवान् ।"
 },
 {
   "d": "अर्जुन उवाच ।\nसंन्यासस्य महाबाहो तत्त्वमिच्छामि वेदितुम्\nत्यागस्य च हृषीकेश पृथक्केशिनिषूदन ॥ १८.१ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "श्रीभगवान् उवाच ।\nकाम्यानां कर्मणां न्यासं संन्यासं कवयो विदुः\nसर्वकर्मफलत्यागं प्राहुस्त्यागं विचक्षणाः ॥ १८.२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "त्याज्यं दोषवदित्येके कर्म प्राहुर्मनीषिणः ।\nयज्ञदानतपःकर्म न त्याज्यमिति चापरे ॥ १८.३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "निश्चयं शृणु मे तत्र त्यागे भरतसत्तम ।\nत्यागो हि पुरुषव्याघ्र त्रिविधः संप्रकीर्तितः ॥ १८.४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यज्ञदानतपःकर्म न त्याज्यं कार्यमेव तत् ।\nयज्ञो दानं तपश्चैव पावनानि मनीषिणाम् ॥ १८.५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "एतान्यपि तु कर्माणि सङ्गं त्यक्त्वा फलानि च ।\nकर्तव्यानीति मे पार्थ निश्चितं मतमुत्तमम् ॥ १८.६ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "नियतस्य तु संन्यासः कर्मणो नोपपद्यते ।\nमोहात्तस्य परित्यागस्तामसः परिकीर्तितः ॥ १८.७ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "दुःखमित्येव यत्कर्म कायक्लेशभयात्त्यजेत् ।\nस कृत्वा राजसं त्यागं नैव त्यागफलं लभेत् ॥ १८.८ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "कार्यमित्येव यत्कर्म नियतं क्रियतेऽर्जुन ।\nसङ्गं त्यक्त्वा फलं चैव स त्यागः सात्त्विको मतः ॥ १८.९ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "न द्वेष्ट्यकुशलं कर्म कुशले नानुषज्जते ।\nत्यागी सत्त्वसमाविष्टो मेधावी छिन्नसंशयः ॥ १८.१० ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "न हि देहभृता शक्यं त्यक्तुं कर्माण्यशेषतः ।\nयस्तु कर्मफलत्यागी स त्यागीत्यभिधीयते ॥ १८.११ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अनिष्टमिष्टं मिश्रं च त्रिविधं कर्मणः फलम् ।\nभवत्यत्यागिनां प्रेत्य न तु संन्यासिनां क्वचित् ॥ १८.१२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "पञ्चैतानि महाबाहो कारणानि निबोध मे ।\nसांख्ये कृतान्ते प्रोक्तानि सिद्धये सर्वकर्मणाम् ॥ १८.१३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अधिष्ठानं तथा कर्ता करणं च पृथग्विधम् ।\nविविधाश्च पृथक्चेष्टा दैवं चैवात्र पञ्चमम् ॥ १८.१४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "शरीरवाङ्\\u200cमनोभिर्यत्कर्म प्रारभते नरः ।\nन्याय्यं वा विपरीतं वा पञ्चैते तस्य हेतवः ॥ १८.१५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "तत्रैवं सति कर्तारमात्मानं केवलं तु यः ।\nपश्यत्यकृतबुद्धित्वान्न स पश्यति दुर्मतिः ॥ १८.१६ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यस्य नाहंकृतो भावो बुद्धिर्यस्य न लिप्यते ।\nहत्वापि स इमाँल्लोकान्न हन्ति न निबध्यते ॥ १८.१७ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "ज्ञानं ज्ञेयं परिज्ञाता त्रिविधा कर्मचोदना ।\nकरणं कर्म कर्तेति त्रिविधः कर्मसंग्रहः ॥ १८.१८ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "ज्ञानं कर्म च कर्ता च त्रिधैव गुणभेदतः ।\nप्रोच्यते गुणसंख्याने यथावच्छृणु तान्यपि ॥ १८.१९ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "सर्वभूतेषु येनैकं भावमव्ययमीक्षते ।\nअविभक्तं विभक्तेषु तज्ज्ञानं विद्धि सात्त्विकम् ॥ १८.२० ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "पृथक्त्वेन तु यज्ज्ञानं नानाभावान्पृथग्विधान् ।\nवेत्ति सर्वेषु भूतेषु तज्ज्ञानं विद्धि राजसम् ॥ १८.२१ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यत्तु कृत्स्नवदेकस्मिन्कार्ये सक्तमहैतुकम् ।\nअतत्त्वार्थवदल्पं च तत्तामसमुदाहृतम् ॥ १८.२२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "नियतं सङ्गरहितमरागद्वेषतः कृतम् ।\nअफलप्रेप्सुना कर्म यत्तत्सात्त्विकमुच्यते ॥ १८.२३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यत्तु कामेप्सुना कर्म साहंकारेण वा पुनः ।\nक्रियते बहुलायासं तद्राजसमुदाहृतम् ॥ १८.२४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अनुबन्धं क्षयं हिंसामनवेक्ष्य च पौरुषम् ।\nमोहादारभ्यते कर्म यत्तत्तामसमुच्यते ॥ १८.२५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "मुक्तसङ्गोऽनहंवादी धृत्युत्साहसमन्वितः ।\nसिद्ध्यसिद्ध्योर्निर्विकारः कर्ता सात्त्विक उच्यते ॥ १८.२६ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "रागी कर्मफलप्रेप्सुर्लुब्धो हिंसात्मकोऽशुचिः ।\nहर्षशोकान्वितः कर्ता राजसः परिकीर्तितः ॥ १८.२७ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अयुक्तः प्राकृतः स्तब्धः शठो नैष्कृतिकोऽलसः ।\nविषादी दीर्घसूत्री च कर्ता तामस उच्यते ॥ १८.२८ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "बुद्धेर्भेदं धृतेश्चैव गुणतस्त्रिविधं शृणु ।\nप्रोच्यमानमशेषेण पृथक्त्वेन धनञ्जय ॥ १८.२९ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "प्रवृत्तिं च निवृत्तिं च कार्याकार्ये भयाभये ।\nबन्धं मोक्षं च या वेत्ति बुद्धिः सा पार्थ सात्त्विकी ॥ १८.३० ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यया धर्ममधर्मं च कार्यं चाकार्यमेव च ।\nअयथावत्प्रजानाति बुद्धिः सा पार्थ राजसी ॥ १८.३१ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अधर्मं धर्ममिति या मन्यते तमसावृता ।\nसर्वार्थान्विपरीतांश्च बुद्धिः सा पार्थ तामसी ॥ १८.३२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "धृत्या यया धारयते मनःप्राणेन्द्रियक्रियाः ।\nयोगेनाव्यभिचारिण्या धृतिः सा पार्थ सात्त्विकी ॥ १८.३३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यया तु धर्मकामार्थान्धृत्या धारयतेऽर्जुन ।\nप्रसङ्गेन फलाकाङ्क्षी धृतिः सा पार्थ राजसी ॥ १८.३४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यया स्वप्नं भयं शोकं विषादं मदमेव च ।\nन विमुञ्चति दुर्मेधा धृतिः सा पार्थ तामसी ॥ १८.३५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "सुखं त्विदानीं त्रिविधं शृणु मे भरतर्षभ ।\nअभ्यासाद्रमते यत्र दुःखान्तं च निगच्छति ॥ १८.३६ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यत्तदग्रे विषमिव परिणामेऽमृतोपमम् ।\nतत्सुखं सात्त्विकं प्रोक्तमात्मबुद्धिप्रसादजम् ॥ १८.३७ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "विषयेन्द्रियसंयोगाद्यत्तदग्रेऽमृतोपमम् ।\nपरिणामे विषमिव तत्सुखं राजसं स्मृतम् ॥ १८.३८ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यदग्रे चानुबन्धे च सुखं मोहनमात्मनः ।\nनिद्रालस्यप्रमादोत्थं तत्तामसमुदाहृतम् ॥ १८.३९ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "न तदस्ति पृथिव्यां वा दिवि देवेषु वा पुनः ।\nसत्त्वं प्रकृतिजैर्मुक्तं यदेभिः स्यात्त्रिभिर्गुणैः ॥ १८.४० ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "ब्राह्मणक्षत्रियविशां शूद्राणां च परन्तप ।\nकर्माणि प्रविभक्तानि स्वभावप्रभवैर्गुणैः ॥ १८.४१ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "शमो दमस्तपः शौचं क्षान्तिरार्जवमेव च ।\nज्ञानं विज्ञानमास्तिक्यं ब्रह्मकर्म स्वभावजम् ॥ १८.४२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "शौर्यं तेजो धृतिर्दाक्ष्यं युद्धे चाप्यपलायनम् ।\nदानमीश्वरभावश्च क्षात्रं कर्म स्वभावजम् ॥ १८.४३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "कृषिगौरक्ष्यवाणिज्यं वैश्यकर्म स्वभावजम् ।\nपरिचर्यात्मकं कर्म शूद्रस्यापि स्वभावजम् ॥ १८.४४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "स्वे स्वे कर्मण्यभिरतः संसिद्धिं लभते नरः ।\nस्वकर्मनिरतः सिद्धिं यथा विन्दति तच्छृणु ॥ १८.४५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यतः प्रवृत्तिर्भूतानां येन सर्वमिदं ततम् ।\nस्वकर्मणा तमभ्यर्च्य सिद्धिं विन्दति मानवः ॥ १८.४६ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "श्रेयान्स्वधर्मो विगुणः परधर्मात्स्वनुष्ठितात् ।\nस्वभावनियतं कर्म कुर्वन्नाप्नोति किल्बिषम् ॥ १८.४७ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "सहजं कर्म कौन्तेय सदोषमपि न त्यजेत् ।\nसर्वारम्भा हि दोषेण धूमेनाग्निरिवावृताः ॥ १८.४८ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "असक्तबुद्धिः सर्वत्र जितात्मा विगतस्पृहः ।\nनैष्कर्म्यसिद्धिं परमां संन्यासेनाधिगच्छति ॥ १८.४९ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "सिद्धिं प्राप्तो यथा ब्रह्म तथाप्नोति निबोध मे ।\nसमासेनैव कौन्तेय निष्ठा ज्ञानस्य या परा ॥ १८.५० ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "बुद्ध्या विशुद्ध्या युक्तो धृत्यात्मानं नियम्य च ।\nशब्दादीन्विषयांस्त्यक्त्वा रागद्वेषौ व्युदस्य च ॥ १८.५१ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "विविक्तसेवी लघ्वाशी यतवाक्कायमानसः ।\nध्यानयोगपरो नित्यं वैराग्यं समुपाश्रितः ॥ १८.५२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अहंकारं बलं दर्पं कामं क्रोधं परिग्रहम् ।\nविमुच्य निर्ममः शान्तो ब्रह्मभूयाय कल्पते ॥ १८.५३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "ब्रह्मभूतः प्रसन्नात्मा न शोचति न काङ्क्षति ।\nसमः सर्वेषु भूतेषु मद्भक्तिं लभते पराम् ॥ १८.५४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "भक्त्या मामभिजानाति यावान्यश्चास्मि तत्त्वतः ।\nततो मां तत्त्वतो ज्ञात्वा विशते तदनन्तरम् ॥ १८.५५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "सर्वकर्माण्यपि सदा कुर्वाणो मद्व्यपाश्रयः ।\nमत्प्रसादादवाप्नोति शाश्वतं पदमव्ययम् ॥ १८.५६ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "चेतसा सर्वकर्माणि मयि संन्यस्य मत्परः ।\nबुद्धियोगमुपाश्रित्य मच्चित्तः सततं भव ॥ १८.५७ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "मच्चित्तः सर्वदुर्गाणि मत्प्रसादात्तरिष्यसि ।\nअथ चेत्त्वमहंकारान्न श्रोष्यसि विनङ्क्ष्यसि ॥ १८.५८ ॥",
   "a": "मच्चित्तः मत्प्रसादात्‌ सर्वदुर्गाणि तरिष्यसि । अथ त्वम् अहंकारात्‌ न श्रोष्यसि चेत्‌ विनङ्क्ष्यसि ।",
   "t": "यदि मयि एव मनः स्थापयसि तर्हि सर्वाण्यपि दुःखानि अतिक्रमितुं शक्नोषि । अथ अहमपि ज्ञानौ इति अहङ्कारात् मदुक्तं न शृणोषि तर्हि अवश्यम् अधःपतनं प्राप्नोषि ।"
 },
 {
   "d": "यदहंकारमाश्रित्य न योत्स्य इति मन्यसे ।\nमिथ्यैष व्यवसायस्ते प्रकृतिस्त्वां नियोक्ष्यति ॥ १८.५९ ॥",
   "a": "यदि अहङ्कारम्‌ आश्रित्य न योत्स्ये इति मन्यसे (तर्हि) एषः ते व्यवसायः मिथ्या । प्रकृतिः त्वां नियोक्ष्यति ।",
   "t": "यदि त्वम् अहङ्कारम् आश्रित्य अहं युद्धं न करोमि इति निर्णयसि तदापि  तव निर्णयः निष्फलः भवति । यतः क्षत्रियत्वकारणीभूता या प्रकृतिः सा प्रवृद्धरजोगुणा सती त्वाम् अवश्यं युद्धे प्रवर्तयिष्यति । अतः पूर्वमेव मगुक्तस्य अनुसरणं तव अत्यन्तं श्रेयस्करम् ।"
 },
 {
   "d": "स्वभावजेन कौन्तेय निबद्धः स्वेन कर्मणा ।\nकर्तुं नेच्छसि यन्मोहात्करिष्यस्यवशोऽपि तत् ॥ १८.६० ॥",
   "a": "कौन्तेय ! स्वभावजेन स्वेन कर्मणा निबद्धः यत्‌ कर्तुं न इच्छसि तत्‌ मोहात्‌ अवशः अपि करिष्यसि ।",
   "t": "अर्जुन ! यदि त्वम् अविवेकेन युद्धं न करोषि तर्हि पूर्वकर्मसंस्कारानुगुणस्य स्वभावस्य यदनुरूपं युद्धादिकर्म तेव नियन्त्रणात् परवशः सन् अवश्यं युद्धे प्रवर्तसे ।"
 },
 {
   "d": "ईश्वरः सर्वभूतानां हृद्देशेऽर्जुन तिष्ठति ।\nभ्रामयन्सर्वभूतानि यन्त्रारूढानि मायया ॥ १८.६१ ॥",
   "a": "अर्जुन ! ईश्वरः सर्वभूतानि यन्त्रारूढानि मायया भ्रामयन्‌ सर्वभूतानां हृद्देशे तिष्ठति ।",
   "t": "अर्जुन ! सर्वेषामपि प्राणिनां हृदये ईश्वरो वर्तते । सः तानि सर्वाणि भूतानि यन्त्रारूढानि इव सम्यक् भ्रामयति । अतः त्वं न स्वतन्त्रः । युद्धं न करोमि इति कृतनिर्णयोऽपि अन्ये युद्धं करिष्यस्येव । तस्मात् इदानीमेव मम वचनं पालय ।"
 },
 {
   "d": "तमेव शरणं गच्छ सर्वभावेन भारत ।\nतत्प्रसादात्परां शान्तिं स्थानं प्राप्स्यसि शाश्वतम् ॥ १८.६२ ॥",
   "a": "भारत ! सर्वभावेन तम्‌ एव शरणं गच्छ । तत्प्रसादात्‌ परां शान्तिं शाश्वतं स्थानं प्राप्स्यसि ।",
   "t": "अर्जुन ! तस्मात् त्वं सर्वात्मना तमेव ईश्वरं शरणं गच्छ, यस्यानुग्रहात् परमां शान्तिं प्राप्नुवन् शाश्वतं स्थानम् अवाप्स्यसि ।"
 },
 {
   "d": "इति ते ज्ञानमाख्यातं गुह्याद्\\u200cगुह्यतरं मया ।\nविमृश्यैतदशेषेण यथेच्छसि तथा कुरु ॥ १८.६३ ॥",
   "a": "मया गुह्यात्‌ गुह्यतरम् एतत्‌ ज्ञानम्‌ इति ते आख्यातम्‌ । एतत् अशेषेण विमृश्य यथा इच्छसि तथा कुरु ।",
   "t": "अर्जुन ! मया एतावन्तं कालम् अत्यन्तं रहस्यं तत्त्वं विशदीकृतम् । एतत् सर्वं सम्यक् ज्ञात्वा यत् कर्तुम् इच्छसि तत् कुरु ।"
 },
 {
   "d": "सर्वगुह्यतमं भूयः शृणु मे परमं वचः ।\nइष्टोऽसि मे दृढमिति ततो वक्ष्यामि ते हितम् ॥ १८.६४ ॥",
   "a": "दृढं मे इष्टः असि इति सर्वगुह्यतमं मे परमं वचः भूयः शृणु । ततः ते हितं वक्ष्यामि ।",
   "t": "अत्यन्तं गोपनीयं मम प्रकृष्टं वचनं पुनः शृणु । त्वं मम अत्यन्तम् इष्टः असि । तस्मात् तव यत् श्रेयस्करं तत् वदिष्यामि ।"
 },
 {
   "d": "मन्मना भव मद्भक्तो मद्याजी मां नमस्कुरु ।\nमामेवैष्यसि सत्यं ते प्रतिजाने प्रियोऽसि मे ॥ १८.६५ ॥",
   "a": "मन्मना भव । मद्भक्तः मद्याजी मां नमस्कुरु । माम्‌ एव एष्यसि । सत्यं ते प्रतिजाने । मे प्रियः असि ।",
   "t": "अर्जुन ! मय्येव चित्तं स्थापय । मद्भक्तो भव । मामेव पूजय । मामेव नमस्कुरु । अन्ते मामेव प्राप्स्यसि । दृढमहं कथयामि यत् त्वं मम अत्यन्तं प्रियः । अतः यत् ते श्रेयस्करं तदेव कथयामि । तदेव अनुतिष्ठ ।"
 },
 {
   "d": "सर्वधर्मान्परित्यज्य मामेकं शरणं व्रज ।\nअहं त्वां सर्वपापेभ्यो मोक्षयिष्यामि मा शुचः ॥ १८.६६ ॥",
   "a": "सर्वधर्मान्‌ परित्यज्य माम्‌ एकं शरणं व्रज । अहं त्वा सर्वपापेभ्यः मोक्षयिष्यामि मा शुचः ।",
   "t": "अर्जुन ! तस्मात् त्वं सर्वाणि कर्माणि परित्यज्य मां शरणं प्राप्नुहि । अहं त्वां कर्मत्यागजन्यात् सर्वस्मात् अपि पापात् विमोचयिष्यामि । शोकं मा कुरु ।"
 },
 {
   "d": "इदं ते नातपस्काय नाभक्ताय कदाचन ।\nन चाशुश्रूषवे वाच्यं न च मां योऽभ्यसूयति ॥ १८.६७ ॥",
   "a": "इदं ते कदाचन अतपस्काय न वाच्यम् । न अभक्ताय, न च अशुश्रूषवे, मां यः अभ्यसूयति तस्मै न ।",
   "t": "एतावन्तं कालं यदुक्तं गीतार्थतत्त्वं तत् त्वया तपिविहीनाय न वाच्यम् । भक्तिहीनाय न वाच्यम् । असेविने न वाच्यम् । मां यः न सहते तस्मै अपि न वाच्यम् ।"
 },
 {
   "d": "य इमं परमं गुह्यं मद्भक्तेष्वभिधास्यति ।\nभक्तिं मयि परां कृत्वा मामेवैष्यत्यसंशयः ॥ १८.६८ ॥",
   "a": "यः परमं गुह्यम्‌ इदं मद्भक्तेषु अभिधास्यति सः मयि परां भक्तिं कृत्वा माम्‌ एव एष्यति । असंशयः ।",
   "t": "यः पुरुषः प्रकृष्टं रहस्यम् इदं मदाराधकेषु वदिष्यति सः मयि परमेश्वरे श्रद्धां कुर्वन् माम् एव अधिगच्छति । अत्र सन्देहः नास्ति ।"
 },
 {
   "d": "न च तस्मान्मनुष्येषु कश्चिन्मे प्रियकृत्तमः ।\nभविता न च मे तस्मादन्यः प्रियतरो भुवि ॥ १८.६९ ॥",
   "a": "मनुष्येषु च तस्मात्‌ कश्चित्‌ मे न प्रियकृत्तमः । तस्मात्‌ अन्यः प्रियतरः भुवि न च भविता ।",
   "t": "मनुष्येषु तस्मात् प्रियकारी अपरः कोऽपि नास्ति । तस्मात् अन्यः मम प्रयो नापि भविष्यति । सः एव प्रियकारी, सः एव च मम अत्यन्तं प्रियः इति जानीहि ।"
 },
 {
   "d": "अध्येष्यते च य इमं धर्म्यं संवादमावयोः ।\nज्ञानयज्ञेन तेनाहमिष्टः स्यामिति मे मतिः ॥ १८.७० ॥",
   "a": "यः च धर्म्यम्‌ आवयोः इमं संवादम्‌ अध्येष्यते तेन ज्ञानयज्ञेन अहम्‌ इष्टः स्याम्‌ इति मे मतिः।",
   "t": "यो वा मनुष्यः आवयोः इदं सम्भाषणं सम्यक् पठिष्यसि सः ज्ञानयज्ञेन मां यजति इत्येव मम मतिः ।"
 },
 {
   "d": "श्रद्धावाननसूयश्च शृणुयादपि यो नरः ।\nसोऽपि मुक्तः शुभाँल्लोकान्प्राप्नुयात्पुण्यकर्मणाम् ॥ १८.७१ ॥",
   "a": "श्रद्धावान्‌ अनसूयः च यः नरः शृणुयात्‌ अपि सः अपि मुक्तः पुण्यकर्मणां शुभान्‌ लोकान्‌ प्राप्नुयात्‌ ।",
   "t": "यः पुरुषः श्रद्धावान् ईर्ष्यारहितश्च सन् इदं सम्भाषणं शृणोति सोऽपि सर्वेभ्यः पापेभ्यः मुक्तः पुन्यशालिनां शुभं लोकं प्राप्स्यति ।"
 },
 {
   "d": "कच्चिदेतच्छ्रुतं पार्थ त्वयैकाग्रेण चेतसा ।\nकच्चिदज्ञानसंमोहः प्रनष्टस्ते धनञ्जय ॥ १८.७२ ॥",
   "a": "पार्थ ! त्वया एकाग्रेण चेतसा एतत्‌ श्रुतं कच्चित्‌ । धनञ्जय ! ते अज्ञानसम्मोहः प्रनष्टः कच्चित्‌ ।",
   "t": "अर्जुन ! त्वया अवहितेन चित्तेन इदं श्रुतं किम् ? अर्जुन ! तव अविवेकः अपगतः किम् ?"
 },
 {
   "d": "अर्जुन उवाच ।\nनष्टो मोहः स्मृतिर्लब्धा त्वत्प्रसादान्मयाच्युत ।\nस्थितोऽस्मि गतसन्देहः करिष्ये वचनं तव ॥ १८.७३ ॥",
   "a": "अच्युत ! तव प्रसादात्‌ मोहः नष्टः । स्मृतिः मया लब्धा । गतसन्देहः स्थितः अस्मि । तव वचनं करिष्ये ।",
   "t": "श्रीकृष्ण ! भवदनुग्रहात् अविवेकः अपगतः । कर्तव्यस्मरणं मम जातम् । विगतसन्देहः स्थितः अस्मि । तव वचनम् आचरयिष्यामि ।"
 },
 {
   "d": "सञ्जय उवाच ।\nइत्यहं वासुदेवस्य पार्थस्य च महात्मनः ।\nसंवादमिममश्रौषमद्भुतं रोमहर्षणम् ॥ १८.७४ ॥",
   "a": "महात्मनः वासुदेवस्य पार्थस्य च रोमहर्षणम्‌ अद्भुतम्‌ इमं संवादम्‌ इति अहम्‌ अश्रौषम्‌ ।",
   "t": "महानुभावस्य नारायणस्य अर्जुनस्य च रोमाञ्चकरम् आश्चर्यम् एनं संवादम् अहं अशृणवम् ।"
 },
 {
   "d": "व्यासप्रसादाच्छ्रुतवानेतद्गुह्यमहं परम् ।\nयोगं योगेश्वरात्कृष्णात्साक्षात्कथयतः स्वयम् ॥ १८.७५ ॥",
   "a": "साक्षात्‌ कथयतः योगेश्वरात्‌ कृष्णात्‌ गुह्यं परम् एतत्‌ योगं व्यासप्रसादात्‌ अहं स्वयं श्रुतवान्‌ ।",
   "t": "योगेश्वरः कृष्णः साक्षात् स्वमुखेन यदिदं गीतार्थतत्त्वम् उक्तवान् तदहं व्यासुग्रहेण श्रतवान् अस्मि ।"
 },
 {
   "d": "राजन्संस्मृत्य संस्मृत्य संवादमिममद्भुतम् ।\nकेशवार्जुनयोः पुण्यं हृष्यामि च मुहुर्मुहुः ॥ १८.७६ ॥",
   "a": "राजन्‌ ! अद्भुतं पुण्यं केशवार्जुनयोः इमं संवादं संस्मृत्य संस्मृत्य मुहुः मुहुः च हृष्यामि ।",
   "t": "राजन्, धृतराष्ट्र ! आश्चर्यं पापहरं कृष्णार्जुनयोः एनं संलापं पुनः पुणः स्मृत्वा भूयो भूयः च तुष्यामि ।"
 },
 {
   "d": "तच्च संस्मृत्य संस्मृत्य रूपमत्यद्भुतं हरेः ।\nविस्मयो मे महान् राजन्हृष्यामि च पुनः पुनः ॥ १८.७७ ॥",
   "a": "राजन्‌ ! हरेः अत्यद्भुतं च तत्‌ रूपं संस्मृत्य संस्मृत्य (स्थितस्य) मे महान्‌ विस्मयः । पुनः पुनः च हृष्यामि ।",
   "t": "राजन् ! हरेः अत्यद्भुतं च तत् रूपं स्मृत्वा स्मृत्वा (स्थितस्य) मम महत् आश्चर्यं भवति । पुनः पुनः सन्तुष्यामि च ।"
 },
 {
   "d": "यत्र योगेश्वरः कृष्णो यत्र पार्थो धनुर्धरः ।\nतत्र श्रीर्विजयो भूतिर्ध्रुवा नीतिर्मतिर्मम ॥ १८.७८ ॥",
   "a": "यत्र योगेश्वरः कृष्णः यत्र धनुर्धरः पार्थः तत्र श्रीः विजयः भूतिः ध्रुवा नीतिः (इति) मम मतिः ।",
   "t": "यत्र सर्वोपायवतां स्वामी भगवान् श्रीकृष्णः तत्र राज्यलक्ष्मीः, सम्पत्, न्यायः इति मम मतिः निश्चला ।"
 },
