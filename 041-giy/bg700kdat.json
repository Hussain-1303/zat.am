 {
   "d": "उत्सन्नकुलधर्माणां मनुष्याणां जनार्दन ।\nनरकेऽनियतं वासो भवतीत्यनुशुश्रुम ॥ १.४३ ॥",
   "a": "जनार्दन ! ’उत्सन्सकुलधर्माणां मनुष्याणां नरके अनियतं वासः भवति’ इति अनुशुश्रुम ।",
   "t": "येषां कुलधर्माः नष्टाः सन्ति तेषां नरके अतिदीर्घकालं यावत् वासह भविष्यति इति अस्माभिः श्रुतम् ।"
 },
 {
   "d": "अहो बत महत्पापं कर्तुं व्यवसिता वयम् ।\nयद्राज्यसुखलोभेन हन्तुं स्वजनमुद्यताः ॥ १.४४ ॥",
   "a": "अहो बत ! वयं महत् पापं कर्तुं व्यवसिताः यत् राज्यसुखलोभेन स्वजनं हन्तुम् उद्यताः ।",
   "t": "हन्त ! राज्यसुखस्य लोभेन स्वजनान् एव मारयितुम् उद्युक्ताः वयं महदेव पापं कर्तुं प्रवृत्ताः स्मः ।"
 },
 {
   "d": "यदि मामप्रतीकारमशस्त्रं शस्त्रपाणयः ।\nधार्तराष्ट्रा रणे हन्युस्तन्मे क्षेमतरं भवेत् ॥ १.४५ ॥",
   "a": "यदि धार्तराष्ट्राः शस्त्रपाणयः अशस्त्रम् अप्रतीकारं मां रणे हन्युः तत् मे क्षेमतरं भवेत् ।",
   "t": "किञ्चिदपि प्रतीकारम् अकुर्वन्तम् अगृहीतशस्त्रं च मां गृहीतशस्त्राः एते कौरवाः यदि युद्धे मारयन्ति तर्हि तदेव मम क्षेमतरं भवति इति भावयामि ।"
 },
 {
   "d": "सञ्जय उवाच ।\nएवमुक्त्वार्जुनः संख्ये रथोपस्थ उपाविशत्\nविसृज्य सशरं चापं शोकसंविग्नमानसः ॥ १.४६ ॥",
   "a": "सङ्ख्ये एवम् उक्त्वा शोकसंविग्नमानसः अर्जुनः सशरं चापं विसृज्य रथोपस्थे उपाविशत् ।",
   "t": "सङ्ख्ये एवम् उक्त्वा शोकसंविग्नमानसः अर्जुनः सशरं चापं विसृज्य रथोपस्थे उपाविशत् ।"
 },
 {
   "d": "सञ्जय उवाच ।\nतं तथा कृपयाविष्टमश्रुपूर्णाकुलेक्षणम् ।\nविषीदन्तमिदं वाक्यमुवाच मधुसूदनः ॥ २.१ ॥",
   "a": "मधुसूदनः तथा कृपया आविष्टम् अश्रुपूर्णाकुलेक्षणं विषीदन्तं तम् इदं वाक्यम् उवाच ।",
   "t": "भगवान् श्रीकृष्णः अर्जुनस्य शोचनीयाम् अवस्थां दृष्टवान् । ततः दयया आक्रान्तं शोकं च \nअनुभवन्तं तं सः एवम् उक्तवान् ।"
 },
 {
   "d": "श्रीभगवान् उवाच ।\nकुतस्त्वा कश्मलमिदं विषमे समुपस्थितम्\nअनार्यजुष्टमस्वर्ग्यमकीर्तिकरमर्जुन ॥ २.२ ॥",
   "a": "अर्जुन! विषमे अनार्यजुष्टम् अस्वर्ग्यम् अकीर्तिकरम् इदं कश्मलं कुतः त्वा समुपस्थितम ?",
   "t": "हे अर्जुन ! क्लिष्टसमये असाधुसेवितम्, अस्वर्गफलम्, अयशस्करं च एतादृशं चित्तकालुष्यम् \nकथं त्वां समागतम् ?"
 },
 {
   "d": "क्लैब्यं मा स्म गमः पार्थ नैतत्त्वय्युपपद्यते ।\nक्षुद्रं हृदयदौर्बल्यं त्यक्त्वोत्तिष्ठ परन्तप ॥ २.३ ॥",
   "a": "हे पार्थ ! ईदृशं क्लैब्यं मा गमः । त्वयि एतत् न उपपद्यते । परन्तप ! क्षुद्रं हृदयदौर्बल्यं त्यक्त्वा उत्तिष्ठ ।",
   "t": "हे अर्जुन ! नपुंसकत्वं मा प्राप्नुहि । वीरस्य तव एतत् न युज्यते । एतादृशं तुच्छं चित्तवैक्लव्यं त्यक्त्वा \nयुद्धार्थं सन्नद्धौ भव ।"
 },
 {
   "d": "अर्जुन उवाच ।\nकथं भीष्ममहं संख्ये द्रोणं च मधुसूदन\nइषुभिः प्रतियोत्स्यामि पूजार्हावरिसूदन ॥ २.४ ॥",
   "a": "मधुसूदन ! अहं सङ्ख्ये कथम् इषुभिः पूजार्हौ भीष्मं द्रोणं च प्रतियोत्स्यामि ? अरिसूदन !",
   "t": "हे मधुसूदन ! पितामहः भीष्मः आचार्यः द्रोणश्च मम अत्यन्तं पूजार्हौ । अहं युद्धे कथं तौ प्रति \nबाणपर्योगं करवाणि ?"
 },
 {
   "d": "गुरूनहत्वा हि महानुभावान् श्रेयो भोक्तुं भैक्ष्यमपीह लोके ।\nहत्वार्थकामांस्तु गुरूनिहैव भुञ्जीय भोगान् रुधिरप्रदिग्धान् ॥ २.५ ॥",
   "a": "महानुभावान् गुरून् अहत्वा (स्थितस्य मम) भैक्ष्यं भोक्तुम् इह लोके श्रेयः । गुरून् हत्वा इह एव रुधिरप्रदिग्धान् अर्थकामान् भोगान् भुञ्जीय ?",
   "t": "एतान् महानुभावान् गुरून् भीष्मद्रोणादीन् अहत्वा भिक्षायाचनेन जीवनमपि वरम् । किन्तु एतेषां हननेन \nप्राप्यमाणाः ये भोगाः रक्तलिप्ताः भविष्यन्ति तेषाम् उपभोगः सर्वथा नोचितः ।"
 },
 {
   "d": "न चैतद्विद्मः कतरन्नो गरीयो यद्वा जयेम यदि वा नो जयेयुः ।\nयानेव हत्वा न जिजीविषामस्तेऽवस्थिताः प्रमुखे धार्तराष्ट्राः ॥ २.६ ॥",
   "a": "यान् हत्वा न जिजीविषामः ते एव धार्तराष्ट्राः प्रमुखे अवस्थिताः (तस्मात्) यद् वा जयेम यदि वा नो जयेयुः (अनयोः) कतरत् नः गरीयः (इति) एतत् न विद्मः ।",
   "t": "यान् हत्वा वयं जीवितुं न शक्नुमः तादृशाः दुर्योधनादयः समरे उपस्थिताः सन्ति । युद्धे अन्यस्य हननम् \nअन्यस्य च जीवनम् इत्येतत् अवश्यम्भावि । तस्मात् यदि वयं जीवनम् इच्छामः तर्हि अवश्यं तेषां मरणम् \nकाङ्क्षणीयम् । अथ वयं मरणम् इच्छामः ते कामं जीवन्ति । किन्तु समरशूराणाम् अस्माकम् एतत् \nअवमानं भवति । तस्मात् अनयोः किम् अस्माकम् उचितमिति न जानीमः ।"
 },
 {
   "d": "कार्पण्यदोषोपहतस्वभावः पृच्छामि त्वां धर्मसम्मूढचेताः ।\nयच्छ्रेयः स्यान्निश्चितं ब्रूहि तन्मे शिष्यस्तेऽहं शाधि मां त्वां प्रपन्नम् ॥ २.७ ॥",
   "a": "कार्पण्यदोषोपहतस्वभावः धर्मसम्मूढचेताः त्वां पृच्छामि - यत् निश्चितं श्रेयः स्यात् तत् मे ब्रूहि । अहं ते शिष्यः । त्वां प्रपन्नं मां शाधि ।",
   "t": "एते सर्वे मदीयाः । तस्मात् एतेषां न किञ्चिदपि हानिः भवेत् इति लुब्धत्वेन दोषेण इदानीं मम \nविचारशक्तिः नष्टा अस्ति । धर्मविषये मम चेतः सम्मूढम् अस्ति । अतः पृच्छामि - इदानीं मम यत् \nअसन्दिग्धं श्रेयः तत् त्वं वद । अहं त्वामेव शरणं गतः अस्ति । माम् उपदिश ।"
 },
 {
   "d": "न हि प्रपश्यामि ममापनुद्याद्यच्छोकमुच्छोषणमिन्द्रियाणाम् ।\nअवाप्य भूमावसपत्नमृद्धं राज्यं सुराणामपि चाधिपत्यम् ॥ २.८ ॥",
   "a": "भूमौ असपत्नम् ऋद्धं महत् राज्यं सुराणाम् आदीपत्यं च अवाप्य अपि (स्थितस्य) मम यत् इन्द्रियाणाम् उच्छोषणं शोकम् अपनुद्यात् (तत्कर्म) नहि प्रपश्यामि ।",
   "t": "मया भूमौ अस्यां निष्कण्टकं समृद्धं राज्यं प्राप्येत, देवानां च आधिपत्यं लभ्येत, तथापि इन्द्रियाणाम् \nविशोषकः अयं शोकः गुरुबान्धवादीनां हननेच्छया समयत्पन्नः येन दूरीभवति तादृशं किमपि कर्म न पश्यामि ।"
 },
 {
   "d": "सञ्जय उवाच ।\nएवमुक्त्वा हृषीकेशं गुडाकेशः परन्तपः\nन योत्स्य इति गोविन्दमुक्त्वा तूष्णीं बभूव ह ॥ २.९ ॥",
   "a": "परन्तप ! हृषीकेशम् एवम् उक्त्वा गुडाकेशः ’न योत्स्ये’ इति गोविन्दम् उक्त्वा तूष्णीं बभूव ।",
   "t": "अर्जुनः अनेन प्रकारेण कृष्णम् उक्त्वा अहं युद्धं न करिष्यामि इति स्वाशयं च निवेद्य तूष्णीम् अभवत् \nइति सञ्जयः धृतराष्ट्रम् अवदत् ।"
 },
 {
   "d": "तमुवाच हृषीकेशः प्रहसन्निव भारत ।\nसेनयोरुभयोर्मध्ये विषीदन्तमिदं वचः ॥ २.१० ॥",
   "a": "भारत ! हृषीकेशः प्रहसन् इव उभयोः सेनयोः मध्ये विषीदन्तं तम् इदं वचः उवाच ।",
   "t": "हे धृतराष्ट्र ! अनेन प्रकारेण अर्जुनः सैन्ययोः मध्ये विषादम् अनुभवन् अतिष्ठत् । तदा भगवान् श्रीकृष्णः \nतम् उद्दिश्य प्रहसन् इव एतत् वचनम् अवदत् ।"
 },
 {
   "d": "श्रीभगवान् उवाच ।\nअशोच्यानन्वशोचस्त्वं प्रज्ञावादांश्च भाषसे\nगतासूनगतासूंश्च नानुशोचन्ति पण्डिताः ॥ २.११ ॥",
   "a": "त्वम् अशोच्यान् अन्वशोचः । प्रज्ञावादान् च भाषसे । पण्डिताः गतासून् अगतासून् च न अनुशोचन्ति ।",
   "t": "हे अर्जुन ! येषु शोकः न करणीयः तेषु त्वं शोकं करोषि । पण्डितानां वादमपि उपस्थापयसि । \nवस्तुतः विवेकिनः मृतेषु जीवत्सु च शोकं न कुर्वन्ति ।"
 },
 {
   "d": "न त्वेवाहं जातु नासं न त्वं नेमे जनाधिपाः ।\nन चैव न भविष्यामः सर्वे वयमतः परम् ॥ २.१२ ॥",
   "a": "अहं जातु न आसम्, न तु एव त्वम् (आसीः), न इमे जनाधिपाः (आसन्) न अतः परं वयं सर्वे न च एव भविष्यामः ।",
   "t": "अहं सर्वदा आसम् । त्वं सर्वदा आसीः । एते राजानः अपि सर्वदा आसन् । इतः परमपि वयं सर्वे \nसर्वदा भविष्यामः । आत्मा स्थिरः इति वयं सर्वे सर्वदा अवश्यं भवामः इत्यभिप्रायः ।"
 },
 {
   "d": "देहिनोऽस्मिन्यथा देहे कौमारं यौवनं जरा ।\nतथा देहान्तरप्राप्तिर्धीरस्तत्र न मुह्यति ॥ २.१३ ॥",
   "a": "देहिनः अस्मिन् देहे यथा कौमारं यौवनं जरा (च) तथा देहान्तरप्राप्तिः । तत्र धीरः न मुह्यति ।",
   "t": "आत्मनः कौमारं यौवनं जरा चेत्येवम् अवस्थाः यथा भवन्ति तथा देहान्तरप्राप्तिः अपि भवति । \nअतः विवेकी तस्मिन् मोहं न गच्छति ।"
 },
 {
   "d": "मात्रास्पर्शास्तु कौन्तेय शीतोष्णसुखदुःखदाः ।\nआगमापायिनोऽनित्यास्तांस्तितिक्षस्व भारत ॥ २.१४ ॥",
   "a": "कौन्तेय ! मात्रास्पर्शाः तु शीतोष्णसुखदुःखदाः आगमापायिनः अनित्याः । भारत ! तान् तितिक्षस्व ।",
   "t": "स्रक्चन्दनवनितादीनां विषयाणां सम्बन्धाः कदाचित् शीतं जनयन्ति, कदाचिच्च उष्णम् । कदाचित् \nसुखम्, कदाचिच्च दुःखम् । कदाचित् ते भवन्ति, कदाचित् अपगच्छन्ति । अतः एव अनित्याः । \nतस्मात् तान् सहस्व । मा मोहं भज ।"
 },
 {
   "d": "यं हि न व्यथयन्त्येते पुरुषं पुरुषर्षभ ।\nसमदुःखसुखं धीरं सोऽमृतत्वाय कल्पते ॥ २.१५ ॥",
   "a": "पुरुषर्षभ ! एते यं समदुःखसुखं धीरं पुरुषं न व्यथयन्ति सः अमृतत्वाय कल्पते ।",
   "t": "यः जनः सुखं दुःखं च समंं मन्यते तं शीतोष्णसुखदुःखकराः विषयसम्बन्धाः किञ्चिदपि न व्यथयन्ति । \nसोऽयं द्वन्द्वसहिष्णुः जनः मोक्षं प्राप्तुं योग्यः भवति ।"
 },
 {
   "d": "नासतो विद्यते भावो नाभावो विद्यते सतः ।\nउभयोरपि दृष्टोऽन्तस्त्वनयोस्तत्त्वदर्शिभिः ॥ २.१६ ॥",
   "a": "असतः भावः न विद्यते, सतः अभावः न विद्यते । अनयोः उभयोः (सदसतोः) अपि अन्तः तत्त्वदर्शिभिः दृष्टः ।",
   "t": "असत्पदार्थः कदापि न भवति, यथा - शशशृङ्गादिः । सत्पदार्थः सर्वदा भवति, यथा आत्मा । \nअनयोः उभयोः अपि सदसत्पदार्थयोः स्वरूपे निर्णयः केवलं तत्वज्ञानिनामेव भवति, न अन्येषाम् ।"
 },
 {
   "d": "अविनाशि तु तद्विद्धि येन सर्वमिदं ततम् ।\nविनाशमव्ययस्यास्य न कश्चित्कर्तुमर्हति ॥ २.१७ ॥",
   "a": "येन इदं सर्वं ततं तत् तु अविनाशि विद्धि । अस्य अव्ययस्य विनाशं कर्तुं कश्चित् अपि न अर्हति ।",
   "t": "तत् तत्त्वं तु सर्वदा अविनाशि इति जानीहि । तेन तत्त्वेन सर्वमपि इडं जगत् व्याप्तम् अस्ति । \nतादृशस्य अविनाशिनः तत्त्वस्य विनाशं कर्तुं कोऽपि नैव शक्नोति ।"
 },
 {
   "d": "अन्तवन्त इमे देहा नित्यस्योक्ताः शरीरिणः ।\nअनाशिनोऽप्रमेयस्य तस्माद्युध्यस्व भारत ॥ २.१८ ॥",
   "a": "अनाशिनः अप्रमेयस्य नित्यस्य च शरीरिणः इमे देहाः अन्तवन्तः उक्ताः । भारत ! तस्मात् युध्यस्व ।",
   "t": "अयं च आत्मा अविनाशी, प्रत्यक्षादिप्रमाणैः ज्ञातुम् अशक्यः, शाश्वतश्च । तस्य एतानि शरीराणि तु \nनाशसहितानि इति उक्तानि सन्ति । यस्मात् अयम् आत्मा नित्यः, शरीरं च विनाशी तस्मात् त्वं युद्धं कुरु ।"
 },
 {
   "d": "य एनं वेत्ति हन्तारं यश्चैनं मन्यते हतम् ।\nउभौ तौ न विजानीतो नायं हन्ति न हन्यते ॥ २.१९ ॥",
   "a": "यः एनं हन्तारं वेत्ति, यः च एनं हतं मन्यते तौ उभौ न विजानीतः । (यतः) अयं न हन्ति, न हन्यते ।",
   "t": "यः जनः ’आत्मा कञ्चित् पुरुषं मारयति’ इति जानाति यश्च जनः ’आत्मा केनापि पुरुषेण मार्यते’ इति \nजानाति तौ द्वौ अपि वस्तुतः अज्ञानिनौ । यतः आत्मा कञ्चित् न हन्ति, न वा केनापि हन्यते ।"
 },
 {
   "d": "न जायते म्रियते वा कदाचिन्नायं भूत्वा भविता वा न भूयः ।\nअजो नित्यः शाश्वतोऽयं पुराणो न हन्यते हन्यमाने शरीरे ॥ २.२० ॥",
   "a": "अयं कदाचित् न जायते ज वा म्रियते । अयं भूत्वा भूयः भविता वा न । अयम् अजः नित्यः शाश्वतः पुराणः शरीरं हन्यमाने अपि न च हन्यते ।",
   "t": "अयम् आत्मा कदापि न जायते न म्रियते वा, उत्पद्य पुनरपि उत्पत्स्यते इत्यपि वक्तुं न शक्यते, यतः \nअयम् आत्मा जन्मरहितः, सनातनः, पुरातनश्च । शरीरे नष्टेऽपि सः न नश्यति ।"
 },
 {
   "d": "वेदाविनाशिनं नित्यं य एनमजमव्ययम् ।\nकथं स पुरुषः पार्थ कं घातयति हन्ति कम् ॥ २.२१ ॥",
   "a": "पार्थ, यः एनम् अविनाशिनं नित्यम् अजम् अव्ययं च वेद सः पुरुषः कं कथं घातयति ? कं हन्ति ?",
   "t": "अयम् आत्मा विनाशरहितः, नित्यः, जन्मरहितः, अपक्षयरहितश्च इति यः जानाति सः ज्ञानी एव । \nतादृशज्ञानवान् पुरुषः अन्यं कथं वा हन्ति ? कथं वा हनने अन्यं प्रेरयति ?"
 },
 {
   "d": "वासांसि जीर्णानि यथा विहाय नवानि गृह्णाति नरोऽपराणि ।\nतथा शरीराणि विहाय जीर्णान्यन्यानि संयाति नवानि देही ॥ २.२२ ॥",
   "a": "नरः जीर्णानि वासांसि विहाय अपराणि नवानि यथा गृह्णाति तथा देही जीर्णानि शरीराणि विहाय अन्यानि नवानि संयाति ।",
   "t": "मनुष्यः वस्त्राणि धरति । परन्तु सः सर्वदा समानमेव वस्त्रं न धरति । धृतानि वस्त्राणि यदा जीर्णानि \nभवन्ति तदा तानि विहाय नूतनानि अन्यानि वस्त्राणि धरति । एवम् आत्मा अपि जीर्णानि शरीराणि \nपरित्यज्य अभिनवानि अन्यानि शरीराणि आश्रयते ।"
 },
 {
   "d": "नैनं छिन्दन्ति शस्त्राणि नैनं दहति पावकः ।\nन चैनं क्लेदयन्त्यापो न शोषयति मारुतः ॥ २.२३ ॥",
   "a": "शस्त्राणि एनं न छिन्दन्ति । पावकः एनं न दहति । आपः एनं न क्लेदयन्ति । मारुतः च न शोषयति ।",
   "t": "एनम् आत्मानं शस्त्राणि धेत्तुं न प्रभवन्ति । अग्निः एनं दग्धुं न प्रभवति । \nजलम् एनं नैव आर्द्रीकर्तुं शक्नोति । वायुः अपि एनं शोषयितुं न प्रभवति ।"
 },
 {
   "d": "अच्छेद्योऽयमदाह्योऽयमक्लेद्योऽशोष्य एव च ।\nनित्यः सर्वगतः स्थाणुरचलोऽयं सनातनः ॥ २.२४ ॥",
   "a": "अयम् अच्छेद्यः । अयम् अदाह्यः । अयम् अक्लेद्यः अशोष्यः एव च । अयं नित्यः सर्वगतः स्थाणुः अचलः सनातनः (च) ।",
   "t": "अयम् आत्मा शस्त्रेण केनापि छेत्तुम् अशक्यः । अग्निना भस्मीकर्तुम् अपि न शक्यः । अस्य जलादिना \nक्लेदनम् आतपादिना शोषणं वा न शक्यम् । अयं सर्वदा भवति । सर्वत्रापि भवति । अयं निश्चलः स्थिरः \nसनातनश्च वर्तते ।"
 },
 {
   "d": "अव्यक्तोऽयमचिन्त्योऽयमविकार्योऽयमुच्यते ।\nतस्मादेवं विदित्वैनं नानुशोचितुमर्हसि ॥ २.२५ ॥",
   "a": "अयम् अव्यक्तः । अयम् अचिन्त्यः । अयम् अविकार्यः उच्यते । तस्मात् एवम् एनं देहिनं विदित्वा अनुशोचितुं न अर्हसि ।",
   "t": "एषः आत्मा इन्द्रियाणाम् अगोचरः इति हेतोः अचिन्त्यः अस्ति । अस्य कोऽपि विकारः न भवति । \nअस्य आत्मनः एतादृशं स्वरूपं ज्ञात्वा त्वं दुःखम् अनुभवितुं नार्हसि ।"
 },
 {
   "d": "अथ चैनं नित्यजातं नित्यं वा मन्यसे मृतम् ।\nतथापि त्वं महाबाहो नैवं शोचितुमर्हसि ॥ २.२६ ॥",
   "a": "महाबाहो ! अथ च एनं नित्यजातं नित्यं वा मृतं मन्यसे तथापि त्वम् एवं शोचुतुं न अर्हसि ।",
   "t": "हे अर्जुन ! यदि पुनः त्वम् अयम् आत्मा सर्वदा जायते इति सर्वदा म्रियते इति वा मन्यसे \nतथापि एवं शोकम् अनुभवितुम् नार्हसि ।"
 },
 {
   "d": "जातस्य हि ध्रुवो मृत्युर्ध्रुवं जन्म मृतस्य च ।\nतस्मादपरिहार्येऽर्थे न त्वं शोचितुमर्हसि ॥ २.२७ ॥",
   "a": "जातस्य हि मृत्युः ध्रुवः । मृतस्य च जन्म ध्रुवम् । तस्मात् अपरिहार्ये अर्थे त्वं शोचितुं न अर्हसि ।",
   "t": "यः जायते तस्य मरणं निश्चितम् । एवं यः म्रियते तस्यापि पुनः जन्म निश्चितम् । एवं सति अस्मिन् \nविषये त्वं शोचितुं नार्हसि ।"
 },
 {
   "d": "अव्यक्तादीनि भूतानि व्यक्तमध्यानि भारत ।\nअव्यक्तनिधनान्येव तत्र का परिदेवना ॥ २.२८ ॥",
   "a": "भारत ! भूतानि अव्यक्तादीनि व्यक्तमध्यानि अव्यक्तनिधनानि एव । तत्र का परिदेवना ?",
   "t": "भूतानाम् आदिः अव्यक्तः वर्तते । अन्तः अपि अव्यक्तः वर्तते । इहलोके अनुभवगोचराणि भवन्ति \nइति हेतोः मध्यमात्रं तु व्यक्तं दृश्यते । एवं सति तादृशेषु भूतेषु आक्रन्दनेन किं प्रयोजनम् ?"
 },
 {
   "d": "आश्चर्यवत्पश्यति कश्चिदेनमाश्चर्यवद्वदति तथैव चान्यः ।\nआश्चर्यवच्चैनमन्यः शृणोति श्रुत्वाप्येनं वेद न चैव कश्चित् ॥ २.२९ ॥",
   "a": "कश्चित् एनम् आश्चर्यवत् पश्यति, तथा एव अन्यः च आश्चर्यवत् वदति, अन्यः च एनम् आश्चर्यवत् शृणोति । कश्चित् एनं श्रुत्वा अपि न च एव वेद ।",
   "t": "कश्चन एतम् आत्मानम् अद्भुतमिव पश्यति । अन्यः कश्चन एनम् अद्भुतमिव वदति । \nअपरः एनम् अद्भुतमिव शृणोति । अन्यस्तु श्रुत्वापि एनं नैव जानाति ।"
 },
 {
   "d": "देही नित्यमवध्योऽयं देहे सर्वस्य भारत ।\nतस्मात्सर्वाणि भूतानि न त्वं शोचितुमर्हसि ॥ २.३० ॥",
   "a": "भारत ! अयं देही सर्वस्य देहे नित्यम् अवध्यः । तस्मात् सर्वाणि भूतानि त्वं शोचितुं न अर्हसि ।",
   "t": "अयम् आत्मा सर्वासु अपि अवस्थासु अवध्यः । परन्तु यः नित्यं स्थावरादिषु सर्वेषु अपि स्थितः । \nदेहे वध्यमानेऽपि सः देही अवध्यः इत्यतः त्वम् एतानि भूतानि प्रति शोचितुं नार्हसि ।"
 },
 {
   "d": "स्वधर्ममपि चावेक्ष्य न विकम्पितुमर्हसि ।\nधर्म्याद्धि युद्धाच्छ्रेयोऽन्यत्क्षत्रियस्य न विद्यते ॥ २.३१ ॥",
   "a": "स्वधर्मं च अवेक्ष्य अपि विकम्पितुं न अर्हसि । क्षत्रियस्य हि धर्म्यात् युद्धात् अन्यत् श्रेय न विद्यते ।",
   "t": "स्वधर्मः चिन्त्यते चेदपि त्वया न भेतव्यम् । यतः क्षत्रियस्य धर्म्यात् युद्धात् अन्यत् श्रेयः न विद्यते । \nअतः श्रेयोभिलाषिणा त्वया युद्धम् अवश्यं कर्तव्यम् ।"
 },
 {
   "d": "यदृच्छया चोपपन्नं स्वर्गद्वारमपावृतम् ।\nसुखिनः क्षत्रियाः पार्थ लभन्ते युद्धमीदृशम् ॥ २.३२ ॥",
   "a": "पार्थ ! यदृच्छया अपपन्नम् अपावृतं च स्वर्गद्वारम् ईदृशं युद्धं सुखिनः क्षत्रियाः लभन्ते ।",
   "t": "हे अर्जुन ! इदं युद्धं त्वया यदृच्छया प्राप्तमस्ति । वस्तुतः इदं युद्धं नहि, अपि तु उद्घाटितं स्वर्गद्वारमिति \nभावय । ईदृशं युद्धं पुण्यशालिनः एव प्राप्नुवन्ति ।"
 },
 {
   "d": "अथ चेत्त्वमिमं धर्म्यं संग्रामं न करिष्यसि ।\nततः स्वधर्मं कीर्तिं च हित्वा पापमवाप्स्यसि ॥ २.३३ ॥",
   "a": "अथ चेत् त्वम् इमं धर्म्यं संग्रामं न करिष्यसि ततः स्वधर्मं कीर्तिं च हित्वा पापम् अवाप्स्यति ।",
   "t": "हे अर्जुन ! इदानीं तव धर्म्यं युद्धं प्राप्तमस्ति । यदि त्वम् एतद् युद्धं न करिष्यसि तर्हि आत्मधर्मात् च्युतः \nभविष्यसि । तव अपकीर्तिः भविष्यसि । एतेन त्वं पापमपि अवाप्स्यसि ।"
 },
 {
   "d": "अकीर्तिं चापि भूतानि कथयिष्यन्ति तेऽव्ययाम् ।\nसम्भावितस्य चाकीर्तिर्मरणादतिरिच्यते ॥ २.३४ ॥",
   "a": "भूतानि च ते अव्ययाम् अकीर्तिं चापि कथयिष्यन्ति । सम्भावितस्य च अकीर्तिः मरणात् अतिरिच्यते ।",
   "t": "यदि त्वं युद्धं न करिष्यसि तर्हि जनाः दीर्घकालं यावत् तव अकीर्तिं कथयिष्यन्ति । सर्वैरपि \nप्रशंसनीयस्य मानिनः च जनस्य अकीर्तिः मरणादपि अधिकां पीडां जनयति ।"
 },
 {
   "d": "भयाद्रणादुपरतं मंस्यन्ते त्वां महारथाः ।\nयेषां च त्वं बहुमतो भूत्वा यास्यसि लाघवम् ॥ २.३५ ॥",
   "a": "येषां त्वं बहुमतः भूत्वा लाघवं यास्यसि (तादृशाः) महारथाः च त्वां भयात् रणात् उपरतं मंस्यन्ते ।",
   "t": "अद्य यावत् भवान् सर्वेषां गौरवास्पदम् आसीत् । युद्धाकरणेन भवान् तेषां मध्ये लाघवं यास्यति । \nते महारथाः भवान् भयात् रणात् उपरतः इति चिन्तयन्ति ।"
 },
 {
   "d": "अवाच्यवादांश्च बहून्वदिष्यन्ति तवाहिताः ।\nनिन्दन्तस्तव सामर्थ्यं ततो दुःखतरं नु किम् ॥ २.३६ ॥",
   "a": "तव अहिताः तव सामर्थ्यं निन्दन्तः बहून् अवाच्यवादान् वदिष्यन्ति । ततः दुःखतरं नु किम् ?",
   "t": ""
 },
 {
   "d": "हतो वा प्राप्स्यसि स्वर्गं जित्वा वा भोक्ष्यसे महीम् ।\nतस्मादुत्तिष्ठ कौन्तेय युद्धाय कृतनिश्चयः ॥ २.३७ ॥",
   "a": "कौन्तेय ! हतः वा स्वर्गं प्राप्स्यसि । जित्वा वा (स्थितः) महीं भोक्ष्यसे । तस्मात् युद्धाय कृतनिश्चयः उत्तिष्ठ ।",
   "t": ""
 },
 {
   "d": "सुखदुःखे समे कृत्वा लाभालाभौ जयाजयौ ।\nततो युद्धाय युज्यस्व नैवं पापमवाप्स्यसि ॥ २.३८ ॥",
   "a": "सुखदुःखे लाभालाभौ जयाजयौ समे कृत्वा ततः युद्धाय युज्यस्व । एवं (कृतं चेत्) पापं न अवाप्स्यसि ।",
   "t": ""
 },
 {
   "d": "एषा तेऽभिहिता साङ्ख्ये बुद्धिर्योगे त्विमां शृणु ।\nबुद्ध्या युक्तो यया पार्थ कर्मबन्धं प्रहास्यसि ॥ २.३९ ॥",
   "a": "पार्थ ! एषा बुद्धिः ते साङ्ख्ये अभिहिता । योगे इमां शृणु, यया बुद्ध्या युक्तः कर्मबन्धं प्रहास्यसि ।",
   "t": ""
 },
 {
   "d": "नेहाभिक्रमनाशोऽस्ति प्रत्यवायो न विद्यते ।\nस्वल्पमप्यस्य धर्मस्य त्रायते महतो भयात् ॥ २.४० ॥",
   "a": "इह अभिक्रमनाशः नास्ति, प्रत्यवायः न विद्यते, अस्य धर्मस्य स्वल्पमपि महतः भयात् त्रायते ।",
   "t": ""
 },
 {
   "d": "व्यवसायात्मिका बुद्धिरेकेह कुरुनन्दन ।\nबहुशाखा ह्यनन्ताश्च बुद्धयोऽव्यवसायिनाम् ॥ २.४१ ॥",
   "a": "कुरुनन्दन ! इह व्यवसाहात्मिका बुद्धिः एका, (किन्तु) अव्यवसायिनां च बुद्धयः बहुशाखाः अनन्ताः हि ।",
   "t": ""
 },
 {
   "d": "यामिमां पुष्पितां वाचं प्रवदन्त्यविपश्चितः ।\nवेदवादरताः पार्थ नान्यदस्तीति वादिनः ॥ २.४२ ॥",
   "a": "पार्थ ! कामात्मनः स्वर्गपराः वेदवादरताः नान्यदस्ति इति वादिनः अविपश्चितः जन्मकर्मफलप्रदाम् भोगैश्वर्यगतिं प्रति क्रियाविशेषबहुलाम् इमां पुष्पितां यां वाचं प्रवदन्ति ... (2.42-2.43)",
   "t": ""
 },
 {
   "d": "कामात्मानः स्वर्गपरा जन्मकर्मफलप्रदाम् ।\nक्रियाविशेषबहुलां भोगैश्वर्यगतिं प्रति ॥ २.४३ ॥",
   "a": "पार्थ ! कामात्मनः स्वर्गपराः वेदवादरताः नान्यदस्ति इति वादिनः अविपश्चितः जन्मकर्मफलप्रदाम् भोगैश्वर्यगतिं प्रति क्रियाविशेषबहुलाम् इमां पुष्पितां यां वाचं प्रवदन्ति ... (2.42-2.43)",
   "t": ""
 },
 {
   "d": "भोगैश्वर्यप्रसक्तानां तयापहृतचेतसाम् ।\nव्यवसायात्मिका बुद्धिः समाधौ न विधीयते ॥ २.४४ ॥",
   "a": "तया अपहृतचेतसां भोगैश्वर्यप्रसक्तानां बुद्धिः व्यवसायात्मिका (सती) समाधौ न विधीयते ।",
   "t": ""
 },
 {
   "d": "त्रैगुण्यविषया वेदा निस्त्रैगुण्यो भवार्जुन ।\nनिर्द्वन्द्वो नित्यसत्त्वस्थो निर्योगक्षेम आत्मवान् ॥ २.४५ ॥",
   "a": "अर्जुन ! वेदाः त्रैगुण्यविषयाः । निस्त्रैगुण्यः निर्द्वन्द्वः नित्यसत्त्वस्थः निर्योगक्षेमः आत्मवान् भव ।",
   "t": ""
 },
 {
   "d": "यावानर्थ उदपाने सर्वतः सम्प्लुतोदके ।\nतावान्सर्वेषु वेदेषु ब्राह्मणस्य विजानतः ॥ २.४६ ॥",
   "a": "(यथा) यावान् अर्थः उदपाने (तावान्) सर्वतः सम्प्लुतोदके (तथा) यावान् विजानतः ब्राह्मणस्य सर्वेषु वेदेषु (तावान् ब्रह्मणि) ।",
   "t": ""
 },
 {
   "d": "कर्मण्येवाधिकारस्ते मा फलेषु कदाचन ।\nमा कर्मफलहेतुर्भूर्मा ते सङ्गोऽस्त्वकर्मणि ॥ २.४७ ॥",
   "a": "कर्मणि एव ते अधिकारः । फलेषु कदाचन मा (भूत्) । कर्मफलहेतुः मा भूः । अकर्मणि ते सङ्गः मा अस्तु । \nवेदेषु (तावान् ब्रह्मणि) ।",
   "t": ""
 },
 {
   "d": "योगस्थः कुरु कर्माणि सङ्गं त्यक्त्वा धनञ्जय ।\nसिद्ध्यसिद्ध्योः समो भूत्वा समत्वं योग उच्यते ॥ २.४८ ॥",
   "a": "धनञ्जय ! अत्यासक्तिं त्यक्त्वा सिद्ध्यसिद्ध्योः समः भूत्वा योगस्थः कर्माणि कुरु । समत्वं योगः उच्यते ।",
   "t": ""
 },
 {
   "d": "दूरेण ह्यवरं कर्म बुद्धियोगाद्धनञ्जय ।\nबुद्धौ शरणमन्विच्छ कृपणाः फलहेतवः ॥ २.४९ ॥",
   "a": "धनञ्जय ! बुद्धियोगात् हि कर्म दूरेण अवरम् । बुद्धौ शरणम् अन्विच्छ । फलहेतवः कृपणाः ।",
   "t": ""
 },
 {
   "d": "बुद्धियुक्तो जहातीह उभे सुकृतदुष्कृते ।\nतस्माद्योगाय युज्यस्व योगः कर्मसु कौशलम् ॥ २.५० ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "कर्मजं बुद्धियुक्ता हि फलं त्यक्त्वा मनीषिणः ।\nजन्मबन्धविनिर्मुक्ताः पदं गच्छन्त्यनामयम् ॥ २.५१ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यदा ते मोहकलिलं बुद्धिर्व्यतितरिष्यति ।\nतदा गन्तासि निर्वेदं श्रोतव्यस्य श्रुतस्य च ॥ २.५२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "श्रुतिविप्रतिपन्ना ते यदा स्थास्यति निश्चला ।\nसमाधावचला बुद्धिस्तदा योगमवाप्स्यसि ॥ २.५३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अर्जुन उवाच ।\nस्थितप्रज्ञस्य का भाषा समाधिस्थस्य केशव ।\nस्थितधीः किं प्रभाषेत किमासीत व्रजेत किम् ॥ २.५४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "श्रीभगवान् उवाच ।\nप्रजहाति यदा कामान्सर्वान्पार्थ मनोगतान् ।\nआत्मन्येवात्मना तुष्टः स्थितप्रज्ञस्तदोच्यते ॥ २.५५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "दुःखेष्वनुद्विग्नमनाः सुखेषु विगतस्पृहः ।\nवीतरागभयक्रोधः स्थितधीर्मुनिरुच्यते ॥ २.५६ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यः सर्वत्रानभिस्नेहस्तत्तत्प्राप्य शुभाशुभम् ।\nनाभिनन्दति न द्वेष्टि तस्य प्रज्ञा प्रतिष्ठिता ॥ २.५७ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यदा संहरते चायं कूर्मोऽङ्गानीव सर्वशः ।\nइन्द्रियाणीन्द्रियार्थेभ्यस्तस्य प्रज्ञा प्रतिष्ठिता ॥ २.५८ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "विषया विनिवर्तन्ते निराहारस्य देहिनः ।\nरसवर्जं रसोऽप्यस्य परं दृष्ट्वा निवर्तते ॥ २.५९ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यततो ह्यपि कौन्तेय पुरुषस्य विपश्चितः ।\nइन्द्रियाणि प्रमाथीनि हरन्ति प्रसभं मनः ॥ २.६० ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "तानि सर्वाणि संयम्य युक्त आसीत मत्परः ।\nवशे हि यस्येन्द्रियाणि तस्य प्रज्ञा प्रतिष्ठिता ॥ २.६१ ॥",
   "a": "तानि सर्वाणि संयम्य युक्तः मत्परः आसीत । यस्य वशे इन्द्रियाणि (सन्ति) तस्य प्रज्ञा प्रतिष्ठिता (भवति) ।",
   "t": "योगौ तानि सर्वाणि इन्द्रियाणि संयम्य मत्परः सन् तिष्ठेत् । एवं यः तिष्ठति तस्य प्रज्ञा निश्चला भवति ।"
 },
 {
   "d": "ध्यायतो विषयान्पुंसः सङ्गस्तेषूपजायते ।\nसङ्गात्संजायते कामः कामात्क्रोधोऽभिजायते ॥ २.६२ ॥",
   "a": "विषयान् ध्यायतः पुंसः तेषु सङ्गः उपजायते, सङ्गात् कामः सञ्जायते, कामात् क्रोधः अभिजायते,",
   "t": "शब्दादिविषयान् आलोचयतः पुरुषस्य तेषु आसक्तिः उपजायते । तस्याः आसक्तेः तृष्णा सञ्जायते । यदि सा तृष्णा प्रतिहता भवति तर्हि क्रोधः अभिजायते । "
 },
 {
   "d": "क्रोधाद्भवति संमोहः संमोहात्स्मृतिविभ्रमः ।\nस्मृतिभ्रंशाद्बुद्धिनाशो बुद्धिनाशात्प्रणश्यति ॥ २.६३ ॥",
   "a": "क्रोधात् सम्मोहः भवति, सम्मोहात् स्मृतिविभ्रमः, स्मृतिभ्रंशात् बुद्धिनाशः, बुद्धिनाशात् प्रणश्यति ।",
   "t": "क्रोधात् अविवेकः उत्पद्यते । अविवेकात् शास्त्राध्ययनेन गुरूपदेशेन वा प्राप्तायाः स्मृतेः भ्रंशः भवति । स्मृतिभ्रंशात् बुद्धिनाशः भवति । बुद्धिनाशात् पुरुषः नष्टो भवति ।"
 },
 {
   "d": "रागद्वेषवियुक्तैस्तु विषयानिन्द्रियैश्चरन् ।\nआत्मवश्यैर्विधेयात्मा प्रसादमधिगच्छति ॥ २.६४ ॥",
   "a": "विधेयात्मा तु रागद्वेषवियुक्तैः इन्द्रियैः आत्मवश्यैः विषयान् चरन् प्रसादन् अधिगच्छति ।",
   "t": "वस्तुतः रागद्वेषपुरःसरा एव इन्द्रियाणां प्रवृत्तिः भवति । परन्तु यः मुमुक्षुः अस्ति सः ताभ्यां वियुक्तत्वात् स्ववशे वर्तमानैः श्रोत्रादिभिः इन्द्रियैः विषयान् उपसेवमानः प्रसन्नताम् अधिगच्छति ।"
 },
 {
   "d": "प्रसादे सर्वदुःखानां हानिरस्योपजायते ।\nप्रसन्नचेतसो ह्याशु बुद्धिः पर्यवतिष्ठते ॥ २.६५ ॥",
   "a": "प्रसादे (सति) अस्य सर्वदुःखानां हानिः उपजायते । प्रसन्नचेतसः हि बुद्धिः आशू पर्यवतिष्ठते ।",
   "t": "तस्यां प्रसन्नतावस्थायाम् अस्य सर्वदुःखानां नाशः भवति । प्रसन्नचेतसः तस्य बुद्धिः भगवति निश्चला तिष्ठति ।"
 },
 {
   "d": "नास्ति बुद्धिरयुक्तस्य न चायुक्तस्य भावना ।\nन चाभावयतः शान्तिरशान्तस्य कुतः सुखम् ॥ २.६६ ॥",
   "a": "अयुक्तस्य बुद्धिः नास्ति । अयुक्तस्य च भावना न । अभावयतः च शान्तिः न । अशान्तस्य कुतः सुखम् ।",
   "t": "यस्य समाधिः नास्ति तस्य आत्मज्ञानस्वरूपविषया बुद्धिः न भवति । तादृशस्य अयुक्तस्य आत्मज्ञानाभिनिवेशः न भवति । आत्मज्ञानाभिनिवेशरहितस्य शान्तिः न भवति । अशान्तस्य कथं वा सुखं स्यात् ?"
 },
 {
   "d": "इन्द्रियाणां हि चरतां यन्मनोऽनुविधीयते ।\nतदस्य हरति प्रज्ञां वायुर्नावमिवाम्भसि ॥ २.६७ ॥",
   "a": "चरतां हि इन्द्रियाणां यत् मनः अनुविधीयते तत् अस्य प्रज्ञां वायुः अम्भसि नावम् इव हरति ।",
   "t": "जले प्लवमानां नौकां वायुः यत्र कुत्रापि नयति । एवं विषयेषु प्रवृत्तम् एकम् इन्द्रियमपि तस्य प्रज्ञां हरति ।"
 },
 {
   "d": "तस्माद्यस्य महाबाहो निगृहीतानि सर्वशः ।\nइन्द्रियाणीन्द्रियार्थेभ्यस्तस्य प्रज्ञा प्रतिष्ठिता ॥ २.६८ ॥",
   "a": "महाबाहो ! तस्मात् यस्य इन्द्रियाणि इन्द्रियार्थेभ्यः सर्वशः निगृहीतानि तस्य प्रज्ञा प्रतिष्ठिता (भवति) ।",
   "t": "हे महाबाहो अर्जुन ! तस्मात् त्वं जानीहि यत् यस्य इन्द्रियाणि रूपसादिभ्यः इन्द्रियार्थेभ्यः सर्वशः निगृहीतानि भवन्ति तस्य प्रज्ञा प्रतिष्ठिता भवति ।"
 },
 {
   "d": "या निशा सर्वभूतानां तस्यां जागर्ति संयमी ।\nयस्यां जाग्रति भूतानि सा निशा पश्यतो मुनेः ॥ २.६९ ॥",
   "a": "सर्वभूतानां या निशा तस्यां संयमी जागर्ति, यस्यां भूतानि जागर्ति सा पश्यतः मुनेः निशा ।",
   "t": "यस्मिन् सर्वे प्राणिनः न प्रवर्तन्ते तादृशे ब्रह्मणि योगी सर्वदा प्रवृत्तिशीलः भवति । यस्मिन् पुनः सर्वे प्राणिनः प्रवर्तन्ते तादृशे विषयप्रपञ्चे विचारवतः योगिनः प्रवृत्तिः न भवति ।"
 },
 {
   "d": "आपूर्यमाणमचलप्रतिष्ठं समुद्रमापः प्रविशन्ति यद्वत् ।\nतद्वत्कामा यं प्रविशन्ति सर्वे स शान्तिमाप्नोति न कामकामी ॥ २.७० ॥",
   "a": "आपझ आपूर्यमाणम् अचलप्रतिष्ठं समुद्रम् यद्वत् प्रविशन्ति तद्वत् सर्वे कामाः यं प्रविशन्ति सः शान्तिम् आप्नोति, कामकामी न ।",
   "t": "समुद्रः सर्वतः अपि जलैः आपूर्यमाणः भवति तथापि सः अचलं तिष्ठति । एवं सर्वेऽपि कामाः यं प्रविशन्ति सः शान्तिं प्राप्नोति । भोगे आसक्तस्तु शान्तिं न प्राप्नोति ।"
 },
 {
   "d": "विहाय कामान्यः सर्वान् पुमांश्चरति निःस्पृहः ।\nनिर्ममो निरहंकारः स शान्तिमधिगच्छति ॥ २.७१ ॥",
   "a": "यः पुमान् सर्वान् कामान् विहाय निःस्पृहः निर्ममः निरहङ्कारः चलति सः शान्तिम् अधिगच्छति ।",
   "t": "यः अनिषिद्धविषयान् सर्वान् अभिमानत्यागपूर्वकम् अनुभवति तादृशः अहङ्कारममकारवर्जितः पुरुषः मोक्षं भजति ।"
 },
 {
   "d": "एषा ब्राह्मी स्थितिः पार्थ नैनां प्राप्य विमुह्यति ।\nस्थित्वास्यामन्तकालेऽपि ब्रह्मनिर्वाणमृच्छति ॥ २.७२ ॥",
   "a": "पार्थ ! एषा ब्राह्मी स्थितिः । एनां प्राप्य न विमुह्यति । अन्तकाले अपि अस्यां स्थित्वा ब्रह्मनिर्वाणम् ऋच्छति ।",
   "t": "हे पार्थ ! इयं ब्राह्मी स्थितिः इति उच्यते । एनां स्थितिं यः प्राप्नोति सः कदापि मोहवशः न भवति । अन्तकाले अपि अस्यां स्थितौ स्थित्वा सः ब्रह्मानन्दं प्राप्नोति । "
 },
 {
   "d": "अर्जुन उवाच ।\nज्यायसी चेत्कर्मणस्ते मता बुद्धिर्जनार्दन\nतत्किं कर्मणि घोरे मां नियोजयसि केशव ॥ ३.१ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "व्यामिश्रेणेव वाक्येन बुद्धिं मोहयसीव मे ।\nतदेकं वद निश्चित्य येन श्रेयोऽहमाप्नुयाम् ॥ ३.२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "श्रीभगवान् उवाच ।\nलोकेऽस्मिन्द्विविधा निष्ठा पुरा प्रोक्ता मयानघ\nज्ञानयोगेन सांख्यानां कर्मयोगेन योगिनाम् ॥ ३.३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "न कर्मणामनारम्भान्नैष्कर्म्यं पुरुषोऽश्नुते ।\nन च संन्यसनादेव सिद्धिं समधिगच्छति ॥ ३.४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "न हि कश्चित्क्षणमपि जातु तिष्ठत्यकर्मकृत् ।\nकार्यते ह्यवशः कर्म सर्वः प्रकृतिजैर्गुणैः ॥ ३.५ ॥",
   "a": "कश्चित् जातु क्षणमपि अकर्मकृत् न हि तिष्ठति । सर्वः हि प्रकृतिजैः गुणैः अवशः कर्म कार्यते ।",
   "t": "यः कोऽपि कदापि क्षणकालमपि कर्मरहितः सन् न भवति यतः सर्वेऽपि पर्कृतिसम्भूतैः विकारैः विवशाः सन्तः कर्मकरणे प्रवर्तन्ते ।"
 },
 {
   "d": "कर्मेन्द्रियाणि संयम्य य आस्ते मनसा स्मरन् ।\nइन्द्रियार्थान्विमूढात्मा मिथ्याचारः स उच्यते ॥ ३.६ ॥",
   "a": "यः विमूढात्मा कर्मेन्द्रियाणि संयम्य इन्द्रियार्थान् मनसा स्मरन् आस्ते सः मिथ्याचारः उच्यते ।",
   "t": "यः अविवेकी पुरुषः इन्द्रियाणि निरुध्य चित्तेन विषयान् चिन्तयन् भवति सः पुरुषः कपटाचारः इति कथ्यते ।"
 },
 {
   "d": "यस्त्विन्द्रियाणि मनसा नियम्यारभतेऽर्जुन ।\nकर्मेन्द्रियैः कर्मयोगमसक्तः स विशिष्यते ॥ ३.७ ॥",
   "a": "अर्जुन! यः तु असक्तः इन्द्रियाणि मनसा नियम्य कर्मेन्द्रियैः कर्मयोगम् आरभते सः विशिष्यते ।",
   "t": "अर्जुन! यः मनुष्यः चित्तेन ज्ञानेन्द्रियाणि वशीकृत्य सङ्गरहितः सन् वाक्पाण्यादिभिः कर्म प्रारभते सः मनुष्यः श्रेष्ठः इति परिगण्यते। "
 },
 {
   "d": "नियतं कुरु कर्म त्वं कर्म ज्यायो ह्यकर्मणः ।\nशरीरयात्रापि च ते न प्रसिद्ध्येदकर्मणः ॥ ३.८ ॥",
   "a": "त्वं नियतं कर्म कुरु, कर्म हि अकर्मः ज्यायः । अकर्मणः ते शरीरयात्रापि न प्रसिद्ध्येत् ।",
   "t": "भवान् नित्यं यस्मिन् कर्मणि अधिकृतः तत् कर्म आचरतु । कर्मणः अनाचरणात् कर्माचरणं श्रेष्ठं वर्तते। किञ्च कर्माभावे भवतः शरीरसंरक्षणमपि कर्तुं न शक्यते ।"
 },
 {
   "d": "यज्ञार्थात्कर्मणोऽन्यत्र लोकोऽयं कर्मबन्धनः ।\nतदर्थं कर्म कौन्तेय मुक्तसङ्गः समाचर ॥ ३.९ ॥",
   "a": "यज्ञार्थात् कर्मणः अन्यत्र अयं लोकः कर्मबन्धनः भवति । तदर्थं कौन्तेय ! मुक्तसङ्गः कर्म समाचर ।",
   "t": "येन विष्णोः प्राप्तिः भवति ततोऽतिरिक्तं सर्वमपि कर्म जनानां बन्धकं भवति । तस्मात् फलापेक्षारहितः सन् शास्त्रोक्तं स्वकीयं कर्म समाचर ।"
 },
 {
   "d": "सहयज्ञाः प्रजाः सृष्ट्वा पुरोवाच प्रजापतिः ।\nअनेन प्रसविष्यध्वमेष वोऽस्त्विष्टकामधुक् ॥ ३.१० ॥",
   "a": "प्रजापतिः पुरा सहयज्ञाः प्रजाः सृष्ट्वा उवाच । अनेन (यज्ञेन) प्रसविष्यध्वम् । एषः वः इष्टकामधुक् अस्तु ।",
   "t": "सृष्टिकर्ता कल्पादौ वर्णोचितकर्मणा सह प्रजाः सृष्ट्वा अनेन कर्मणा भवन्तः वृद्धिं प्राप्नुवन्तु, इदं कर्म भवताम् अभीष्टदायकं भवतु इत्यवदत् ।"
 },
 {
   "d": "देवान्भावयतानेन ते देवा भावयन्तु वः ।\nपरस्परं भावयन्तः श्रेयः परमवाप्स्यथ ॥ ३.११ ॥",
   "a": "अनेन (यज्ञेन) देवान् भावयत । ते देवाः वः भावयन्तु । (एवम्) परस्परं भावयन्तः परं  श्रेयः अवाप्स्यथ ।",
   "t": "यूयम् एतेन यज्ञेन हविर्दानादिद्वारा देवान् वर्धयत । ते च देवाः युष्मान् वर्धयन्तु । एवं परस्परं वर्धयन्तः यूयम् उत्तमं हितं लभध्वम् ।"
 },
 {
   "d": "इष्टान्भोगान्हि वो देवा दास्यन्ते यज्ञभाविताः ।\nतैर्दत्तानप्रदायैभ्यो यो भुङ्क्ते स्तेन एव सः ॥ ३.१२ ॥",
   "a": "यज्ञभाविताः देवाः वः इष्टान् भोगान् दास्यन्ते । तैः दत्तान् एभ्यः अप्रदाय यः भुङ्क्ते सः स्तेन एव ।",
   "t": "यज्ञेन सन्तुष्टाः देवाः प्रार्थनां विनापि अस्मभ्यम् अभीप्सितं वस्तु प्रयच्छन्ति । तेभ्यः देवेभ्यः किमपि अदत्त्वा यः सर्वम् अनुभवति सः चोरः एव भवति ।"
 },
 {
   "d": "यज्ञशिष्टाशिनः सन्तो मुच्यन्ते सर्वकिल्बिषैः ।\nभुञ्जते ते त्वघं पापा ये पचन्त्यात्मकारणात् ॥ ३.१३ ॥",
   "a": "यज्ञशिष्टाशिनः सन्तः सर्वकिल्बिषैः मुच्यन्ते । ये च पापाः आत्मकारणात् पचन्ति ते तु अघं भुञ्जते ।",
   "t": "ये यज्ञशेषं भुञ्जते ते सर्वेऽपि श्रेष्ठाः पुरुषाः पापमुक्ताः भवन्ति । ये च पापिनः आत्मार्थं पचन्ति ते तु पापमेव भुञ्जते ।"
 },
 {
   "d": "अन्नाद्भवन्ति भूतानि पर्जन्यादन्नसम्भवः ।\nयज्ञाद्भवति पर्जन्यो यज्ञः कर्मसमुद्भवः ॥ ३.१४ ॥",
   "a": "अन्नात् भूतानि भवन्ति । पर्जन्यात् अन्नसम्भवः (भवति) । पर्जन्यः यज्ञात् भवति । यज्ञः कर्मसमुद्भवः भवति ।",
   "t": "प्राणिनः आहारात् उत्पद्यन्ते । आहारः वृष्टेः भवति । वृष्टिश्च यज्ञात् भवति । यज्ञस्तु कर्मणः समुद्भवति ।"
 },
 {
   "d": "कर्म ब्रह्मोद्भवं विद्धि ब्रह्माक्षरसमुद्भवम् ।\nतस्मात्सर्वगतं ब्रह्म नित्यं यज्ञे प्रतिष्ठितम् ॥ ३.१५ ॥",
   "a": "कर्म ब्रह्मोद्भवं विद्धि । ब्रह्म अक्षरसमुद्भवं विद्धि । तस्मात् सर्वगतं ब्रह्म नित्यं यज्ञे प्रतिष्ठितम् ।",
   "t": "कर्म वेदात् उत्पन्नम् । वेदश्च परमात्मनाः उत्पन्नौऽस्ति । अतः सर्वव्यापी भगवान् यज्ञे सदा तिष्ठति ।"
 },
 {
   "d": "एवं प्रवर्तितं चक्रं नानुवर्तयतीह यः ।\nअघायुरिन्द्रियारामो मोघं पार्थ स जीवति ॥ ३.१६ ॥",
   "a": "पार्थ ! यः एवं प्रवर्तितं चक्रं इह न अनुवर्तयति अघायुः इन्द्रियारामः सः मोघं जीवति ।",
   "t": "यः मनुष्यः अस्मिन् लोके कर्मचक्रानुगुणं नैव व्यवहरति, यः च कर्तव्यकर्म न करोति, तादृशः इन्द्रियसुखलोलुपः पापाभूयिष्टजीवितः पुरुषः व्यर्थं जीवति ।"
 },
 {
   "d": "यस्त्वात्मरतिरेव स्यादात्मतृप्तश्च मानवः ।\nआत्मन्येव च सन्तुष्टस्तस्य कार्यं न विद्यते ॥ ३.१७ ॥",
   "a": "यः मानवः आत्मरतिः एव आत्मतृप्तः आत्मन्येव सन्तुष्टः च स्यात् तस्य कार्यं न विद्यते ।",
   "t": "यः मनुष्यः आत्मप्रियः, आत्मतृप्तः आत्मसम्प्रीतश्च भवति तस्य कर्तव्यं नास्ति ।  "
 },
 {
   "d": "नैव तस्य कृतेनार्थो नाकृतेनेह कश्चन ।\nन चास्य सर्वभूतेषु कश्चिदर्थव्यपाश्रयः ॥ ३.१८ ॥",
   "a": "इह तस्य कृतेन (कर्मणा) अकृतेन कश्चन अर्थः नास्ति । अस्य च सर्वभूतेषु कश्चित् अर्थव्यपाश्रयः नास्ति । ",
   "t": "आत्मतृप्तस्य पुरुषस्य कृतेन कर्मणा अकृतेनापि कर्मणा प्रयोजनं नास्ति । प्राणिषु केनापि सह तस्य प्रयोजनस्य हेतोः सम्बन्धोऽपि नास्ति।"
 },
 {
   "d": "तस्मादसक्तः सततं कार्यं कर्म समाचर ।\nअसक्तो ह्याचरन्कर्म परमाप्नोति पूरुषः ॥ ३.१९ ॥",
   "a": "तस्मात् असक्तः सततं कार्यं कर्म समाचर । असक्तः हि कर्म आचरन् पूरुषः परम् आप्नोति ।",
   "t": "भवान् सङ्गरहितः भूत्वा कर्तव्य कर्म आचरतु । यतः सङ्गरहितः पुरुषः कर्म आचरन् परं तत्त्वं विन्दति ।"
 },
 {
   "d": "कर्मणैव हि संसिद्धिमास्थिता जनकादयः ।\nलोकसंग्रहमेवापि संपश्यन्कर्तुमर्हसि ॥ ३.२० ॥",
   "a": "जनकादयो हि कर्मणा एव संसिद्धिम् आस्थिताः । लोकसङ्ग्रहम् अपि सम्पश्यन् (कर्म) कर्तुम् अर्हसि एव ।",
   "t": "जनकादयः ज्ञानिनः कर्माचरणेन एव सद्गतिं प्राप्तवन्तः इत्यतः भवान् अपि लोकहितदृष्ट्या कर्म कर्तुम् अर्हति ।"
 },
 {
   "d": "यद्यदाचरति श्रेष्ठस्तत्तदेवेतरो जनः ।\nस यत्प्रमाणं कुरुते लोकस्तदनुवर्तते ॥ ३.२१ ॥",
   "a": "श्रेष्ठः यत् यत् आचरति (तेन) इतरः जनः तत् तत् एव आचरति । सः यत् प्रमाणं कुरुते लोकः तत् अनुवर्तते । ",
   "t": "श्रेष्ठः पुरुषः यथा आचरति इतरे साधारणाः जनाः तथैव आचरन्ति । सः यत् प्रमाणत्वेन स्वीकरोति इतरेऽपि तदेव प्रमाणत्वेन स्वीकुर्वन्ति ।"
 },
 {
   "d": "न मे पार्थास्ति कर्तव्यं त्रिषु लोकेषु किंचन ।\nनानवाप्तमवाप्तव्यं वर्त एव च कर्मणि ॥ ३.२२ ॥",
   "a": "पार्थ ! त्रिषु लोकेषु मे किञ्चन कर्तव्यं नास्ति । अनवाप्तम् अवाप्तव्यं च नास्ति । (तथापि) कर्मणि एव वर्ते । ",
   "t": "अर्जुन ! त्रिभुवनेषु मम किमपि कर्म नास्ति । अप्राप्तं प्राप्तव्यम् अपि नास्ति । तथापि अहं कर्मणि प्रवृत्तोऽस्मि ।"
 },
 {
   "d": "यदि ह्यहं न वर्तेयं जातु कर्मण्यतन्द्रितः ।\nमम वर्त्मानुवर्तन्ते मनुष्याः पार्थ सर्वशः ॥ ३.२३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "उत्सीदेयुरिमे लोका न कुर्यां कर्म चेदहम् ।\nसंकरस्य च कर्ता स्यामुपहन्यामिमाः प्रजाः ॥ ३.२४ ॥",
   "a": "अहं कर्म न कर्यां चेत् इमे लोकाः उत्सीदेयुः । सङ्करस्य च कर्ता स्याम् । इमाः प्रजाः उपहन्याम् ।",
   "t": "यदि अहं कर्म न आचरेयं तर्हि भुवनानि नाशं प्राप्नुयुः । किञ्च अहमेव सङ्करस्य कारणम्, प्रजानाशकश्च भवेयम् ।"
 },
 {
   "d": "सक्ताः कर्मण्यविद्वांसो यथा कुर्वन्ति भारत ।\nकुर्याद्विद्वांस्तथासक्तश्चिकीर्षुर्लोकसंग्रहम् ॥ ३.२५ ॥",
   "a": "भारत ! अविद्वांसः कर्मणि सक्ताः यथा कुर्वन्ति तथा विद्वान् असक्तः लोकसङ्ग्रहं चिकीर्षुः (कर्म) कुर्यात् ।",
   "t": "हे अर्जुन ! कर्मणि आसक्ताः अज्ञानिनः यथा कर्म आचरन्ति तथा अनासक्तोऽपि विद्वान् लोकोद्धाराय आचरेत् ।"
 },
 {
   "d": "न बुद्धिभेदं जनयेदज्ञानां कर्मसङ्गिनाम् ।\nजोषयेत्सर्वकर्माणि विद्वान्युक्तः समाचरन् ॥ ३.२६ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "प्रकृतेः क्रियमाणानि गुणैः कर्माणि सर्वशः ।\nअहंकारविमूढात्मा कर्ताहमिति मन्यते ॥ ३.२७ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "तत्त्ववित्तु महाबाहो गुणकर्मविभागयोः ।\nगुणा गुणेषु वर्तन्त इति मत्वा न सज्जते ॥ ३.२८ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "प्रकृतेर्गुणसंमूढाः सज्जन्ते गुणकर्मसु ।\nतानकृत्स्नविदो मन्दान्कृत्स्नविन्न विचालयेत् ॥ ३.२९ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "मयि सर्वाणि कर्माणि संन्यस्याध्यात्मचेतसा ।\nनिराशीर्निर्ममो भूत्वा युध्यस्व विगतज्वरः ॥ ३.३० ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "ये मे मतमिदं नित्यमनुतिष्ठन्ति मानवाः ।\nश्रद्धावन्तोऽनसूयन्तो मुच्यन्ते तेऽपि कर्मभिः ॥ ३.३१ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "ये त्वेतदभ्यसूयन्तो नानुतिष्ठन्ति मे मतम् ।\nसर्वज्ञानविमूढांस्तान्विद्धि नष्टानचेतसः ॥ ३.३२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "सदृशं चेष्टते स्वस्याः प्रकृतेर्ज्ञानवानपि ।\nप्रकृतिं यान्ति भूतानि निग्रहः किं करिष्यति ॥ ३.३३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "इन्द्रियस्येन्द्रियस्यार्थे रागद्वेषौ व्यवस्थितौ ।\nतयोर्न वशमागच्छेत्तौ ह्यस्य परिपन्थिनौ ॥ ३.३४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "श्रेयान्स्वधर्मो विगुणः परधर्मात्स्वनुष्ठितात् ।\nस्वधर्मे निधनं श्रेयः परधर्मो भयावहः ॥ ३.३५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अर्जुन उवाच ।\nअथ केन प्रयुक्तोऽयं पापं चरति पूरुषः\nअनिच्छन्नपि वार्ष्णेय बलादिव नियोजितः ॥ ३.३६ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "श्रीभगवान् उवाच ।\nकाम एष क्रोध एष रजोगुणसमुद्भवः ।\nमहाशनो महापाप्मा विद्ध्येनमिह वैरिणम् ॥ ३.३७ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "धूमेनाव्रियते वह्निर्यथादर्शो मलेन च ।\nयथोल्बेनावृतो गर्भस्तथा तेनेदमावृतम् ॥ ३.३८ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "आवृतं ज्ञानमेतेन ज्ञानिनो नित्यवैरिणा ।\nकामरूपेण कौन्तेय दुष्पूरेणानलेन च ॥ ३.३९ ॥",
   "a": "कौन्तेय ! ज्ञानिनः नित्यवैरिणा कामरूपेण दुष्पूरेण अनलेन च एतेन ज्ञानम्‌ आवृतम्‌ ।",
   "t": "हे अर्जुन ! अयं कामः ज्ञानिनां सर्वदा वैरी । विषयैः पूरयितुम् अशक्यः अयम् अग्निः इव भाति । तादृशः कामः ज्ञानम् आवृत्य वर्तते ।"
 },
 {
   "d": "इन्द्रियाणि मनो बुद्धिरस्याधिष्ठानमुच्यते ।\nएतैर्विमोहयत्येष ज्ञानमावृत्य देहिनम् ॥ ३.४० ॥",
   "a": "इन्द्रियाणि मनः बुद्धिश्च अस्य अधिष्ठानम्‌ उच्यते | एषः (कामः) एतैः ज्ञानम्‌ आवृत्य देहिनं विमोहयति।",
   "t": "पञ्चेन्द्रियाणि, मनः, बुद्धिः च कामस्य आश्रयाः सन्ति | एषः कामः एभिः पञ्चभिः इन्द्रियैः ज्ञानम्‌ आच्छाद्य शरीरिणं विमोहयति |"
 },
 {
   "d": "तस्मात्त्वमिन्द्रियाण्यादौ नियम्य भरतर्षभ ।\nपाप्मानं प्रजहि ह्येनं ज्ञानविज्ञाननाशनम् ॥ ३.४१ ॥",
   "a": "भरतर्षभ ! तस्मात् त्वम् आदौ इन्द्रियाणि नियम्य ज्ञानविज्ञाननाशनं पाप्मानम् एनं प्रजहि ।",
   "t": "अर्जुन ! अतः भवान् आदौ सर्वाणि इन्द्रियाणि संयम्य समस्तविज्ञाननाशकम् एनं पापं त्यजतु ।"
 },
 {
   "d": "इन्द्रियाणि पराण्याहुरिन्द्रियेभ्यः परं मनः ।\nमनसस्तु परा बुद्धिर्यो बुद्धेः परतस्तु सः ॥ ३.४२ ॥",
   "a": "इन्द्रियाणि पराणि आहुः । इन्द्रियेभ्यः परं मनः, मनसः परा बुद्धिः, यः बुद्धेः परतः सः (आत्मा) अस्ति ।",
   "t": "इन्द्रियाणि उत्कृष्टानि वदन्ति । इन्द्रियेभ्यः मनः उत्कृष्टम्, मनसः बुद्धिः उत्कृष्टा, बुद्धेः अपेक्षया आत्मा उत्कृष्टः वर्तते ।"
 },
 {
   "d": "एवं बुद्धेः परं बुद्ध्वा संस्तभ्यात्मानमात्मना ।\nजहि शत्रुं महाबाहो कामरूपं दुरासदम् ॥ ३.४३ ॥",
   "a": "महाबाहो ! एवं बुद्धेः परं बुद्ध्वा आत्मना आत्मानं संस्तभ्य कामरूपं दुरासदं शत्रुं जहि ।",
   "t": "अर्जुन ! अनेन प्रकारेण बुद्धेः अपेक्षये आत्मा अत्युत्कृष्टः इति विज्ञाय आत्मना आत्मानं विजित्य तृष्णारूपं दुर्जनं शत्रुं विनाशय ।"
 },
 {
   "d": "श्रीभगवान् उवाच ।\nइमं विवस्वते योगं प्रोक्तवानहमव्ययम्\nविवस्वान्मनवे प्राह मनुरिक्ष्वाकवेऽब्रवीत् ॥ ४.१ ॥",
   "a": "अहं विवस्वते इमम् अव्ययं योगं प्रोक्तवान् ।  विवस्वान् मनवे प्राह । मनुः इक्ष्वाकवे अब्रवीत् । ",
   "t": "इमम् अविनाशिनं योगमार्गम् अहं कल्पादौ सूरयाय अवोचम् । सूर्यः स्वपुत्राय मनवे अवोचत् । मनुः स्वपुत्राय इक्ष्वाकवे अवोचत् ।"
 },
 {
   "d": "एवं परम्पराप्राप्तमिमं राजर्षयो विदुः ।\nस कालेनेह महता योगो नष्टः परन्तप ॥ ४.२ ॥",
   "a": "परन्तप ! एवं परम्पराप्राप्तम् इमं राजर्षयः विदुः । महता कालेन सः योगः इह नष्टः ।",
   "t": "इत्थं परम्पराप्राप्तम् अमुं योगं राजर्षयः अजानन् । ततः बहोः कालात् सः योगः अत्र नष्टप्रायः सम्पन्नः ।"
 },
 {
   "d": "स एवायं मया तेऽद्य योगः प्रोक्तः पुरातनः ।\nभक्तोऽसि मे सखा चेति रहस्यं ह्येतदुत्तमम् ॥ ४.३ ॥",
   "a": "पुरातनः सः एव अयं योगः अद्य मया ते प्रोक्तः । भक्तोऽसि इति सखा च इति एतत् उत्तमं रहस्यं (त्वम्) प्रोक्तः ।",
   "t": "तमेव प्राचीनम् अत्युत्कृष्टं रहस्यं इमं योगम् अधुना भवते अकथयम्, यतः भवान् मद्भक्तः मित्रं च वर्तते । "
 },
 {
   "d": "अर्जुन उवाच ।\nअपरं भवतो जन्म परं जन्म विवस्वतः\nकथमेतद्विजानीयां त्वमादौ प्रोक्तवानिति ॥ ४.४ ॥",
   "a": "भवतः जन्म अपरम्, विवस्वतः जन्म परम् । (तस्मात्) त्वम् आदौ एतत् प्रोक्तवान् इति कथं विजानीयाम् ? ",
   "t": "भवतः जन्म अधुनातनं (अस्मिन् युगे) ज्ञायते ।  सूर्यस्य जन्म तु अतिप्राचीनम् (कल्पादौ) इति ज्ञायते । एवं  स्थिते भवान् सूर्याय इमं योगं प्रोक्तवानिति कथम् अहं विश्वसिमि?"
 },
 {
   "d": "श्रीभगवान् उवाच ।\nबहूनि मे व्यतीतानि जन्मानि तव चार्जुन\nतान्यहं वेद सर्वाणि न त्वं वेत्थ परन्तप ॥ ४.५ ॥",
   "a": "परन्तप, अर्जुन ! बहूनि मे तव च  जन्मानि व्यतीतानि ।  तानि सर्वाणि सर्वाणी अहं वेद । त्वं न वेत्थ । ",
   "t": "हे अर्जुन ! मम च तव च  जन्मानि असङ्ख्याकानि सम्पन्नानि । परन्तु तानि सर्वाणि भवान् ज्ञातुं न शक्नोति । अहं तु जानामि ।"
 },
 {
   "d": "अजोऽपि सन्नव्ययात्मा भूतानामीश्वरोऽपि सन् ।\nप्रकृतिं स्वामधिष्ठाय संभवाम्यात्ममायया ॥ ४.६ ॥",
   "a": "अजः अपि अव्ययात्मा सन् भूतानाम् ईश्वरः सन् स्वां प्रकृतिम् अधिष्ठाय आत्ममायया सम्भवामि ।",
   "t": "अहम् अविनाशी, जन्मरहितः समस्तप्राणिनां स्वामी च सन् अपि स्वकीयां शक्तिम् अवलम्ब्य योगमायया आत्मानं सृजामि। "
 },
 {
   "d": "यदा यदा हि धर्मस्य ग्लानिर्भवति भारत ।\nअभ्युत्थानमधर्मस्य तदात्मानं सृजाम्यहम् ॥ ४.७ ॥",
   "a": "भारत ! यदा यदा धर्मस्य ग्लानिः, अधर्मस्य अभ्युत्थानं भवति तदा अहम् आत्मानं सृजामि ।",
   "t": "हे अर्जुन ! यदा यदा धर्मस्य हानिः अधर्मस्य आधिक्यं च सम्भवति तदा अहम् आत्मानं लोकाय प्रकाशयामि ।  निराकारोऽपि साकारः भविष्यामि ।"
 },
 {
   "d": "परित्राणाय साधूनां विनाशाय च दुष्कृताम् ।\nधर्मसंस्थापनार्थाय सम्भवामि युगे युगे ॥ ४.८ ॥",
   "a": "साधूनां परित्राणाय दुष्कृतां च विनाशाय, धर्मसंस्थापनार्थाय च युगे युगे सम्भवामि ।",
   "t": "सत्पुरुषाणां संरक्षणाय, दुर्जनानां विनाशाय, धर्मस्य च संस्थापनाय प्रत्येकं युगे अवतरामि ।"
 },
 {
   "d": "जन्म कर्म च मे दिव्यमेवं यो वेत्ति तत्त्वतः ।\nत्यक्त्वा देहं पुनर्जन्म नैति मामेति सोऽर्जुन ॥ ४.९ ॥",
   "a": "अर्जुन ! यः मे दिव्यं जन्म कर्म च तत्त्वतः वेत्ति सः देहं त्यक्त्वा पुनर्जन्म न एति । माम् एति ।",
   "t": "हे अर्जुन ! मम एतत् जन्म कर्म च अलौकिकमिति यः पुरुषः यथार्थं जानाति सः शरीरत्यागे सति पुनर्जन्म नाप्नोति प्रत्युत मामेव प्राप्नोति ।"
 },
 {
   "d": "वीतरागभयक्रोधा मन्मया मामुपाश्रिताः ।\nबहवो ज्ञानतपसा पूता मद्भावमागताः ॥ ४.१० ॥",
   "a": "वीतरागभयक्रोधाः मन्मया माम् उपाश्रिताः ज्ञानतपसा पूताः बहवः मद्भावम् आगताः ।",
   "t": "आसक्तिं भयं क्रोधं च विना अनन्यभावनया मयि विश्वस्ताः मां च शरणमागताः ज्ञानरूपेण तपसा पवित्राः असङ्ख्याकाः मम स्वरूपं प्राप्तवन्तः ।"
 },
 {
   "d": "ये यथा मां प्रपद्यन्ते तांस्तथैव भजाम्यहम् ।\nमम वर्त्मानुवर्तन्ते मनुष्याः पार्थ सर्वशः ॥ ४.११ ॥",
   "a": "पार्थ ! ये मां यथा प्रपद्यन्ते तथा एव तान् अहं भजामि । मनुष्याः सर्वशः मम वर्त्म अनुवर्तन्ते ।",
   "t": "पार्थ ! ये मां यथा भजन्ति तान् अहं तथा एव अनुगृह्णामि । एतत् रहस्यं ज्ञात्वा बुद्धिमान् मनुष्यसमूहः सर्वप्रकारेण मम मार्गमनुसृत्य चलति ।"
 },
 {
   "d": "काङ्क्षन्तः कर्मणां सिद्धिं यजन्त इह देवताः ।\nक्षिप्रं हि मानुषे लोके सिद्धिर्भवति कर्मजा ॥ ४.१२ ॥",
   "a": "कर्मणां सिद्धि काङ्क्षन्तः इह देवताः यजन्ते । (तेषाम्) हि मानुषे लोके कर्मजा सिद्धिः क्षिप्रं भवति ।",
   "t": "कर्मप्रधाने अस्मिन् लोके कर्मणां फलमिच्छन्तः मनुष्याः देवान् पूजयन्ति, यतः कर्मणां सिद्धिः शीघ्रं भवति ।  परन्तु आत्मसिद्धिः न भवति । तदर्थं मामेव भज ।"
 },
 {
   "d": "चातुर्वर्ण्यं मया सृष्टं गुणकर्मविभागशः ।\nतस्य कर्तारमपि मां विद्ध्यकर्तारमव्ययम् ॥ ४.१३ ॥",
   "a": "गुणकर्मविभागशः मया चतुर्वर्ण्यं सृष्टम् । तस्य कर्तारम् अपि अकर्तारम् अव्ययं मां विद्धि ।",
   "t": "गुणानां कर्माणां च विभेदानुसारेण ब्राह्मण-क्षत्रिय-वैश्य-शूद्राः इति चत्वारः वर्णाः मया कृताः । तस्य चतुर्वर्णविभागस्य यद्यपि अहं कर्ता तथापि अहम् अकर्ता अनश्वरः च अस्मि । तदेतत् जानीहि । "
 },
 {
   "d": "न मां कर्माणि लिम्पन्ति न मे कर्मफले स्पृहा ।\nइति मां योऽभिजानाति कर्मभिर्न स बध्यते ॥ ४.१४ ॥",
   "a": "मां कर्माणि न लिम्पन्ति । कर्मफले मे स्पृहा न अस्ति इति यः माम् अभिजानाति सः कर्मभिः न बध्यते ।",
   "t": "कर्मफलेषु मम आशा नास्ति, अतः कर्मचरणस्य आवश्यकता नास्ति इति ये मां यथार्थम् अवगच्छन्ति ते अपि कर्मभिः बद्धाः न भवन्ति ।"
 },
 {
   "d": "एवं ज्ञात्वा कृतं कर्म पूर्वैरपि मुमुक्षुभिः ।\nकुरु कर्मैव तस्मात्त्वं पूर्वैः पूर्वतरं कृतम् ॥ ४.१५ ॥",
   "a": "एवं ज्ञात्वा पूर्वैः मुमुक्षुभिः अपि कर्म कृतम् । तस्मात् पूर्वैः कृतं पूर्वतरं कर्म एव कुरु ।",
   "t": "कर्मफलेच्छारहितं पुरुषं कर्माणि न लिम्पन्ति । इत्थं ज्ञात्वा प्राचीनकाले मुमुक्षुभिः पुरुषैः कर्म आचरितम् । अतः भवान् अपि प्राचीनैः यथा कर्म कृतं तथा कर्म आचरेत् ।"
 },
 {
"d": "किं कर्म किमकर्मेति कवयोऽप्यत्र मोहिताः ।\nतत्ते कर्म प्रवक्ष्यामि यज्ज्ञात्वा मोक्ष्यसेऽशुभात् ॥ ४.१६ ॥",
"a":  "किं कर्म किम् अकर्म इति कवयः अपि अत्र मोहिताः ।  तत् ते कर्म प्रवक्ष्यामि यत् ज्ञात्वा अशुभात् मोक्ष्यसे ।",
"t":  "किं कर्तव्यं किम् अकर्तव्यम् इति विषये पण्डिताः अपि भ्रान्ताः आसन् ।\nअतः तत् गूढं रहस्यं ते कथयामि यत् ज्ञात्वा अश्रेयसः विमुक्तः भविष्यसि ।"
},
{
"d":  "कर्मणो ह्यपि बोद्धव्यं बोद्धव्यं च विकर्मणः ।\nअकर्मणश्च बोद्धव्यं गहना कर्मणो गतिः ॥ ४.१७ ॥",
"a":  "कर्मणः अपि स्वरूपं बोद्धव्यम् । अकर्मणः च स्वरूपं बोद्धव्यम् । विकर्मणः अपि च स्वरूपं बोद्धव्यम् ।\nतस्मात् कर्मणः गतिः गहना ।",
"t":  "कर्म विहितम्, निषिद्धम्, विधिनिषेधरहितं चेति त्रविधम् ।\nएतस्य त्रिविधस्यापि कर्मणः स्वरूपं यथावत् ज्ञातव्यम् । किन्तु एतत् अत्यन्तं क्लेशेन अवगन्तव्यम् ।"
},
{
"d":  "कर्मण्यकर्म यः पश्येदकर्मणि च कर्म यः ।\nस बुद्धिमान्मनुष्येषु स युक्तः कृत्स्नकर्मकृत् ॥ ४.१८ ॥",
"a":  "यः कर्मणि अकर्म, अकर्मणि च कर्म पश्येत् सः मनुष्येषु बुद्धिमान् युक्तः कृत्स्नकर्मकृत् । ",
"t":  "यः पुरुषः स्वकृते कर्मणि फलापेक्षाशून्यत्वम्, फलापेक्षया कृते कर्मणि स्वेन अकृतत्वं च पश्यति,\nसः बुद्धिमान्, सः एव च सकलक्रमकारी । कृतेऽपि कर्मणि यः फलापेक्षां न करोति,\nफलापेक्षया कृते कर्मणि स्वकृतत्वाभावं च निर्णयति तादृशः पुरुषः प्राज्ञः सकलकर्मकारीति यावत् ।"
},
{
"d":  "यस्य सर्वे समारम्भाः कामसङ्कल्पवर्जिताः ।\nज्ञानाग्निदग्धकर्माणं तमाहुः पण्डितं बुधाः ॥ ४.१९ ॥",
"a":  "यस्य सर्व समारम्भाः कामसङ्कल्पवर्जिताः बुधाः ज्ञनाग्निदग्धकर्माणं तं पण्डितम् आहुः ।",
"t":  "यस्य कर्माणि सर्वथा शास्त्रसम्मतानि फलापेक्षारहितानि च सन्ति तस्य पुरुषस्य कर्माणि ज्ञानरूपेण वह्निना \nभस्मसात् भवन्ति । तादृशं पुरुषं ज्ञानिनः पण्डितं प्रवदन्ति । (कामः = फलाभिलाषः, सङ्कल्पः = करणेच्छा ।)"
},
{
"d":  "त्यक्त्वा कर्मफलासङ्गं नित्यतृप्तो निराश्रयः ।\nकर्मण्यभिप्रवृत्तोऽपि नैव किंचित्करोति सः ॥ ४.२० ॥",
"a":  "नित्यतृप्तः निराश्रयः कर्मफलासङ्गं त्यक्त्वा कर्मणि अभिप्रवृत्तः अपि सः किञ्चित् न एव करोति ।",
"t":  "यः पुरुषः संसारसम्बन्धं विना सदा परमानन्दपरमात्मनि नित्यतृप्तः भूत्वा फलासक्तिं विहाय \nकर्मणि अभिमुख्येन प्रवृत्तः वर्तते सः वस्तुतः कर्मशून्यः एव भवति ।"
},
{
"d":  "निराशीर्यतचित्तात्मा त्यक्तसर्वपरिग्रहः ।\nशारीरं केवलं कर्म कुर्वन्नाप्नोति किल्बिषम् ॥ ४.२१ ॥",
"a":  "निराशीः यतचित्तात्मा त्यक्तसर्वपरिग्रहः केवलं शरीरं कर्म कुर्वन्नपि किल्बिषं न आप्नोति ।",
"t":  "समस्तभोग्यविषयेषु आकाङ्क्षारहितः सकलव्यापारवर्जितः पुरुषः शरीरनिर्वहणाय कर्म करोति चेदपि सः पापं न प्राप्नोति ।"
},
{
"d":  "यदृच्छालाभसन्तुष्टो द्वन्द्वातीतो विमत्सरः ।\nसमः सिद्धावसिद्धौ च कृत्वापि न निबध्यते ॥ ४.२२ ॥",
"a":  "विमत्सरः द्वन्द्वातीतः यदृच्छालाभसन्तुष्टः सिद्धौ असिद्धौ च समः कर्म कृत्वा अपि न निबध्यते ।",
"t":  "निरपेक्षत्वात् यावत् उपस्थितं भवति तावता एव सन्तुष्टः, हर्षशोकादिद्वन्द्वात् दूरे स्थितः\nमदमत्सरासूयाविहीनः, सिद्धौ असिद्धौ निर्विकारः च, कर्मयोगी कर्माणि कृत्वापि बद्धः न भवति ।"
},
{
"d":  "गतसङ्गस्य मुक्तस्य ज्ञानावस्थितचेतसः ।\nयज्ञायाचरतः कर्म समग्रं प्रविलीयते ॥ ४.२३ ॥",
"a":  "गतसङ्गस्य मुक्तस्य ज्ञानावस्थितचेतसः यज्ञाय आचरतः कर्म समग्रं प्रविलीयते ।",
"t":  "यः आसक्तिरहितः देहाभिमानविहीनः ममताशून्यः सततं परमात्मज्ञाने स्थिरमनसः च अस्ति\nयश्च ब्रह्मार्थं कर्म आचरति तस्य समग्रमपि कर्म विनश्यति ।"
},
{
"d":  "ब्रह्मार्पणं ब्रह्म हविर्ब्रह्माग्नौ ब्रह्मणा हुतम् ।\nब्रह्मैव तेन गन्तव्यं ब्रह्मकर्मसमाधिना ॥ ४.२४ ॥",
"a":  "अर्पणं ब्रह्म । ब्रह्माग्नौ ब्रह्मणा हुतं हविः ब्रह्म । ब्रह्मकर्मसमाधिना तेन गन्तव्यं ब्रह्मैव ।",
"t":  "अत्र यत् समर्पणसाधनं वर्तते तत् ब्रह्म, यः अग्निः तत् ब्रह्म, यो यजमानः तत् ब्रह्म, यत्तेन हुतम् आज्यादि\nतदपि ब्रह्म, यत् समर्पणं तदपि ब्रह्म, तत्र अवहितेन पुरुषेण प्राप्तव्यमपि ब्रह्मैव । एवं सर्वं खलु इदं ब्रह्म ।\nन तदतिरिक्तं किञ्चिदपि वस्तु इह वर्तते ।"
},
{
"d":  "दैवमेवापरे यज्ञं योगिनः पर्युपासते ।\nब्रह्माग्नावपरे यज्ञं यज्ञेनैवोपजुह्वति ॥ ४.२५ ॥",
"a":  "अपरे योगिनः दैवम्‌ एव यज्ञं पर्युपासते । अपरे ब्रह्माग्नौ यज्ञेन एव यज्ञम् उपजुह्वति।",
"t":  "कर्मयोगिनः देवसम्बन्धिनं यज्ञं कुर्वन्ति । ज्ञानयोगिनः तु परब्रह्मरूपाग्नौ आत्मना एव आत्मानं गुह्वति ।"
},
{
"d":  "श्रोत्रादीनीन्द्रियाण्यन्ये संयमाग्निषु जुह्वति ।\nशब्दादीन्विषयानन्य इन्द्रियाग्निषु जुह्वति ॥ ४.२६ ॥",
"a":  "अन्ये श्रोत्रादीनि इन्द्रियाणि संयमाग्निषु जुह्वति । अन्ये शब्दादीन्‌ विषयान्‌ इन्द्रियाग्निषु जुह्वति।",
"t":  "केचन योगिनः श्रोत्रादीनि इन्द्रियाणि स्वाधीनतारूपाग्नौ जुह्वति । अर्थात् विषयेभ्गः विमयखीकृत्य\nइन्द्रियाणि वशीकुर्वन्ति । अन्ये केचन योगिनः शब्दादीन् इन्द्रियरूपाग्नौ जुह्वति । अर्थात् रागद्वेषरहितेन्द्रियैः\nविषयाणां ग्रहणं कुर्वन्तः तान् भस्मीकुर्वन्ति ।"
},
{
"d":  "सर्वाणीन्द्रियकर्माणि प्राणकर्माणि चापरे ।\nआत्मसंयमयोगाग्नौ जुह्वति ज्ञानदीपिते ॥ ४.२७ ॥",
"a":  "अपरे सर्वाणि इन्द्रियकर्माणि प्राणकर्माणि च ज्ञानदीपिते आत्मसंयमयोगाग्नौ जुह्वति।",
"t":  "अन्ये केचन सर्वाणि इन्द्रियाणां कर्माणि तथा प्राणानां समस्ताः क्रियाः ज्ञानेन प्रकाशमाने\nचित्तसंयमनरूपो यो योगः ताादृशे अग्नौ प्रक्षिपन्ति ।"
},
{
"d":  "द्रव्ययज्ञास्तपोयज्ञा योगयज्ञास्तथापरे ।\nस्वाध्यायज्ञानयज्ञाश्च यतयः संशितव्रताः ॥ ४.२८ ॥",
"a":  "केचित् द्रव्ययज्ञाः अन्ये तपोयज्ञाः अन्ये योगयज्ञाः तथा अपरे स्वाध्यायज्ञानयज्ञाः च संशितव्रताः यतयः भवन्ति।",
"t":  "केचन शिवार्पणबुद्द्या लोकोद्धाराय द्रव्याणि उपयुञ्जते । अन्ये स्वधर्मपालनरूपं तपोयज्ञं कुर्वन्ति ।\nकेचन चित्तवृत्तिनिरोधार्थं प्रणायामादिस्वरूपं यज्ञम् आचरन्ति ।\nअन्ये कठिनव्रताः भगवत्साक्षात्कारविषययुक्तं वेदाध्ययनशास्त्ररूपयज्ञं निर्वहन्ति ।"
},
{
"d":  "अपाने जुह्वति प्राणं प्राणेऽपानं तथापरे\nप्राणापानगती रुद्ध्वा प्राणायामपरायणाः ॥ ४.२९ ॥",
"a":  "प्राणायामपरायणाः अपरे प्राणापानगती रुद्‌ध्वा अपाने प्राणम्‌ जुह्वति, तथा प्राणे अपानं जुह्वति।",
"t":  "केचन प्राणायामपरायणाः योगिनः अपानवायौ प्राणवायुं समर्पयन्ति । इतरे प्राणवायौ अपानवायुं समर्पयन्ति ।\nएवं कुम्भक-रेचक-पूरकादिक्रमेण प्राणायामं कुर्वन्तः आत्मसंयमनं कुर्वन्ति ।"
},
{
"d":  "अपरे नियताहाराः प्राणान्प्राणेषु जुह्वति ।\nसर्वेऽप्येते यज्ञविदो यज्ञक्षपितकल्मषाः ॥ ४.३० ॥",
"a":  "अपरे नियताहाराः प्राणान्‌ प्राणेषु जुह्वति। एते सर्वे अपि यज्ञविदः यज्ञक्षपितकल्मषाः ।",
"t":  "अन्ये योगिनः नियताहारं सेवमानः प्राणायामपराायणाः अपानादिगतिं रुद्ध्वा प्राणान् प्राणेषु जुह्वति ।\nएते सर्वेऽपि यज्ञं विदन्ति । तस्मदेव यज्ञेन नाशितपापाः भवन्ति ।"
},
{
"d":  "यज्ञशिष्टामृतभुजो यान्ति ब्रह्म सनातनम् ।\nनायं लोकोऽस्त्ययज्ञस्य कुतोऽन्यः कुरुसत्तम ॥ ४.३१ ॥",
"a":  "कुरुसत्तम ! यज्ञशिष्टामृतभुजः सनातनं ब्रह्म यान्ति । अयज्ञस्य अयं लोकः नास्ति । अन्यः कुतः ?",
"t":  "अर्जुन ! यज्ञस्य अमृततुल्यं शिष्टं सेवमानाः योगिनः सनातनं परं ब्रह्म प्राप्नुवन्ति ।\nतथा ये न यजन्ते तेषाम् अत्रैव लोके सुखं नास्ति। किं पुनः परलोके ?"
},
{
"d":  "एवं बहुविधा यज्ञा वितता ब्रह्मणो मुखे ।\nकर्मजान्विद्धि तान्सर्वानेवं ज्ञात्वा विमोक्ष्यसे ॥ ४.३२ ॥",
"a":  "एवं बहुविधाः यज्ञाः ब्रह्मणः मुखे वितताः । तान्‌ सर्वान्‌ कर्मजान्‌ विद्धि । एवम्‌ ज्ञात्वा विमोक्ष्यसे।",
"t":  "एवम् अनेकप्रकारकाः यज्ञाः वेदस्य आदिमे भागे कर्मकाणडे विवृताः सन्ति । तान् सर्वान् कर्मणः एव\nउत्पन्नान् अवगच्छ । अनेन प्रकारेण यथार्थं जानासि तर्हि निष्कामकर्मयोगद्वारा संसारबन्धनात् मुक्तः भवसि ।"
},
{
"d":  "श्रेयान्द्रव्यमयाद्यज्ञाज्ज्ञानयज्ञः परन्तप ।\nसर्वं कर्माखिलं पार्थ ज्ञाने परिसमाप्यते ॥ ४.३३ ॥",
"a":  "परन्तप ! द्रव्यमयात्‌ यज्ञात्‌ ज्ञानयज्ञः श्रेयान्‌ । पार्थ ! सर्वं कर्म ज्ञाने अखिलं परिसमाप्यते ।",
"t":  "हे अर्जुन ! सांसारिकवस्तुभिः सिद्धात् यज्ञात् आत्मज्ञानरूपो यज्ञः श्रेष्ठः भवति ।\nयतः सर्वाणि कर्माणि ज्ञाने एव परिसमाप्तिं गच्छन्ति, फलत्वात्।"
},
{
"d":  "तद्विद्धि प्रणिपातेन परिप्रश्नेन सेवया ।\nउपदेक्ष्यन्ति ते ज्ञानं ज्ञानिनस्तत्त्वदर्शिनः ॥ ४.३४ ॥",
"a":  "तत्‌ प्रणिपातेन परिप्रश्नेन सेवया च विद्धि । तत्त्वदर्शिनः ज्ञानिनः ते ज्ञानम्‌ उपदेक्ष्यन्ति ।",
"t":  "भवान् नमस्कारेण, किं सत्यम् ? किम् असत्यम् ? इत्यादिना नानाविधेन प्रश्नेन शुश्रूषया च तत् ज्ञानं प्राप्नोतु ।\nतत्त्वं जानन्तः पुरुषाः भवते आत्मज्ञानम् उपदिशन्ति।"
},
{
"d":  "यज्ज्ञात्वा न पुनर्मोहमेवं यास्यसि पाण्डव ।\nयेन भूतान्यशेषेण द्रक्ष्यस्यात्मन्यथो मयि ॥ ४.३५ ॥",
"a":  "पाण्डव ! यत्‌ ज्ञात्वा पुनः मोहम्‌ एवं न यास्यसि । येन आत्मनि भूतानि अशेषेण द्रक्ष्यसि ।\nअथो मयि । (तत् ज्ञानं तत्त्वदर्शिनः ते उपदेक्ष्यन्ति ।)",
"t":  "अर्जुन ! येन ज्ञानेन भवान् पुनः एतादृशं मोहजालं न आप्नोति, येन आत्मज्ञानेन समवायबुद्ध्या स्वस्मिन् मयि च\nसर्वान् जीवान् द्रष्टुं शक्नोति तादृशं ज्ञानं तत्त्वदर्शिनः ते उपदेक्ष्यन्ति ।"
},
{
"d":  "अपि चेदसि पापेभ्यः सर्वेभ्यः पापकृत्तमः ।\nसर्वं ज्ञानप्लवेनैव वृजिनं सन्तरिष्यसि ॥ ४.३६ ॥",
"a":  "अपि चेत् सर्वेभ्यः पापेभ्यः पापकृत्तमः असि (तदा) सर्वं वृजिनं  ज्ञानप्लवेन एव सन्तरिष्यसि ।",
"t":  "भवान् सर्वेषां पापिनाम् अपेक्षया अधिकं पापं कृतवान् चेदपि ज्ञनरूपया नौकया निस्सन्देहं तं पापरूपं समुद्रं तरिष्यति।"
},
{
"d":  "यथैधांसि समिद्धोऽग्निर्भस्मसात्कुरुतेऽर्जुन ।\nज्ञानाग्निः सर्वकर्माणि भस्मसात्कुरुते तथा ॥ ४.३७ ॥",
"a":  "अर्जुन ! यथा समिद्धः अग्निः एधांसि भस्मसात्‌ कुरुते तथा ज्ञानाग्निः सर्वकर्माणि भस्मसात्‌ कुरुते ।",
"t":  "अर्जुन ! यथा प्रज्वलन् अग्निः काष्ठानि भस्मसात् करोति तथा ज्ञानाग्निः सर्वाण्यपि कर्माणि भस्मीकरोति ।"
},
{
"d":  "न हि ज्ञानेन सदृशं पवित्रमिह विद्यते ।\nतत्स्वयं योगसंसिद्धः कालेनात्मनि विन्दति ॥ ४.३८ ॥",
"a":  "ज्ञानेन सदृशं पवित्रम्‌ इह नहि विद्यते । तत्‌ स्वयं योगसंसिद्धः कालेन आत्मनि विन्दति ।",
"t":  "इह लोके ज्ञानेन समं पवित्रम् अन्यत् न किञ्चन विद्यते । तत् ज्ञानं फलापेक्षां विना कर्म कुर्वन् पुरुषः\nगच्छता कालेन चित्तशुद्धिम् अवाप्य स्वयमेव आत्मनि प्राप्नोति ।"
},
{
"d":  "श्रद्धावाँल्लभते ज्ञानं तत्परः संयतेन्द्रियः ।\nज्ञानं लब्ध्वा परां शान्तिमचिरेणाधिगच्छति ॥ ४.३९ ॥",
"a":  "संयतेन्द्रियः तत्परः श्रद्धावान्‌ ज्ञानं लभते । ज्ञानं लब्ध्वा अचिरेण परां शान्तिम्‌ अधिगच्छति ।",
"t":  "ज्ञानमार्गे आसक्तः श्रद्धावान् च जितेन्द्रियः आत्मज्ञानं प्राप्नोति । आत्मज्ञानं प्राप्य एव सः मुक्तिरूपां परमशान्तिं अधिगच्छति ।"
},
{
"d":  "अज्ञश्चाश्रद्दधानश्च संशयात्मा विनश्यति ।\nनायं लोकोऽस्ति न परो न सुखं संशयात्मनः ॥ ४.४० ॥",
"a":  "अज्ञः च अश्रद्दधानः च संशयात्मा विनश्यति । संशयात्मनः अयं लोकः नास्ति, परः न, सुखं च न ।",
"t":  "यस्य आत्मविषयकं ज्ञानं नास्ति, यस्य च तत्र श्रद्धा नास्ति तयोरेव संशयः भवति ।\nसंशये सति मुक्तिरूपं फलं न प्राप्नोति । तादृशस्य संशयात्मनः अयं लोकः न सुखदायकः, नापि परलोकः ।\nतस्य अस्मिन् संसारे क्लेशानुभवः एव गतिः ।"
},
{
"d":  "योगसन्न्यस्तकर्माणं ज्ञानसंछिन्नसंशयम् ।\nआत्मवन्तं न कर्माणि निबध्नन्ति धनञ्जय ॥ ४.४१ ॥",
"a":  "धनञ्जय ! योगसन्न्यस्तकर्माणं ज्ञानसञ्छिन्नसंशयम्‌ आत्मवन्तं कर्माणि न निबध्नन्ति ।",
"t":  "धनञ्जय ! यः सर्वाणि कर्माणि समत्वबुद्धियोगेन भगवदर्पितानि करोति, यस्य च संशयाः\nआत्मज्ञानप्राप्त्या नष्टाः सन्ति तं जितेन्द्रियं पुरुषं कर्माणि लिम्पन्ति ।"
},
{
"d":  "तस्मादज्ञानसम्भूतं हृत्स्थं ज्ञानासिनात्मनः ।\nछित्त्वैनं संशयं योगमातिष्ठोत्तिष्ठ भारत ॥ ४.४२ ॥",
"a":  "भारत ! तस्मात्‌ अज्ञानसम्भूतम्‌ आत्मनः हृत्स्थम्‌ एनं संशयं ज्ञानासिना छित्त्वा उत्तिष्ठ । योगम्‌ आतिष्ठ ।",
"t":  "हे भारत ! अतः अज्ञानेन समुत्पन्नं बुद्धिस्थितं संशयं ज्ञानरूपेण खड्गेन छित्त्वा निष्कामकर्म आचर ।\nयुद्धार्थं च सन्नद्धो भव ।"
},
{
"d":  "अर्जुन उवाच ।\nसंन्यासं कर्मणां कृष्ण पुनर्योगं च शंससि ।\nयच्छ्रेय एतयोरेकं तन्मे ब्रूहि सुनिश्चितम् ॥ ५.१ ॥",
"a":  "कृष्ण ! कर्मणां सन्न्यासं पुनः योगं च शंसति । एतयोः यत् श्रेयः तत् सनिश्चितम् एकं मे ब्रूहि ।",
"t":  "हे कृष्ण ! भवान् कर्मसन्न्यासं वदति, कर्मयोगमपि वदति । कर्मणां त्यागः, तेषां परिग्रहश्च|\nविरुद्धत्वात् युगपत् सर्वथा न सम्भवति । तस्मात् श्रेष्ठत्वेन यत् भवता निश्चितं तत् मे कथयतु ।"
},
{
"d":  "श्रीभगवान् उवाच ।\nसन्न्यासः कर्मयोगश्च निःश्रेयसकरावुभौ ।\nतयोस्तु कर्मसन्न्यासात्कर्मयोगो विशिष्यते ॥ ५.२ ॥",
"a":  "सन्न्यासः कर्मयोगः च उभौ निःश्रेयसकरौ । तयोः तु कर्मसन्न्यासात् कर्मयोगः विशीष्यते ।",
"t":  "कर्मसन्न्यासः कर्मयोगः च इति एतौ उभौ अपि मोक्षकारकौ । किन्तु कर्मसन्न्यासात् कर्मपरिग्रहः विशिष्यते ।"
},
