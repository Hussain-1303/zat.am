   "d": "श्रीभगवान् उवाच ।\nहन्त ते कथयिष्यामि दिव्या ह्यात्मविभूतयः ।\nप्राधान्यतः कुरुश्रेष्ठ नास्त्यन्तो विस्तरस्य मे ॥ १०.१९ ॥",
   "a": "कुरुश्रेष्ठ ! हन्त दिव्याः आत्मविभूतयः हि ते प्राधान्यतः कथयिष्यामि । मे विस्तरस्य अन्तः नास्ति ।",
   "t": "कुरुपुङ्गव ! अधुना स्वस्य दिव्येषु ऐश्वर्येषु प्राधान्यतः कानिचिदेव कथयिष्यामि । यतः मम विभूतिमान् अन्तः नास्ति ।"
 },
 {
   "d": "अहमात्मा गुडाकेश सर्वभूताशयस्थितः ।\nअहमादिश्च मध्यं च भूतानामन्त एव च ॥ १०.२० ॥",
   "a": "गुडाकेश ! सर्वभूताशयस्थितः आत्मा अहं भूतानाम् आदिः च मध्यं च अन्तः च एव अहम् ।",
   "t": "अर्जुन ! सर्वप्राणिहृदयस्थितः प्रत्यगात्मा अहं प्राणिनां मूलं मध्यभागः अवसानं च अस्मि ।"
 },
 {
   "d": "आदित्यानामहं विष्णुर्ज्योतिषां रविरंशुमान् ।\nमरीचिर्मरुतामस्मि नक्षत्राणामहं शशी ॥ १०.२१ ॥",
   "a": "अहम् आदित्यानां विष्णुः, ज्योतिषाम् अंशुमान् रविः, मरुतां मरीचिः अस्मि, नक्षत्राणाम् अहं शशी ।",
   "t": "अहं द्वादशादित्यानां मध्ये विष्णुनामकः आदित्यः अस्मि । प्रकाशयितॄणां मध्ये रश्मिमान् सूर्यः अस्मि । मरुद्देवतानां मध्ये मरीचिः अस्मि । नक्षत्राणां मध्ये चन्द्रः अस्मि ।"
 },
 {
   "d": "वेदानां सामवेदोऽस्मि देवानामस्मि वासवः ।\nइन्द्रियाणां मनश्चास्मि भूतानामस्मि चेतना ॥ १०.२२ ॥",
   "a": "वेदानां सामवेदः अस्मि । देवानां वासवः अस्मि । इन्द्रियाणां मनः च अस्मि । भूतानां चेतना अस्मि ।",
   "t": "चतुर्षु वेदेषु अहं सामवेदः अस्मि । सुरेषु इन्द्रः अस्मि । इन्द्रियेषु मनः अस्मि । प्राणिषु चैतन्यम् अस्मि ।"
 },
 {
   "d": "रुद्राणां शंकरश्चास्मि वित्तेशो यक्षरक्षसाम् ।\nवसूनां पावकश्चास्मि मेरुः शिखरिणामहम् ॥ १०.२३ ॥",
   "a": "रुद्राणां शङ्करः च अस्मि । यक्षरक्षसां वोत्तेशः, वसूनां पावकः, शिखरीणां मेरुः च अहम् अस्मि । ",
   "t": "एकादशसु रुद्रेषु अहं शङ्करः अस्मि । यक्षाः राक्षसाश्च ये सन्ति तेषु कुबेरः अस्मि । विख्यातेषु अष्टसु वसुषु अग्निः अस्मि । पर्वतेषु मेरुपर्वतः अस्मि ।"
 },
 {
   "d": "पुरोधसां च मुख्यं मां विद्धि पार्थ बृहस्पतिम् ।\nसेनानीनामहं स्कन्दः सरसामस्मि सागरः ॥ १०.२४ ॥",
   "a": "पार्थ ! पुरोधसां मुख्यं बृहस्पतिं मां विद्धि । सेनानीनां स्कन्दः अहम् । सरसां सागरः अस्मि ।",
   "t": "अर्जुन ! परोहितानां मुख्यः देवगुरुः बृहस्पतिः अहमेव इति जानीहि । सेनापतयः ये सन्ति तेषु अहं देवसेनापतिः स्कन्दः अस्मि । देवखतानि सरांसि यानि सन्ति तेषु सागरः अहमस्मि ।"
 },
 {
   "d": "महर्षीणां भृगुरहं गिरामस्म्येकमक्षरम् ।\nयज्ञानां जपयज्ञोऽस्मि स्थावराणां हिमालयः ॥ १०.२५ ॥",
   "a": "महर्षीणाम् अहं भृगुः । गिराम् एकम् अक्षरम् अस्मि । यज्ञानां जययज्ञः अस्मि । स्थावराणां हिमालयः अस्मि ।",
   "t": "महर्षिषु अहं भृगुमहर्षिः । शब्दरूपासु गीर्षु ओङ्कारः अस्मि । यज्ञेषु जययज्ञः अस्मि । स्थितियुक्तेषु अहं हिमालयपर्वतः अस्मि ।"
 },
 {
   "d": "अश्वत्थः सर्ववृक्षाणां देवर्षीणां च नारदः ।\nगन्धर्वाणां चित्ररथः सिद्धानां कपिलो मुनिः ॥ १०.२६ ॥",
   "a": "सर्ववृक्षाणाम् अश्वत्थः देवर्षीणां च नारदः गन्धर्वाणां चित्ररथः सिद्धानां कपिलः मुनिः (अस्मि) ।",
   "t": "सर्वेषु वृक्षेषु अहम् अश्वत्थः अस्मि । देवमुनिषु अहं नारदः । गन्धर्वेषु चित्ररथः अस्मि । जन्मना एव ज्ञानैश्वर्यादिकं प्राप्तवत्सु सिद्धेषु अहं कपिलमुनिः अस्मि ।"
 },
 {
   "d": "उच्चैःश्रवसमश्वानां विद्धि माममृतोद्भवम् ।\nऐरावतं गजेन्द्राणां नराणां च नराधिपम् ॥ १०.२७ ॥",
   "a": "अश्वानाम् अमृतोद्भवम् उच्चैःश्रवसं गजेन्द्राणाम् ऐरावतं नराणां नराधिपं च मां विद्धि ।",
   "t": "अमृतस्य हेतोः देवासुरैः यदा समुद्रमथनं कृतं तदा उच्चैःश्रवाः नाम सर्वोत्कृष्टः अश्वः उत्पन्नः । अश्वेषु मां तं जानीहि । गजश्रेष्ठेषु इन्द्रवाहनभूतम् ऐरावतं मनुष्येषु राजानं च मां जानीहि ।"
 },
 {
   "d": "आयुधानामहं वज्रं धेनूनामस्मि कामधुक् ।\nप्रजनश्चास्मि कन्दर्पः सर्पाणामस्मि वासुकिः ॥ १०.२८ ॥",
   "a": "अहम् आयुधानां वज्रं धेनूनां कामधुक् प्रजनः कन्दर्पः सर्पाणां वासुकिः च अस्मि ।",
   "t": "शस्त्रेषु अहं दधीचिः अस्थ्ना निर्मितं वज्रायुधम् अस्मि  धेनुषु कामधेनुः अस्मि । जनयिता मन्मथः अपि अस्मि । सर्पविशेषेषु वासुकिनामकः सर्पराजः अस्मि ।"
 },
 {
   "d": "अनन्तश्चास्मि नागानां वरुणो यादसामहम् ।\nपितॄणामर्यमा चास्मि यमः संयमतामहम् ॥ १०.२९ ॥",
   "a": "नगानां च अनन्तः अस्मि । यादसाम् अहं वरुणः । पितॄणां च अर्यमा अस्मि । संयमतां यमः अहम् ।",
   "t": "सर्पविशेषेषु नागराजः अनन्तः अहम् अस्मि । जलचरेषु अहं तदधिपतिः वरुणः अस्मि । पितृदैवतेषु अर्यमा अस्मि । संयमनं कुर्वत्सु अन्तकः अस्मि ।"
 },
 {
   "d": "प्रह्लादश्चास्मि दैत्यानां कालः कलयतामहम् ।\nमृगाणां च मृगेन्द्रोऽहं वैनतेयश्च पक्षिणाम् ॥ १०.३० ॥",
   "a": "दैत्येषु प्रह्लादः च अस्मि । कलयत्सु अहं कालः । मृगेषु च अहं मृगेन्द्रः । पक्षिषु च वैनतेयः ।",
   "t": "दानवेषु अहं प्रह्लादः अस्मि । गणनं कुर्वत्सु अहं समयः, मृगेषु मृगराजः सिंहः, पक्षिषु पक्षिराजः गरुडश्च अस्मि ।"
 },
 {
   "d": "पवनः पवतामस्मि रामः शस्त्रभृतामहम् ।\nझषाणां मकरश्चास्मि स्रोतसामस्मि जाह्नवी ॥ १०.३१ ॥",
   "a": "पवतां पवनः अस्मि । शस्त्रभृताम् अहं रामः, झषाणां मकरः च अस्मि । स्रोतसां जाह्नवी अस्मि ।",
   "t": "पावयितॄणां मध्ये अहं वायुः अस्मि । आयुधधारिषु कोदण्डधरः श्रीरामः अस्मि । मत्स्यादिषु मकरः अस्मि । नदीषु पवित्रतमा गङ्गा अस्मि ।"
 },
 {
   "d": "सर्गाणामादिरन्तश्च मध्यं चैवाहमर्जुन ।\nअध्यात्मविद्या विद्यानां वादः प्रवदतामहम् ॥ १०.३२ ॥",
   "a": "अर्जुन ! सर्गाणाम् आदिः अन्तः च मध्यं च अहम् एव । विद्यानाम् अध्यात्वविद्या प्रवदताम् अहं वादः अस्मि ।",
   "t": "अर्जुन ! सृष्टीनाम् आरम्भः प्रलयः स्थितिः च अहम् एव । विद्यासु ब्रह्मविद्या, वादं कुर्वत्सु सत्यशोधनफलकः सम्भाषणविशेषः अहम् ।"
 },
 {
   "d": "अक्षराणामकारोऽस्मि द्वन्द्वः सामासिकस्य च ।\nअहमेवाक्षयः कालो धाताहं विश्वतोमुखः ॥ १०.३३ ॥",
   "a": "अक्षराणाम् अकारः अस्मि । सामासिकस्य द्वन्द्वः च । अहम् एव अक्षयः कालः । विश्वतोमुखः धाता अहम् ।",
   "t": "वर्णेषु अकारः अस्मि । समाससमुदाये द्वन्द्वसमासः अस्मि । अहम् एव अक्षीणः कालः । सर्वजगतः सर्वतोमुखः कर्मफलदाता च अहम् अस्मि ।"
 },
 {
   "d": "मृत्युः सर्वहरश्चाहमुद्भवश्च भविष्यताम् ।\nकीर्तिः श्रीर्वाक्च नारीणां स्मृतिर्मेधा धृतिः क्षमा ॥ १०.३४ ॥",
   "a": "अहं सर्वहरः मृत्युः च । भविष्यताम् उद्भवः च । नारीणां कीर्तिः श्रीः वाक् स्मृतिः मेधा धृतिः क्षमा च । ",
   "t": "अहं प्राणहरः मृत्युः । अहम् उत्पत्स्यमानानां पदार्थानाम् अभ्युदयः । नारीणाम् यशः शोभा वाणी स्मृतिः मेधा धृतिः क्षमा इत्येते सद्गुणाः अहम् अस्मि ।"
 },
 {
   "d": "बृहत्साम तथा साम्नां गायत्री छन्दसामहम् ।\nमासानां मार्गशीर्षोऽहमृतूनां कुसुमाकरः ॥ १०.३५ ॥",
   "a": "तथा साम्नां बृहत्साम । धन्दसाम् अहं गायत्री । मासानां मार्गशीर्षः अहम् । ऋतूनां कुसुमाकरः ।",
   "t": "तथा सामसु अहं बृहत्साम अस्मि । छन्दोविशिष्टानाम् ऋचाम् अहं गायत्रीछन्दः अस्मि । द्वादशसु मासेषु मार्गशीर्षः अहम् । षण्णाम् ऋतूनाम् अहं वसन्तः ।"
 },
 {
   "d": "द्यूतं छलयतामस्मि तेजस्तेजस्विनामहम् ।\nजयोऽस्मि व्यवसायोऽस्मि सत्त्वं सत्त्ववतामहम् ॥ १०.३६ ॥",
   "a": "छलयतां द्यूतम् अस्मि । तेजस्विनां तेजः अहम् । जयः अस्मि । व्यवसायः अस्मि । सत्त्ववतां सत्त्वम् अहम् ।",
   "t": "छलकर्तॄणां द्यूतम् अस्मि । तेजोवतांं तेजः अहमस्मि । विजेतॄणां विजयः अस्मि । व्यवसायिनां व्यवसायः अस्मि । सात्त्विकानां सत्त्वगुणः अस्मि ।"
 },
 {
   "d": "वृष्णीनां वासुदेवोऽस्मि पाण्डवानां धनञ्जयः ।\nमुनीनामप्यहं व्यासः कवीनामुशना कविः ॥ १०.३७ ॥",
   "a": "वृष्णीनां वासुदेवः अस्मि । पाण्डवानां धनञ्जयः । मुनीनाम् अपि अहं व्यासः । कवीनाम् उशना कविः ।",
   "t": "यादवानां कृष्णः अस्मि । पाण्डवानां धनञ्जयः अहमेव अस्मि । मुनीनाम् अपि अहं व्यासः । क्रान्तदर्शिनां शुक्राचार्यः ।"
 },
 {
   "d": "दण्डो दमयतामस्मि नीतिरस्मि जिगीषताम् ।\nमौनं चैवास्मि गुह्यानां ज्ञानं ज्ञानवतामहम् ॥ १०.३८ ॥",
   "a": "दमयतां दण्डः अस्मि । जिगीषतां नीतिः अस्मि । गुह्यानां मौनं च एव अस्मि । ज्ञानवतां ज्ञानम् अहम् ।",
   "t": "दमयितॄणां दमनम् अस्मि । जेतुम् इच्छतां नीतिः अस्मि । गोप्यानां मौनम् अपि । ज्ञानीनां प्रज्ञानम् अहम् अस्मि ।"
 },
 {
   "d": "यच्चापि सर्वभूतानां बीजं तदहमर्जुन ।\nन तदस्ति विना यत्स्यान्मया भूतं चराचरम् ॥ १०.३९ ॥",
   "a": "अर्जुन ! सर्वभूतानां यत् बीजं तत् अपि अहम् । मया विना चराचरं भूतं यत् स्यात् तत् नास्ति ।",
   "t": "अर्जुन ! सर्वभूतानां यत् प्ररोहकारणम् अस्ति तत् अपि अहम् । मया विरहितं यत्किञ्चिदपि स्थावरजङ्गमं नैव भवितुम् अर्हति । तादृशं किमपि न विद्यते एव ।"
 },
 {
   "d": "नान्तोऽस्ति मम दिव्यानां विभूतीनां परन्तप ।\nएष तूद्देशतः प्रोक्तो विभूतेर्विस्तरो मया ॥ १०.४० ॥",
   "a": "परन्तप ! मम दिव्यानां विभूतीनाम् अन्तः न अस्ति । मया एषः विभूतेः विस्तरः तु उद्देशतः प्रोक्तः ।",
   "t": "अर्जुन ! मम दिव्याः विभूतयः अनन्ताः सन्ति । ताः सर्वाः अत्र नैव उक्ताः । अधुना यदुक्तं तत्तु केवलं मम विभूतीनाम् एकदेशमात्रम् अस्ति ।"
 },
 {
   "d": "यद्यद्विभूतिमत्सत्त्वं श्रीमदूर्जितमेव वा ।\nतत्तदेवावगच्छ त्वं मम तेजोंऽशसंभवम् ॥ १०.४१ ॥",
   "a": "यद्यत् विभूतिमत् श्रीमत् ऊर्जिमत् एव वा सत्त्वं तत्तत् एव मम तेजोंऽशसम्भवमं त्वम् अवगच्छ ।",
   "t": "प्रभावयुक्तं शोभावहं बलसहितं वा यद्यत् वस्तु तत् सकलं मम ऐश्वर्यात् उत्पन्नम् इति त्वं जानीहि ।"
 },
 {
   "d": "अथवा बहुनैतेन किं ज्ञातेन तवार्जुन ।\nविष्टभ्याहमिदं कृत्स्नमेकांशेन स्थितो जगत् ॥ १०.४२ ॥",
   "a": "अर्जुन ! अथवा एतेन बहुना ज्ञातेन तव किम् ? अहम् इदं कृत्स्नं जगत् एकांशेन विष्टभ्य स्थितः ।",
   "t": "अर्जुन ! अथवा मम विभूतीनां सर्वमपि विस्तरं विदित्वा तव किम् अधिकं प्रयोजनम् ? अतः संक्षेपतः इदं जानीहि यत् अहं निखिलमपि एतत् जगत् एकावयवेन व्याप्य स्थितः अस्मि ।"
 },
 {
   "d": "अर्जुन उवाच ।\nमदनुग्रहाय परमं गुह्यमध्यात्मसंज्ञितम् ।\nयत्त्वयोक्तं वचस्तेन मोहोऽयं विगतो मम ॥ ११.१ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "भवाप्ययौ हि भूतानां श्रुतौ विस्तरशो मया ।\nत्वत्तः कमलपत्राक्ष माहात्म्यमपि चाव्ययम् ॥ ११.२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "एवमेतद्यथात्थ त्वमात्मानं परमेश्वर ।\nद्रष्टुमिच्छामि ते रूपमैश्वरं पुरुषोत्तम ॥ ११.३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "मन्यसे यदि तच्छक्यं मया द्रष्टुमिति प्रभो ।\nयोगेश्वर ततो मे त्वं दर्शयात्मानमव्ययम् ॥ ११.४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "श्रीभगवान् उवाच ।\nपश्य मे पार्थ रूपाणि शतशोऽथ सहस्रशः ।\nनानाविधानि दिव्यानि नानावर्णाकृतीनि च ॥ ११.५ ॥",
   "a": "पार्थ ! शतशः अथ सहस्रशः नानाविधानि दिव्यानि नानावर्णाकृतीनि च मे रूपाणि पश्य ।",
   "t": "अर्जुन ! बहुप्रकाराणि दिव्यानि नानावर्णाकाराणि च मम स्वरूपाणि च पश्य ।"
 },
 {
   "d": "पश्यादित्यान्वसून्रुद्रानश्विनौ मरुतस्तथा ।\nबहून्यदृष्टपूर्वाणि पश्याश्चर्याणि भारत ॥ ११.६ ॥",
   "a": "भारत ! आदित्यान्‌ वसून्‌ रुद्रान्‌ अश्विनौ तथा मरुतः पश्य, अदृष्टपूर्वाणि बहूनि आश्चर्याणि पश्य ।",
   "t": "अर्जुन ! द्वादशादित्यान् अष्टवसून् एकादशरुद्रान् देववैद्यौ तथा सत्पमरुतः पश्य । पूर्वम् अनवलोकितानि नानासङ्ख्याकानि अद्भुतानि अत्र पश्य ।"
 },
 {
   "d": "इहैकस्थं जगत्कृत्स्नं पश्याद्य सचराचरम् ।\nमम देहे गुडाकेश यच्चान्यद् द्रष्टुमिच्छसि ॥ ११.७ ॥",
   "a": "गुडाकेश ! अद्य एकस्थं सचराचरं कृत्स्नं जगत्‌ अन्यत्‌ च यत्‌ द्रष्टुम्‌ इच्छसि (तत्सर्वम्) इह मम देहे पश्य ।",
   "t": "गुडाकेश ! इदानीम् एकत्रैव वर्तमानं स्थावरगङ्गमात्मकं समग्रमपि भुवनं पश्य । अन्यदपि यत् यत् द्रष्टुमिच्छसि तत्सर्वं ममास्मिन् शरीरे पश्य ।"
 },
 {
   "d": "न तु मां शक्यसे द्रष्टुमनेनैव स्वचक्षुषा ।\nदिव्यं ददामि ते चक्षुः पश्य मे योगमैश्वरम् ॥ ११.८ ॥",
   "a": "अनेन स्वचक्षुषा एव मां द्रष्टुं न शक्यसे । ते दिव्यं चक्षुः ददामि । ऐश्वरं मे योगं पश्य ।",
   "t": "एतेन नेत्रेण एव मां द्रष्टुं त्वं समर्थः न भवसि । अतः तुभ्यम् अलौकिकं नेत्रं यच्छामि येन ईश्वरस्य मम असाधारणं सामर्थ्यं पश्य ।"
 },
 {
   "d": "सञ्जय उवाच ।\nएवमुक्त्वा ततो राजन्महायोगेश्वरो हरिः\nदर्शयामास पार्थाय परमं रूपमैश्वरम् ॥ ११.९ ॥",
   "a": "राजन्‌ ! महायोगेश्वरः हरिः एवम्‌ उक्त्वा ततः परमम्‌ ऐश्वरं रूपं पार्थाय दर्शयामास ।",
   "t": "धृतराष्ट्र ! महान् योगेश्वरः कृष्णः इत्थम् उक्त्वा पश्चात् स्वीयम् उत्कृष्टम् ईश्वरसम्बन्धिनम् आकारं पार्थाय प्रदर्शितवान् ।"
 },
 {
   "d": "अनेकवक्त्रनयनमनेकाद्भुतदर्शनम् ।\nअनेकदिव्याभरणं दिव्यानेकोद्यतायुधम् ॥ ११.१० ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "दिव्यमाल्याम्बरधरं दिव्यगन्धानुलेपनम् ।\nसर्वाश्चर्यमयं देवमनन्तं विश्वतोमुखम् ॥ ११.११ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "दिवि सूर्यसहस्रस्य भवेद्युगपदुत्थिता ।\nयदि भाः सदृशी सा स्याद्भासस्तस्य महात्मनः ॥ ११.१२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "तत्रैकस्थं जगत्कृत्स्नं प्रविभक्तमनेकधा ।\nअपश्यद्देवदेवस्य शरीरे पाण्डवस्तदा ॥ ११.१३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "ततः स विस्मयाविष्टो हृष्टरोमा धनञ्जयः ।\nप्रणम्य शिरसा देवं कृताञ्जलिरभाषत ॥ ११.१४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अर्जुन उवाच ।\nपश्यामि देवांस्तव देव देहे सर्वांस्तथा भूतविशेषसंघान् ।\nब्रह्माणमीशं कमलासनस्थमृषींश्च सर्वानुरगांश्च दिव्यान् ॥ ११.१५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अनेकबाहूदरवक्त्रनेत्रं पश्यामि त्वां सर्वतोऽनन्तरूपम् ।\nनान्तं न मध्यं न पुनस्तवादिं पश्यामि विश्वेश्वर विश्वरूप ॥ ११.१६ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "किरीटिनं गदिनं चक्रिणं च तेजोराशिं सर्वतो दीप्तिमन्तम् ।\nपश्यामि त्वां दुर्निरीक्ष्यं समन्ताद्दीप्तानलार्कद्युतिमप्रमेयम् ॥ ११.१७ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "त्वमक्षरं परमं वेदितव्यं त्वमस्य विश्वस्य परं निधानम् ।\nत्वमव्ययः शाश्वतधर्मगोप्ता सनातनस्त्वं पुरुषो मतो मे ॥ ११.१८ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अनादिमध्यान्तमनन्तवीर्यमनन्तबाहुं शशिसूर्यनेत्रम् ।\nपश्यामि त्वां दीप्तहुताशवक्त्रं स्वतेजसा विश्वमिदं तपन्तम् ॥ ११.१९ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "द्यावापृथिव्योरिदमन्तरं हि व्याप्तं त्वयैकेन दिशश्च सर्वाः ।\nदृष्ट्वाद्भुतं रूपमुग्रं तवेदं लोकत्रयं प्रव्यथितं महात्मन् ॥ ११.२० ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अमी हि त्वां सुरसंघा विशन्ति केचिद्भीताः प्राञ्जलयो गृणन्ति ।\nस्वस्तीत्युक्त्वा महर्षिसिद्धसंघाः स्तुवन्ति त्वां स्तुतिभिः पुष्कलाभिः ॥ ११.२१ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "रुद्रादित्या वसवो ये च साध्या विश्वेऽश्विनौ मरुतश्चोष्मपाश्च ।\nगन्धर्वयक्षासुरसिद्धसंघा वीक्षन्ते त्वां विस्मिताश्चैव सर्वे ॥ ११.२२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "रूपं महत्ते बहुवक्त्रनेत्रं महाबाहो बहुबाहूरुपादम् ।\nबहूदरं बहुदंष्ट्राकरालं दृष्ट्वा लोकाः प्रव्यथितास्तथाहम् ॥ ११.२३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "नभःस्पृशं दीप्तमनेकवर्णं व्यात्ताननं दीप्तविशालनेत्रम् ।\nदृष्ट्वा हि त्वां प्रव्यथितान्तरात्मा धृतिं न विन्दामि शमं च विष्णो ॥ ११.२४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "दंष्ट्राकरालानि च ते मुखानि दृष्ट्वैव कालानलसन्निभानि ।\nदिशो न जाने न लभे च शर्म प्रसीद देवेश जगन्निवास ॥ ११.२५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अमी च त्वां धृतराष्ट्रस्य पुत्राः सर्वे सहैवावनिपालसंघैः ।\nभीष्मो द्रोणः सूतपुत्रस्तथासौ सहास्मदीयैरपि योधमुख्यैः ॥ ११.२६ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "वक्त्राणि ते त्वरमाणा विशन्ति दंष्ट्राकरालानि भयानकानि ।\nकेचिद्विलग्ना दशनान्तरेषु संदृश्यन्ते चूर्णितैरुत्तमाङ्गैः ॥ ११.२७ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यथा नदीनां बहवोऽम्बुवेगाः समुद्रमेवाभिमुखा द्रवन्ति ।\nतथा तवामी नरलोकवीरा विशन्ति वक्त्राण्यभिविज्वलन्ति ॥ ११.२८ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यथा प्रदीप्तं ज्वलनं पतङ्गा विशन्ति नाशाय समृद्धवेगाः ।\nतथैव नाशाय विशन्ति लोकास्तवापि वक्त्राणि समृद्धवेगाः ॥ ११.२९ ॥",
   "a": "यथा समृद्धवेगाः पतङ्गाः प्रदीप्तं ज्वलनं नाशाय विशन्ति तथा एव समृद्धवेगाः लोकाः तव वक्त्राणि अपि नाशाय विशन्ति ।",
   "t": "यथा तीव्रगतयः पतङ्गाः ज्वलितम् अग्निम् आत्मविनाशाय प्रविशन्ति तथा एव तीव्रगमनाः प्राणिनः तव मुखानि स्वविनाशाय एव प्रविशन्ति ।"
 },
 {
   "d": "लेलिह्यसे ग्रसमानः समन्ताल्लोकान्समग्रान्वदनैर्ज्वलद्भिः ।\nतेजोभिरापूर्य जगत्समग्रं भासस्तवोग्राः प्रतपन्ति विष्णो ॥ ११.३० ॥",
   "a": "ज्वलद्भिः वदनैः समग्रान्‌ लोकान्‌ ग्रसमानः समन्तात्‌ लेलिह्यसे । विष्णो ! तव उग्राः भासः तेजोभिः आपूर्य समग्रं जगत्‌ प्रतपन्ति ।",
   "t": "त्वं प्रकाशमानैः आननैः सर्वतः समग्रान् लोकान् ग्रसन् आस्वादयसि । हे विष्णो ! तव तीक्ष्णाः किरणाः कान्तिभिः समस्तं जगत् सम्पूर्य नितरां तापयन्ति ।"
 },
 {
   "d": "आख्याहि मे को भवानुग्ररूपो नमोऽस्तु ते देववर प्रसीद ।\nविज्ञातुमिच्छामि भवन्तमाद्यं न हि प्रजानामि तव प्रवृत्तिम् ॥ ११.३१ ॥",
   "a": "देववर ! उग्ररूपः भवान्‌ कः मे आख्याहि ।  ते नमः अस्तु । प्रसीद । आद्यं भवन्तं विज्ञातुम्‌ इच्छामि । तव प्रवृत्तिं न हि प्रजानामि ।",
   "t": "देवश्रेष्ठ ! भयङ्करस्वरूपः त्वं कः इति मह्यं कथय । तव प्रणामः अस्तु । अनुगृहाण । प्रथमं त्वां वेदितुम् इच्छामि । तव प्रवृत्तिं न जानामि ।"
 },
 {
   "d": "श्रीभगवान् उवाच ।\nकालोऽस्मि लोकक्षयकृत्प्रवृद्धो लोकान्समाहर्तुमिह प्रवृत्तः ।\nऋतेऽपि त्वां न भविष्यन्ति सर्वे येऽवस्थिताः प्रत्यनीकेषु योधाः ॥ ११.३२ ॥",
   "a": "लोकक्षयकृत्‌ प्रवृद्धः कालः अस्मि । लोकान्‌ समाहर्तुम्‌ इह प्रवृत्तः । त्वाम्‌ ऋते प्रत्यनीकेषु ये अवस्थिताः योधाः सर्वे अपि न भविष्यन्ति ।",
   "t": "अहं सर्वान् लोकान् संहर्तुं प्रवृद्धः कालोऽस्मि । प्रतिपक्षसैन्येषु ये योधाः सन्ति भीष्मद्रोणप्रभृतयः तान् त्वं न मारयसि चेदपि अवश्यं मया ते मारिताः भविष्यन्ति ।"
 },
 {
   "d": "तस्मात्त्वमुत्तिष्ठ यशो लभस्व जित्वा शत्रून् भुङ्क्ष्व राज्यं समृद्धम् ।\nमयैवैते निहताः पूर्वमेव निमित्तमात्रं भव सव्यसाचिन् ॥ ११.३३ ॥",
   "a": "सव्यसाचिन् ‌! तस्मात्‌ त्वम्‌ उत्तिष्ठ, यशः लभस्व । शत्रून्‌ जित्वा समृद्धं राज्यं भुङ्‌क्ष्व । एते मया एव पूर्वम्‌ एव निहताः । निमित्तमात्रं भव ।",
   "t": "तस्मात् हे अर्जुन ! त्वम् उत्तिष्ठ, कीर्तिं प्राप्नुहि । अरीन् विजित्य निष्कण्टकम् आधिपत्यम् अनुभव । एते मया इतः पूर्वमेव विनाशिताः । त्वं निमित्तमात्रं भव ।"
 },
 {
   "d": "द्रोणं च भीष्मं च जयद्रथं च कर्णं तथान्यानपि योधवीरान् ।\nमया हतांस्त्वं जहि मा व्यथिष्ठा युध्यस्व जेतासि रणे सपत्नान् ॥ ११.३४ ॥",
   "a": "द्रोणं च भीष्मं च जयद्रथं च कर्णं तथा अन्यान्‌ अपि योधवीरान्‌ मया हतान्‌ त्वं जहि । मा व्यथिष्ठाः । युध्यस्व । रणे सपत्नान्‌ जेता असि ।",
   "t": "द्रोणः च भीष्मं च जयद्रथं च कर्णं तथा अन्यान् अपि योधवीरान् मया हतान् त्वं जहि । मा व्यथिष्ठाः । युध्यस्व । रणे सपत्नान् जेतासि ।"
 },
 {
   "d": "सञ्जय उवाच ।\nएतच्छ्रुत्वा वचनं केशवस्य कृताञ्जलिर्वेपमानः किरीटी ।\nनमस्कृत्वा भूय एवाह कृष्णं सगद्गदं भीतभीतः प्रणम्य ॥ ११.३५ ॥",
   "a": "किरीटी केशवस्य एतत्‌ वचनंम्‌ श्रुत्वा कृताञ्जलिः वेपमानः भीतभीतः कृष्णं नमस्कृत्वा सगद्गदं भूयः एव प्रणम्य आह।",
   "t": "श्रीकृष्णस्य एतत् वाक्यं श्रुत्वा अर्जुनः मुकुलितकरः कम्पमानः भयसहितश्च सन् कृष्णं नमस्कृत्य गद्गदितकण्ठः पुनरपि प्रणम्य अवोचत् ।"
 },
 {
   "d": "अर्जुन उवाच ।\nस्थाने हृषीकेश तव प्रकीर्त्या जगत्प्रहृष्यत्यनुरज्यते च ।\nरक्षांसि भीतानि दिशो द्रवन्ति सर्वे नमस्यन्ति च सिद्धसंघाः ॥ ११.३६ ॥",
   "a": "हृषीकेश ! तव प्रकीर्त्या जगत्‌ प्रहृष्यति अनुरज्यते च । रक्षांसि भीतानि दिशः द्रवन्ति । सर्वे सिद्धसङ्घाः च नमस्यन्ति इति स्थाने । ",
   "t": "कृष्ण ! तव सङ्कीर्तनेन जगत् सन्तुष्यति त्वयि अनुरक्तं च भवति । राक्षसाः भीताः सन्तः दिशः पलायन्ते । सर्वे सिद्धसमुदायाः अपि प्रणमन्ति इत्येतत् सर्वं युक्तम् ।"
 },
 {
   "d": "कस्माच्च ते न नमेरन्महात्मन् गरीयसे ब्रह्मणोऽप्यादिकर्त्रे ।\nअनन्त देवेश जगन्निवास त्वमक्षरं सदसत्तत्परं यत् ॥ ११.३७ ॥",
   "a": "महात्मन्‌ ! गरीयसे ब्रह्मणः अपि आदिकर्त्रे ते कस्मात्‌ च न नमेरन्‌ ? अनन्त देवेश जगन्निवास ! त्वं सत्‌ असत्‌  (च) तत्‌परं यत्‌ अक्षरम्‌ (तदपि) ।",
   "t": "हे महात्मन् ! त्वं ब्रह्मणोऽपि जनकः । तादृशं त्वां जनाः किं कारणं न नमस्कुर्वन्ति ? अवश्यं ते नमस्कुर्वन्ति । हे जगन्निकेतन ! त्वं यदिदं व्यक्तं तदसि । यच्च अव्यक्तं तदसि । ताभ्यां परं यदक्षरं ब्रह्म तदप्यसि ।"
 },
 {
   "d": "त्वमादिदेवः पुरुषः पुराणस्त्वमस्य विश्वस्य परं निधानम् ।\nवेत्तासि वेद्यं च परं च धाम त्वया ततं विश्वमनन्तरूप ॥ ११.३८ ॥",
   "a": "अनन्तरूप ! त्वम्‌ आदिदेवः पुराणः पुरुषः । त्वम्‌ अस्य विश्वस्य परं निधानं वेत्ता असि । वेद्यं च परं धाम च । विश्वं त्वया ततम्‌ ।",
   "t": "अगण्यस्वरूप ! भवान् प्रथमदेवः, प्राचीनः पुरुषः । त्वम् एतस्य जगतः परमः आश्रयः । त्वं ज्ञाता असि । ज्ञेयं च असि । प्रकृष्टं पदम् अपि असि । जगत् भवता व्याप्तम् ।"
 },
 {
   "d": "वायुर्यमोऽग्निर्वरुणः शशाङ्कः प्रजापतिस्त्वं प्रपितामहश्च ।\nनमो नमस्तेऽस्तु सहस्रकृत्वः पुनश्च भूयोऽपि नमो नमस्ते ॥ ११.३९ ॥",
   "a": "त्वं वायुः यमः अग्निः वरुणः शशाङ्कः प्रजापतिः प्रपितामहः च । ते सहस्रकृत्वः नमः नमः अस्तु । पुनः च भूयः अपि ते नमः नमः ।",
   "t": "त्वं वायुः यमः अग्निः वरुणः शशाङ्कः प्रजापतिः प्रपितामहः च । तुभ्यं सहस्रवारं प्रणामं करोमि । पुनः पुनः प्रणामं करोमि । नमो नमः अस्तु । पुनः च भूयः अपि तुभ्यं नमो नमः ।"
 },
 {
   "d": "नमः पुरस्तादथ पृष्ठतस्ते नमोऽस्तु ते सर्वत एव सर्व ।\nअनन्तवीर्यामितविक्रमस्त्वं सर्वं समाप्नोषि ततोऽसि सर्वः ॥ ११.४० ॥",
   "a": "पुरस्तात्‌ अथ पृष्ठतः ते नमः । सर्व ते सर्वतः एव नमः अस्तु । अनन्तवीर्य ! त्वम्‌ अमितविक्रमः सर्वं समाप्नोषि । ततः सर्वः असि ।",
   "t": "पुरतः पश्चात् च तुभ्यं नमोऽस्तु । सर्वात्मक ! तुभ्यं परितः नमः अस्तु । अपरिमितविक्रम ! त्वम् अगणितपराक्रमः समस्तं व्याप्नोषि । तस्मात् सकलः असि ।"
 },
 {
   "d": "सखेति मत्वा प्रसभं यदुक्तं हे कृष्ण हे यादव हे सखेति ।\nअजानता महिमानं तवेदं मया प्रमादात्प्रणयेन वापि ॥ ११.४१ ॥",
   "a": "तव महिमानम्‌ इदम्‌ अजानता मया प्रमादात्‌ प्रणयेन वा अपि यत् सखा इति मत्वा प्रसभं 'हे कृष्ण ! हे यादव, हे सखे !' इति उक्तम्‌, विहारशय्यासनभोजनेषु अवहासार्थम्‌ एकः अथवा तत् समक्षं वा यत् असत्कृतः असि अच्युत । तत्‌ सर्वम् अहम्‌ अप्रमेयं त्वां क्षामये । (११.४१ + ११.४२) ",
   "t": "हे कृष्ण ! तवेदं माहात्म्यम् अनवगच्छन् अहं पूर्वम् अनवधानेन प्रणयेन वा साधारणपुरुषधिया हे कृष्ण ! हे यादव ! हे सखे ! इत्यादिना शब्देन त्वां सम्बोधितवान् तथा विहारे शयने उपवेशने भोजने च मित्राणां पुरतः पृष्ठतो वा त्वाम् अपहासार्थं तिरस्कृतवान् तत्सर्वं यथा त्वं मां क्षाम्यसि तथा करोमि । अर्थात् तदपराधप्रायश्चित्तार्थं शुश्रूषानमस्कारादिकं सर्वमपि इदानीं करोमि इत्यर्थः । (११.४१ + ११.४२)"
 },
 {
   "d": "यच्चावहासार्थमसत्कृतोऽसि विहारशय्यासनभोजनेषु ।\nएकोऽथवाप्यच्युत तत्समक्षं तत्क्षामये त्वामहमप्रमेयम् ॥ ११.४२ ॥",
   "a": "तव महिमानम्‌ इदम्‌ अजानता मया प्रमादात्‌ प्रणयेन वा अपि यत् सखा इति मत्वा प्रसभं 'हे कृष्ण ! हे यादव, हे सखे !' इति उक्तम्‌, विहारशय्यासनभोजनेषु अवहासार्थम्‌ एकः अथवा तत् समक्षं वा यत् असत्कृतः असि अच्युत । तत्‌ सर्वम् अहम्‌ अप्रमेयं त्वां क्षामये । (११.४१ + ११.४२) ",
   "t": "हे कृष्ण ! तवेदं माहात्म्यम् अनवगच्छन् अहं पूर्वम् अनवधानेन प्रणयेन वा साधारणपुरुषधिया हे कृष्ण ! हे यादव ! हे सखे ! इत्यादिना शब्देन त्वां सम्बोधितवान् तथा विहारे शयने उपवेशने भोजने च मित्राणां पुरतः पृष्ठतो वा त्वाम् अपहासार्थं तिरस्कृतवान् तत्सर्वं यथा त्वं मां क्षाम्यसि तथा करोमि । अर्थात् तदपराधप्रायश्चित्तार्थं शुश्रूषानमस्कारादिकं सर्वमपि इदानीं करोमि इत्यर्थः । (११.४१ + ११.४२)"
 },
 {
   "d": "पितासि लोकस्य चराचरस्य त्वमस्य पूज्यश्च गुरुर्गरीयान् ।\nन त्वत्समोऽस्त्यभ्यधिकः कुतोऽन्यो लोकत्रयेऽप्यप्रतिमप्रभाव ॥ ११.४३ ॥",
   "a": "त्वं चराचरस्य अस्य लोकस्य पिता असि पूज्यः गुरुः गरीयान्‌ च । अप्रतिमप्रभाव ! लोकत्रये अपि त्वत्समः न अस्ति अभ्यधिकः अन्यः कुतः ।",
   "t": "भवान् स्थावरजङ्गमस्य एतस्य लोकस्य जनकः असि । अर्च्यः आचार्यः गुरुतरः च असि ।"
 },
 {
   "d": "तस्मात्प्रणम्य प्रणिधाय कायं प्रसादये त्वामहमीशमीड्यम् ।\nपितेव पुत्रस्य सखेव सख्युः प्रियः प्रियायार्हसि देव सोढुम् ॥ ११.४४ ॥",
   "a": "देव तस्मात्‌ प्रणम्य कायं प्रणिधाय ईड्यम्‌ ईशं त्वाम् अहं प्रसादये । पुत्रस्य पिता इव, सख्युः सखा इव, प्रियायाः प्रियः सोढुम् अर्हसि ।",
   "t": "प्रभो ! तस्मात् नमस्कृत्य शरीरं नम्रं कृत्वा स्तुत्यं प्रभुं त्वाम् अहं प्रसादयामि । पुत्रस्य अपराधं पिता इव, सुहृदः अपराधं सुहृत् इव, प्रेयस्याः अपराधं प्रियः इव, मम अपराधं क्षन्तुम् अर्हसि ।"
 },
 {
   "d": "अदृष्टपूर्वं हृषितोऽस्मि दृष्ट्वा भयेन च प्रव्यथितं मनो मे ।\nतदेव मे दर्शय देव रूपं प्रसीद देवेश जगन्निवास ॥ ११.४५ ॥",
   "a": "देवेश जगन्निवास ! प्रसीद । अदृष्टपूर्वं दृष्ट्वा हृषितः अस्मि । देव ! मे मनः भयेन प्रव्यथितं च । तत्‌ रूपम् एव मे दर्शय ।",
   "t": "हे भगवन् ! अद्य यावत् अदृष्टपूर्वं त्वदीयं रूपं दृष्ट्वा अतीव हर्षं प्राप्नोमि । देव ! भीत्या व्यथामपि अहम् अनुभवन् अस्मि । हे देवेश, लोकाधार ! तदेव रूपं मे दर्शय यत् पूर्वं किरीटादिमत्त्वेन सौम्यं रूपं प्रदर्शितम् ।"
 },
 {
   "d": "किरीटिनं गदिनं चक्रहस्तमिच्छामि त्वां द्रष्टुमहं तथैव ।\nतेनैव रूपेण चतुर्भुजेन सहस्रबाहो भव विश्वमूर्ते ॥ ११.४६ ॥",
   "a": "विश्वमूर्ते अहं किरीटिनं गदिनंम्‌ चक्रहस्तं त्वां तथा एव द्रष्टुम्‌ इच्छामि । सहस्रबाहो ! चतुर्भुजेन तेन रूपेण एव  (उपलक्षितः) भव ।",
   "t": "विश्वाकार ! किरीटधारित्वेन गदाधारित्वेन चक्रपाणित्वेन च यत् सौम्यं रूपं पूर्वं मां प्रदर्शितवान् असि तदेव रूपं सम्प्रति द्रष्टुमिच्छामि । हे सहस्रबाहो ! तेनैव रूपेण आविर्भव ।"
 },
 {
   "d": "श्रीभगवान् उवाच ।\nमया प्रसन्नेन तवार्जुनेदं रूपं परं दर्शितमात्मयोगात् ।\nतेजोमयं विश्वमनन्तमाद्यं यन्मे त्वदन्येन न दृष्टपूर्वम् ॥ ११.४७ ॥",
   "a": "अर्जुन ! प्रसन्नेन मया आत्मयोगात्‌ तेजोमयं विश्वम्‌ अनन्तम्‌ आद्यं यत् मे त्वदन्येन न दृष्टपूर्वम्‌ इदं परं रूपं तव दर्शितम्‌ ।",
   "t": "हे अर्जुन ! अनुग्रहबुद्धिना मया स्वसामर्थ्यात् कान्तिमयं समस्तम् अन्तशून्यं प्रथमम् एतत् उत्कृष्टं स्वरूपं ते प्रदर्शितम् । मम एतत् रूपं भवदितरेण न कदापि पूर्वं दृष्टम् ।"
 },
 {
   "d": "न वेदयज्ञाध्ययनैर्न दानैर्न च क्रियाभिर्न तपोभिरुग्रैः ।\nएवंरूपः शक्य अहं नृलोके द्रष्टुं त्वदन्येन कुरुप्रवीर ॥ ११.४८ ॥",
   "a": "कुरुप्रवीर ! त्वदन्येन नृलोके वेदयज्ञाध्ययनैः एवंरूपः अहं द्रष्टुं न शक्यः दानैः न, क्रियाभिः च न, उग्रैः तपोभिः न ।",
   "t": "कुरुश्रेष्ठ ! मृत्युलोके माम् एतादृशरूपं जनाः देवानां कल्पसूत्राधिनां वा अध्ययेन द्रष्टुं न शक्नुवन्ति । न दानेन, न कर्मणा नापि तीव्रेण तपसा । केवलं भवान् माम् ईदृशं दृष्टवान् ।"
 },
 {
   "d": "मा ते व्यथा मा च विमूढभावो दृष्ट्वा रूपं घोरमीदृङ्ममेदम् ।\nव्यपेतभीः प्रीतमनाः पुनस्त्वं तदेव मे रूपमिदं प्रपश्य ॥ ११.४९ ॥",
   "a": "घोरम्‌ ईदृक्‌ मम रूपं दृष्ट्वा ते व्यथा मा, विमूढभावः च मा । त्वं व्यपेतभीः प्रीतमनाः मे तत्‌ एव इदं रूपं पुनः प्रपश्य ।",
   "t": "भयङ्करम् ईदृशं मम इदं स्वरूपम् अवलोक्य तव भयं मास्तु । त्वम् अपगतभयः सन्तुष्टचित्तः मम स्थितपूर्वं तदेव स्वरूपं पुनः पश्य ।"
 },
 {
   "d": "सञ्जय उवाच ।\nइत्यर्जुनं वासुदेवस्तथोक्त्वा स्वकं रूपं दर्शयामास भूयः ।\nआश्वासयामास च भीतमेनं भूत्वा पुनः सौम्यवपुर्महात्मा ॥ ११.५० ॥",
   "a": "वासुदेवः इति अर्जुनं तथा उक्त्वा स्वकं रूपंम्‌ भूयः दर्शयामास । महात्मा सौम्यवपुः पुनः भूत्वा भीतम्‌ एनम्‌ आश्वासयामास च ।",
   "t": "श्रीकृष्णः एवम् अर्जुनं पूर्वोक्तप्रकारेण कथयित्वा स्वीयम् रूपं पुनः दर्शयामस । ततश्च महानुभावः सः सौम्यशरीरः सन् भयग्रस्तम् एनम् अर्जुनं सान्त्वयामास ।"
 },
 {
   "d": "अर्जुन उवाच ।\nदृष्ट्वेदं मानुषं रूपं तव सौम्यं जनार्दन ।\nइदानीमस्मि संवृत्तः सचेताः प्रकृतिं गतः ॥ ११.५१ ॥",
   "a": "जनार्दन ! सौम्यं मानुषम्‌ इदं तव रूपं दृष्ट्वा इदानीं प्रकृतिं गतः सचेताः संवृत्तः अस्मि ।",
   "t": "श्रीकृष्ण ! प्रसन्नं मानवीयम् एतत् तव रूपं दृष्ट्वा अधुना प्रसन्नमनाः प्रकृतिस्थः च सञ्जातः अस्मि ।"
 },
 {
   "d": "श्रीभगवान् उवाच ।\nसुदुर्दर्शमिदं रूपं दृष्टवानसि यन्मम ।\nदेवा अप्यस्य रूपस्य नित्यं दर्शनकाङ्क्षिणः ॥ ११.५२ ॥",
   "a": "सुदुर्दर्शं यत्‌ मम इदं रूपं दृष्टवान्‌ असि अस्य रूपस्य देवाः अपि नित्यं दर्शनकाङ्क्षिणः ।",
   "t": "मम यद् रूपम् अधुना त्वं दृष्टवान् अस्ति एतत् अतीव दुरवलोकम् । मदीयम् एतत् रूपं द्रष्टुं देवाः अपि सर्वदा आकाङ्क्षिणः भवन्ति ।"
 },
 {
   "d": "नाहं वेदैर्न तपसा न दानेन न चेज्यया ।\nशक्य एवंविधो द्रष्टुं दृष्टवानसि मां यथा ॥ ११.५३ ॥",
   "a": "अहम्‌ एवंविधः वेदैः न, तपसा न, दानेन न, इज्यया च न द्रष्टुं शक्यः यथा मां दृष्टवान्‌ असि ।",
   "t": "अहम् एवंप्रकारः निगमैः तपसा वितरणेन यज्ञेन च द्रष्टुं न शक्यः येन प्रकारेण मां दृष्टवान् असि ।"
 },
 {
   "d": "भक्त्या त्वनन्यया शक्य अहमेवंविधोऽर्जुन ।\nज्ञातुं द्रष्टुं च तत्त्वेन प्रवेष्टुं च परंतप ॥ ११.५४ ॥",
   "a": "परन्तप ! अर्जुन ! अहम्‌ अनन्यया भक्त्या तु एवंविधः तत्त्वेन ज्ञातुं द्रष्टुं च प्रवेष्टुं च शक्यः ।",
   "t": "शत्रुतापन ! अर्जुन ! अहम् अनिरतेन प्रेम्णा तु एवंप्रकारः तत्त्वतः वेदितुं द्रष्टुं च प्राप्तुं च शक्यः नान्येन उपायेन ।"
 },
 {
   "d": "मत्कर्मकृन्मत्परमो मद्भक्तः सङ्गवर्जितः ।\nनिर्वैरः सर्वभूतेषु यः स मामेति पाण्डव ॥ ११.५५ ॥",
   "a": "पाण्डव ! यः मत्कर्मकृत्‌ मत्परमः मद्भक्तः सङ्गवर्जितः सर्वभूतेषु निर्वैरः सः माम्‌ एति ।",
   "t": "अर्जुन ! यः पुरुषः मदर्थकर्मकारी मन्निष्ठः मत्सेवकः विषयसङ्गरहितः सर्वप्राणिषु द्वेषरहितः च भवति सः माम् उपगच्छति ।"
 },
 {
   "d": "अर्जुन उवाच ।\nएवं सततयुक्ता ये भक्तास्त्वां पर्युपासते\nये चाप्यक्षरमव्यक्तं तेषां के योगवित्तमाः ॥ १२.१ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "श्रीभगवान् उवाच ।\nमय्यावेश्य मनो ये मां नित्ययुक्ता उपासते\nश्रद्धया परयोपेतास्ते मे युक्ततमा मताः ॥ १२.२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "ये त्वक्षरमनिर्देश्यमव्यक्तं पर्युपासते ।\nसर्वत्रगमचिन्त्यं च कूटस्थमचलं ध्रुवम् ॥ १२.३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "संनियम्येन्द्रियग्रामं सर्वत्र समबुद्धयः ।\nते प्राप्नुवन्ति मामेव सर्वभूतहिते रताः ॥ १२.४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "क्लेशोऽधिकतरस्तेषामव्यक्तासक्तचेतसाम् ।\nअव्यक्ता हि गतिर्दुःखं देहवद्भिरवाप्यते ॥ १२.५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "ये तु सर्वाणि कर्माणि मयि संन्यस्य मत्पराः ।\nअनन्येनैव योगेन मां ध्यायन्त उपासते ॥ १२.६ ॥",
   "a": "ये तु सर्वाणि कर्माणि मयि सन्न्यस्य मत्पराः अनन्येन योगेन माम्‌ एव ध्यायन्तः उपासते । पार्थ ! अहं न चिरात्‌ मयि आवेशितचेतसाम्‌ तेषां मृत्युसंसारसागरात्‌ समुद्धर्ता भवामि । (१२.६ + १२.७)",
   "t": "पार्थ ! ये जनाः तु सर्वाणि आचरणानि मयि वासुदेवे समर्प्य मन्मनसः अनन्येन समाधिना एव मां चिन्तयन्तः भजन्ते, मयि प्रवेशितचित्तानां तेषां जनानां मरणादियुक्तात् संसारसमुद्रात् अहं शीघ्रम् उद्धारकः भवामि । (१२.६ + १२.७)"
 },
 {
   "d": "तेषामहं समुद्धर्ता मृत्युसंसारसागरात् ।\nभवामि न चिरात्पार्थ मय्यावेशितचेतसाम् ॥ १२.७ ॥",
   "a": "ये तु सर्वाणि कर्माणि मयि सन्न्यस्य मत्पराः अनन्येन योगेन माम्‌ एव ध्यायन्तः उपासते । पार्थ ! अहं न चिरात्‌ मयि आवेशितचेतसाम्‌ तेषां मृत्युसंसारसागरात्‌ समुद्धर्ता भवामि । (१२.६ + १२.७)",
   "t": "पार्थ ! ये जनाः तु सर्वाणि आचरणानि मयि वासुदेवे समर्प्य मन्मनसः अनन्येन समाधिना एव मां चिन्तयन्तः भजन्ते, मयि प्रवेशितचित्तानां तेषां जनानां मरणादियुक्तात् संसारसमुद्रात् अहं शीघ्रम् उद्धारकः भवामि । (१२.६ + १२.७)"
 },
 {
   "d": "मय्येव मन आधत्स्व मयि बुद्धिं निवेशय ।\nनिवसिष्यसि मय्येव अत ऊर्ध्वं न संशयः ॥ १२.८ ॥",
   "a": "मयि एव मनः आधत्स्व । मयि बुद्धिं निवेशय । अतः ऊर्ध्वं मयि एव निवसिष्यसि, न संशयः ।",
   "t": "परमात्मनि मयि एव चित्तं स्थापय । मयि एव मतिं योजत । ततः परं मयि एव वसिष्यसि । अत्र सन्देहः न वर्तते ।"
 },
 {
   "d": "अथ चित्तं समाधातुं न शक्नोषि मयि स्थिरम् ।\nअभ्यासयोगेन ततो मामिच्छाप्तुं धनञ्जय ॥ १२.९ ॥",
   "a": "धनञ्जय ! अथ मयि चित्तं स्थिरं समाधातुं न शक्नोषि ततः अभ्यासयोगेन माम्‌ आप्तुम्‌ इच्छ ।",
   "t": "धनञ्जय ! यदि मयि चेतः निश्चलं स्थापयितुं न शक्नोषि तर्हि चित्स्य पुनः पुनः स्थापनेन मां प्राप्तुं यतस्व ।"
 },
 {
   "d": "अभ्यासेऽप्यसमर्थोऽसि मत्कर्मपरमो भव ।\nमदर्थमपि कर्माणि कुर्वन्सिद्धिमवाप्स्यसि ॥ १२.१० ॥",
   "a": "अभ्यासे अपि असमर्थः असि मत्कर्मपरमः भव । मदर्थं कर्माणि कुर्वन्‌ अपि सिद्धिम्‌ अवाप्स्यसि ।",
   "t": "अभ्यासयोगे अपि अशक्तः भवसि चेत् सर्वदा मामुद्दिश्य कर्माणि आचर । मदर्थं कर्माणि आचरन् अपि चित्तशुद्धिं लप्स्यसे ।"
 },
 {
   "d": "अथैतदप्यशक्तोऽसि कर्तुं मद्योगमाश्रितः ।\nसर्वकर्मफलत्यागं ततः कुरु यतात्मवान् ॥ १२.११ ॥",
   "a": "अथ एतत्‌ अपि कर्तुम्‌ अशक्तः असि ततः मद्योगम्‌ आश्रितः यतात्मवान्‌ सर्वकर्मफलत्यागं कुरु ।",
   "t": "यदि विषयाकृष्टचित्तः उपपासव्रतानुष्ठानादीनि कर्माणि अपि आचरितुम् असमर्थः असि तर्हि नियतचित्तः सर्वेषां कर्मणां फलम् अविचारयन् मह्यं समर्पय ।"
 },
 {
   "d": "श्रेयो हि ज्ञानमभ्यासाज्ज्ञानाद्ध्यानं विशिष्यते ।\nध्यानात्कर्मफलत्यागस्त्यागाच्छान्तिरनन्तरम् ॥ १२.१२ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अद्वेष्टा सर्वभूतानां मैत्रः करुण एव च ।\nनिर्ममो निरहंकारः समदुःखसुखः क्षमी ॥ १२.१३ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "संतुष्टः सततं योगी यतात्मा दृढनिश्चयः ।\nमय्यर्पितमनोबुद्धिर्यो मद्भक्तः स मे प्रियः ॥ १२.१४ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यस्मान्नोद्विजते लोको लोकान्नोद्विजते च यः ।\nहर्षामर्षभयोद्वेगैर्मुक्तो यः स च मे प्रियः ॥ १२.१५ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "अनपेक्षः शुचिर्दक्ष उदासीनो गतव्यथः ।\nसर्वारम्भपरित्यागी यो मद्भक्तः स मे प्रियः ॥ १२.१६ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "यो न हृष्यति न द्वेष्टि न शोचति न काङ्क्षति ।\nशुभाशुभपरित्यागी भक्तिमान्यः स मे प्रियः ॥ १२.१७ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "समः शत्रौ च मित्रे च तथा मानापमानयोः ।\nशीतोष्णसुखदुःखेषु समः सङ्गविवर्जितः ॥ १२.१८ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "तुल्यनिन्दास्तुतिर्मौनी सन्तुष्टो येन केनचित् ।\nअनिकेतः स्थिरमतिर्भक्तिमान्मे प्रियो नरः ॥ १२.१९ ॥",
   "a": "",
   "t": ""
 },
 {
   "d": "ये तु धर्म्यामृतमिदं यथोक्तं पर्युपासते ।\nश्रद्दधाना मत्परमा भक्तास्तेऽतीव मे प्रियाः ॥ १२.२० ॥",
   "a": "",
   "t": ""
 },
 {
